	<changeSet id="01" author="Madhubabu">
	<dropDefaultValue columnName="QuickDisb" tableName="AdtRMTFinanceTypes" />
</changeSet>
<changeSet id="01.1" author="Madhubabu" dbms="postgresql">
	<sql>alter table AdtRMTFinanceTypes alter column QuickDisb DROP DEFAULT</sql>
</changeSet>

	<changeSet id="02" author="Madhubabu">
	<sql>
	
create table sai_temp as select * from AdtRMTFinanceTypes;

update AdtRMTFinanceTypes set QuickDisb = null;

alter table AdtRMTFinanceTypes modify QuickDisb number(1);

update AdtRMTFinanceTypes m set (m.QuickDisb) = (select t.QuickDisb from sai_temp t where t.AuditId = m.AuditId and t.AuditDate = m.AuditDate and t.AuditSeq = m.AuditSeq and t.AuditImage = m.AuditImage) where exists (select 1 from sai_temp t where t.AuditId = m.AuditId and t.AuditDate = m.AuditDate and t.AuditSeq = m.AuditSeq and t.AuditImage = m.AuditImage);

drop table sai_temp;
</sql>
	</changeSet>
