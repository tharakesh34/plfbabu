<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
	<property name="call.concatenate" value="+" dbms="mssql" />
	<property name="call.concatenate" value="||" dbms="oracle" />
	<property name="call.maindb" value="PLF.." dbms="mssql" />
	<property name="call.maindb" value="PLF." dbms="oracle" />


	<changeSet author="Surekha" id="01">
		<renameColumn columnDataType="bigint" newColumnName="ReturnCode"
			oldColumnName="ReturnID" tableName="AdtBounceReasons" />
	</changeSet>

	<changeSet author="Surekha" id="02">
		<modifyDataType columnName="ReturnCode" newDataType="varchar(8)"
			tableName="AdtBounceReasons" />
	</changeSet>
	<changeSet id="03" author="Surekha">
		<addColumn tableName="AdtRMTAccountTypes">
			<column name="ProfitCenter" type="bigint" defaultValue="1">
				<constraints nullable="false" />
			</column>
			<column name="CostCenter" type="bigint" />
		</addColumn>
	</changeSet>

	<changeSet id="15" author="Siva">
		<createTable tableName="AdtFinReceiptHeader">
			<column name="ReceiptID" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="ReceiptDate" type="datetime">
				<constraints nullable="false" />
			</column>
			<column name="ReceiptType" type="char(1)">
				<constraints nullable="false" />
			</column>
			<column name="RecAgainst" type="char(1)">
				<constraints nullable="false" />
			</column>
			<column name="Reference" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="ReceiptPurpose" type="varchar(20)">
				<constraints nullable="false" />
			</column>
			<column name="ReceiptMode" type="varchar(10)" />
			<column name="ExcessAdjustTo" type="char(1)" />
			<column name="AllocationType" type="char(1)">
				<constraints nullable="false" />
			</column>
			<column name="ReceiptAmount" type="number(18,0)" />
			<column name="EffectSchdMethod" type="varchar(10)" />
			<column name="Status" type="char(1)" />
			<column name="Version" type="int">
				<constraints nullable="false" />
			</column>
			<column name="LastMntBy" type="bigint" />
			<column name="LastMntOn" type="datetime" />
			<column name="RecordStatus" type="varchar(50)" />
			<column name="RoleCode" type="varchar(100)" />
			<column name="NextRoleCode" type="varchar(200)" />
			<column name="TaskId" type="varchar(50)" />
			<column name="NextTaskId" type="varchar(200)" />
			<column name="RecordType" type="varchar(50)" />
			<column name="WorkflowId" type="bigint" />
		</createTable>
	</changeSet>
	
	 <changeSet id="16" author="Siva">
		<renameColumn columnDataType="char(1)" newColumnName="ReceiptModeStatus"
			oldColumnName="Status" tableName="AdtFinReceiptHeader" />
	</changeSet>
	
</databaseChangeLog>
