	<changeSet id="1" author="Somasekhar" dbms="oracle">
		<sql>
			ALTER TABLE FINASSETTYPES RENAME COLUMN assetTypeId TO FinAssetTypeId;
			ALTER TABLE FINASSETTYPES_Temp RENAME COLUMN assetTypeId TO FinAssetTypeId;
		</sql>
	</changeSet>

	<changeSet id="2" author="Somasekhar" dbms="mssql">
		<sql>
			EXEC sp_RENAME 'FINASSETTYPES.ASSETTYPEID' ,'FINASSETTYPEID','COLUMN';
			EXEC sp_RENAME 'FINASSETTYPES_Temp.ASSETTYPEID' ,'FINASSETTYPEID','COLUMN';
		</sql>
	</changeSet>
	
	<changeSet id="3" author="Somasekhar">
		<createView viewName="FINASSETTYPES_TVIEW" replaceIfExists="true">
