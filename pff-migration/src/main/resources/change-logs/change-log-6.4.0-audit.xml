	<changeSet id="ST#1467.1" author="NagaVamsi.P" dbms="mssql, postgresql">
		<sql>
			<![CDATA[
				UPDATE AdtRMTFinanceTypes SET ASSETCLASSSETUP = 
				(Select ID From AdtASSET_CLASS_SETUP_HEADER Where Code = 'DEFAULT' and
				 ENTITYCODE = sd.EntityCode From AdtSmtDivisionDetail sd
				 Where AdtRMTFinanceTypes.FinDivision = sd.DivisionCode);
			]]>
		</sql>
	</changeSet>
	
	<changeSet id="ST#1467.1" author="NagaVamsi.P" dbms="oracle">
		<sql>
			<![CDATA[
				MERGE INTO AdtRMTFinanceTypes FT 
				USING (
				SELECT ID, DivisionCode From AdtASSET_CLASS_SETUP_HEADER HDR 
				Inner Join AdtSmtDivisionDetail sd on sd.EntityCode = HDR.EntityCode and HDR.Code = 'DEFAULT'
				) H on H.DivisionCode = FT.FinDivision
				WHEN MATCHED THEN UPDATE SET 
				ASSETCLASSSETUP = H.ID;
			]]>
		</sql>
	</changeSet>

