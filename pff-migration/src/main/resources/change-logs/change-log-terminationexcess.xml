	<changeSet id="pre_run_for_pgp" author="Adarsh" runAlways="true" dbms="postgresql">
		<sql>
			Set search_path = plf,public,pg_catalog;
		</sql>
	</changeSet>
	
	<changeSet id="ST#716.1" author="Mounika.M">
		<createTable tableName="LOANS_CLOSURES">
			<column name="ID" type="bigint" autoIncrement="true">
				<constraints nullable="false" />
			</column>
			<column name="FinID" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="ClosureAmount" type="decimal(18,0)" />
		</createTable>
	</changeSet>
	
	<changeSet id="ST#716.2" author="Mounika.M">
		<addPrimaryKey tableName="LOANS_CLOSURES" columnNames="ID"/>
	</changeSet>

	<changeSet id="ST#716.3" author="Mounika.M">
		<createTable tableName="LOAN_CLOSURE_AMOUNTS">
			<column name="ID" type="bigint" autoIncrement="true">
				<constraints nullable="false" />
			</column>
			<column name="ClosureID" type="bigint"/>
			<column name="FinID" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="ReceivableType" type="Varchar(10)"/>
			<column name="ReceivableAmt" type="decimal(18,0)"/>
			<column name="GSTAmount" type="decimal(18,0)"/>
			<column name="TDSAmount" type="decimal(18,0)"/>
		</createTable>
	</changeSet>

	<changeSet id="ST#716.2" author="Mounika.M">
		<addForeignKeyConstraint constraintName="closure_loan_id" referencedTableName="CLOSURE_LOANS" baseColumnNames="ClosureID" baseTableName="CLOSURE_LOAN_AMOUNTS" referencedColumnNames="ID"/>
	</changeSet>
	
	<changeSet id="ST#716.4" author="Mounika.M" dbms="postgresql,mssql">
		<createSequence sequenceName="SEQ_SOD_LOAN_QUEUE" minValue="1"
			maxValue="9223372036854775807" incrementBy="1" startValue="1"  />
	</changeSet>

	<changeSet id="ST#716.5" author="Mounika.M">
		<createTable tableName="SOD_LOAN_QUEUE">
			<column name="ID" type="bigint">
				<constraints nullable="false" />
			</column>
			<column name="FinID" type="bigint" />
			<column name="ThreadId" type="int" />
			<column name="StartTime" type="datetime" />
			<column name="EndTime" type="datetime" />
			<column name="Progress" type="int" />
			<column name="ErrorLog" type="varchar(2000)" />
			<column name="ResetCounterId" type="bigint" />
		</createTable>
	</changeSet>

