	</changeSet>
<changeSet id="02" author="Irfan">
	<modifyDataType tableName="ADTRMTACCOUNTTYPES" columnName="ACTYPE" newDataType="varchar(15)"/>
</changeSet>
<changeSet id="03" author="Irfan">
