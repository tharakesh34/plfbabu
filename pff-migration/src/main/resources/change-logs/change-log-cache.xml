<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<property name="add.schema" value="dbo." dbms="mssql" />
	<property name="add.schema" value="" dbms="oracle" />
	<property name="add.schema" value="" dbms="postgresql" />
	<property name="call.substr" value="substring" dbms="mssql" />
	<property name="call.substr" value="substr" dbms="oracle" />
	<property name="call.substr" value="substring" dbms="postgresql" />
	<property name="call.auditdb" value="PLFAVANSEQC.." dbms="mssql" />
	<property name="call.auditdb" value=" " dbms="oracle" />
	<property name="call.concatenate" value="+" dbms="mssql" />
	<property name="call.concatenate" value="||" dbms="oracle" />
	<property name="call.concatenate" value="||" dbms="postgresql" />
	<property name="call.collength" value="LEN" dbms="mssql" />
	<property name="call.collength" value="LENGTH" dbms="oracle" />
	<property name="call.collength" value="LENGTH" dbms="postgresql" />
	<property name="call.date" value="getdate()" dbms="mssql" />
	<property name="call.date" value="sysdate" dbms="oracle" />
	<property name="call.date" value="now()" dbms="postgresql" />

	<changeSet id="pre_run_for_pgp" author="Adarsh" runAlways="true" dbms="postgresql">
		<sql>
			Set search_path = plf,public,pg_catalog;
		</sql>
	</changeSet>

	<changeSet id="cache_1" author="murthy.y">
		<comment>Tables for cache</comment>
		<createTable tableName="cache_stats">
			<column name="Id" type="bigint" autoIncrement="true">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_cache_stats" />
			</column>
			<column name="cluster_name" type="varchar(50)">
				<constraints nullable="false" />
			</column>
			<column name="current_node" type="varchar(50)" />
			<column name="cluster_ip" type="varchar(50)" />
			<column name="cluster_size" type="int" defaultValue="0" />
			<column name="cluster_members" type="varchar(4000)" />
			<column name="cache_count" type="int" defaultValue="0" />
			<column name="cache_names" type="varchar(4000)" />
			<column name="manager_cache_status" type="varchar(50)" />
			<column name="enabled" type="boolean" defaultValue="0" />
			<column name="active" type="boolean" defaultValue="0" />
			<column name="node_count" type="int" defaultValue="0" />
			<column name="last_mnt_by" type="bigint" />
			<column name="last_mnt_on" type="datetime" />
		</createTable>
	</changeSet>

	<changeSet id="cache_2" author="murthy.y">
		<addUniqueConstraint tableName="cache_stats" columnNames="cluster_name, current_node"
			constraintName="uk_cache_stats_cl_name_cu_node" />
	</changeSet>

	<changeSet id="cache_3" author="murthy.y">
		<createTable tableName="cache_parameters">
			<column name="node_count" type="int">
				<constraints nullable="false" primaryKey="true" primaryKeyName="pk_cache_parameters" />
			</column>
			<column name="cache_verify_sleep" type="bigint" />
			<column name="cache_update_sleep" type="bigint" />
			<column name="last_mnt_by" type="bigint" />
			<column name="last_mnt_on" type="datetime" />
		</createTable>
	</changeSet>

	<changeSet id="cache_4" author="murthy.y">
		<sql>
			INSERT INTO CACHE_PARAMETERS VALUES (1,30000, 30000, 1000, CURRENT_TIMESTAMP);
		</sql>
	</changeSet>
</databaseChangeLog>