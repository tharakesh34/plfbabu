	 <changeSet id="pre_run_for_pgp" author="Jayant" runAlways="true"
		dbms="postgresql">
		<sql>
			Set search_path = plf,public,pg_catalog;
		</sql>
	</changeSet>
	
	<changeSet id="1.0" author="Satyanarayana.G">
		<addColumn tableName="Secusers">
			<column name="TempAuthType" type="varchar(10)" />
		</addColumn>
		<addColumn tableName="Secusers_temp">
			<column name="TempAuthType" type="varchar(10)" />
		</addColumn>
	</changeSet>
	<changeSet id="1.1" author="Satyanarayana.G">
		<sql>
			<![CDATA[
				UPDATE Secusers SET TempAuthType = AuthType;
				UPDATE Secusers_temp SET TempAuthType = AuthType;
			]]>
		</sql>
	</changeSet>
	<changeSet id="1.2" author="Satyanarayana.G">
		<sql>
			<![CDATA[
			UPDATE Secusers SET AuthType = null;
			UPDATE Secusers_temp SET AuthType = null;
			]]>
		</sql>
	</changeSet>
	<changeSet id="1.3_Pre" author="Satyanarayana.g" dbms="postgresql">
		<sql>
			select deps_save_and_drop_dependencies('plf','secusers');
			select deps_save_and_drop_dependencies('plf','secusers_temp');
		</sql>
	</changeSet>
	<changeSet id="1.3" author="Satyanarayana.G">
		<modifyDataType tableName="Secusers" columnName="AuthType" newDataType="varchar(10)" />
	</changeSet>
	<changeSet id="1.4" author="Satyanarayana.G">
		<modifyDataType tableName="Secusers_Temp" columnName="AuthType" newDataType="varchar(10)" />
	</changeSet>
	<changeSet id="1.3_Post" author="Satyanarayana.g" dbms="postgresql">
		<sql>
			select deps_restore_dependencies('plf','secusers');
			select deps_restore_dependencies('plf','secusers_temp');
		</sql>
	</changeSet>
	<changeSet id="1.5" author="Satyanarayana.G">
		<sql>
			<![CDATA[
			UPDATE Secusers SET AuthType = TempAuthType;
			UPDATE Secusers_temp SET AuthType = TempAuthType;
			]]>
		</sql>
	</changeSet>
	<changeSet id="1.6" author="Satyanarayana.G">
		<dropColumn tableName="Secusers" columnName="TempAuthType" />
		<dropColumn tableName="Secusers_temp" columnName="TempAuthType" />
	</changeSet>
	<changeSet id="1.7" author="Satyanarayana.G" dbms="postgresql">
		<sql>
			<![CDATA[
				UPDATE Secusers SET AuthType = TRIM(AuthType);
				UPDATE Secusers_temp SET AuthType = TRIM(AuthType);
			]]>
		</sql>
	</changeSet>
	<changeSet id="1.8" author="Satyanarayana.G" dbms="oracle">
		<sql>
			<![CDATA[
				UPDATE Secusers SET AuthType = TRIM(AuthType);
				UPDATE Secusers_temp SET AuthType = TRIM(AuthType);
			]]>
		</sql>
	</changeSet>
	<changeSet id="1.9" author="Satyanarayana.G" dbms="mssql">
		<sql>
			<![CDATA[
				UPDATE Secusers SET AuthType = RTRIM(LTRIM(AuthType));
				UPDATE Secusers_temp SET AuthType = RTRIM(LTRIM(AuthType));
			]]>
		</sql>
	</changeSet>
	</databaseChangeLog>