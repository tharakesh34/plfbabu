		<addDefaultValue columnName="YearsAtPresentAddress" tableName="adtverification_pd" defaultValue="0"/>
		<addDefaultValue columnName="NeighbourhoodFeedBack" tableName="adtverification_pd" defaultValue="0"/>
		<addDefaultValue columnName="LivingStandard" 		tableName="adtverification_pd" defaultValue="0"/>
