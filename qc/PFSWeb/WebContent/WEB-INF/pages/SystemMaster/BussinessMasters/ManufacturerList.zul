<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_manufacturer" apply="${manufacturerListCtrl}" border="none" width="100%">
			<div sclass="z-toolbar" style="padding:0px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-center">
						<button id="button_ManufacturerList_ManufacturerListSearch" label="${c:l('label_Filter')}"
							autodisable="button_ManufacturerList_ManufacturerListSearch,print,button_ManufacturerList_NewManufacturer,btnRefresh,help"
							tooltiptext="${c:l('button_ManufacturerList_ManufacturerSearch.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="print" label="${c:l('label_Print')}"
							autodisable="button_ManufacturerList_ManufacturerSearch,print,button_ManufacturerList_NewManufacturer,btnRefresh,help"
							tooltiptext="${c:l('button_ManufacturerList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button id="button_ManufacturerList_NewManufacturer" label="${c:l('label_New')}"
							autodisable="button_ManufacturerList_ManufacturerListSearch,print,button_ManufacturerList_NewManufacturer,btnRefresh,help"
							tooltiptext="${c:l('button_ManufacturerList_NewManufacturer.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="btnRefresh" label="${c:l('label_Refresh')}"
							autodisable="button_ManufacturerList_ManufacturerListSearch,print,button_ManufacturerList_NewManufacturer,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="help" label="${c:l('label_Help')}" visible="false"
							autodisable="button_ManufacturerList_ManufacturerListSearch,print,button_ManufacturerList_NewManufacturer,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_manufacturer">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label id="label_ManufacturerList_ManufacturerName"
										value="${c:l('label_ManufacturerList_ManufacturerName.value')}" />
									<listbox id="sortOperator_ManufacturerName" width="43px" mold="select" rows="1" />
									<textbox id="manufacturerName" width="100px" maxlength="50" />
									<label id="label_ManufacturerList_Description"
										value="${c:l('label_ManufacturerList_Description.value')}" />
									<listbox id="sortOperator_Description" width="43px" mold="select" rows="1" />
									<textbox id="description" width="100px" maxlength="50" />
								</row>

								<row>
									<label id="label_ManufacturerList_Channel"
										value="${c:l('label_ManufacturerList_Channel.value')}" />
									<listbox id="sortOperator_Channel" width="43px" mold="select" rows="1" />
									<extendedcombobox id="channel" />
									<label id="label_ManufacturerList_Active"
										value="${c:l('label_ManufacturerList_Active.value')}" />
									<listbox id="sortOperator_Active" width="43px" mold="select" rows="1" />
									<textbox id="active" width="100px" maxlength="50" />
								</row>
								<row>
									<label id="label_ManufacturerList_RecordStatus"
										value="${c:l('label_ManufacturerList_RecordStatus.value')}" />
									<listbox id="sortOperator_RecordStatus" width="43px" mold="select" rows="1" />
									<textbox id="recordStatus" width="100px" maxlength="50" />
									<label id="label_ManufacturerList_RecordType"
										value="${c:l('label_CovenantTypeList_RecordType.value')}" />
									<listbox id="sortOperator_RecordType" width="43px" mold="select" rows="1" />
									<listbox id="recordType" width="100px" mold="select" />
								</row>
							</rows>
						</grid>

						<listbox id="listBoxManufacturer" emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%" height="100%" multiple="false" sizedByContent="true"
							span="true">
							<listhead sizable="true">
								<listheader id="listheader_ManufacturerName"
									label="${c:l('listheader_ManufacturerName.label')}" sort="auto" hflex="min" />
								<listheader id="listheader_Description" label="${c:l('listheader_Description.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_Channel" label="${c:l('listheader_Channel.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_Active" label="${c:l('listheader_Active.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus" label="${c:l('label.RecordStatus')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordType" label="${c:l('label.RecordType')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>

				<south border="none">
					<paging id="pagingManufacturerList" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>