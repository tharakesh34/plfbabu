<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="dataSource" class="org.apache.tomcat.dbcp.dbcp2.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.postgresql.Driver" />
		<property name="url" value="jdbc:postgresql://192.168.1.26:5432/plf_hierarchy?currentSchema=plf,public" />
		<property name="username" value="postgres" />
		<property name="password" value="Pennant_123" />
		<property name="maxTotal" value="100" />
	</bean>

	<bean id="basicDao" class="com.pennanttech.pennapps.core.jdbc.SequenceDao" abstract="true">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="securityUserHierarchyDAO" class="com.pennant.backend.dao.administration.impl.SecurityUserHierarchyDAOImpl"
		parent="basicDao" />

	<bean id="securityUserHierarchyService" class="com.pennant.backend.service.administration.impl.SecurityUserHierarchyServiceImpl">
		<property name="securityUserHierarchyDAO" ref="securityUserHierarchyDAO" />
	</bean>


</beans>