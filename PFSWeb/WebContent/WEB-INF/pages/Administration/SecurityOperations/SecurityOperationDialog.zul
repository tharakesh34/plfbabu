<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_SecurityOperationDialog" border="normal"
		apply="${securityOperationDialogCtrl}" width="100%" height="100%"
		sizable="false">

		<div sclass="z-toolbar" style="padding:0px">
			<hbox pack="stretch" width="100%" widths="35%,30%,35%">

				<!-- COMMON BUTTONS -->
				<toolbar align="start" sclass="toolbar-start">
					<button id="btnNew" 
						tooltiptext="${c:l('btnNew.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
					<button id="btnEdit" 
						tooltiptext="${c:l('btnEdit.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
					<button id="btnDelete" 
						tooltiptext="${c:l('btnDelete.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
					<button id="btnSave" 
						tooltiptext="${c:l('btnSave.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
					<button id="btnCancel" 
						tooltiptext="${c:l('btnCancel.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
					<button id="btnNotes" 
						tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
				</toolbar>

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<label value="${c:l('window_SecurityOperationDialog.title')}" sclass="label-heading" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="btnHelp" visible="false"
						image="/images/icons/help.png"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
					<button id="btnClose" 
						tooltiptext="${c:l('btnClose.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"/>
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderlayoutSecurityOperation">
			<center border="none" autoscroll="true">
				<columnlayout>
					<columnchildren width="100%" style="padding: 5px">
						<panel border="none">
							<panelchildren>
								<groupbox id="gb_basicDetails"
									mold="3d">
									<grid sclass="GridLayoutNoBorder"
										fixedLayout="true" style="border:0px">
										<columns>
											<column width="150px" />
											<column />
										</columns>
										<rows>
											<row visible="true">
												<label
													id="label_SecurityOperationDialog_OprCode"
													value="${c:l('label_SecurityOperationDialog_OprCode.value')}" />
												<hbox>
													<space spacing="2px"
														sclass="mandatory" />
													<uppercasebox
														id="oprCode" maxlength="50" width="370px" />
												</hbox>
											</row>
											<row visible="true" style="vertical-align:top;">
												<label
													id="label_SecurityOperationDialog_OprDesc"
													value="${c:l('label_SecurityOperationDialog_OprDescription.value')}" />
												<hbox>
													<space spacing="2px"
														sclass="mandatory" />
													<textbox
														id="oprDesc" maxlength="100" multiline="true" rows="4"
														width="370px" />
												</hbox>
											</row>
										</rows>
									</grid>
								</groupbox>
							</panelchildren>
						</panel>
					</columnchildren>
				</columnlayout>
			</center>
			<south id="south" height="105px" border="none">
			<groupbox id="gb_statusDetails" mold="3d"
				width="100%">
				<grid sclass="GridLayoutNoBorder" fixedLayout="true"
					style="border:0px; padding:0px;">
					<columns>
						<column width="150px" />
						<column />
						<column width="150px" />
						<column />
					</columns>
					<rows>
						<row id="statusRow">
							<label
								id="label_RecordStatus"
								value="${c:l('label_RecordStatus')}" sclass="status"/>
							<label id="recordStatus" />
							<label
								id="label_RecordType"
								value="${c:l('label_RecordType')}" sclass="status"/>
							<label id="recordType" />
						</row>
						<row spans="4">
							<groupbox id="groupboxWf" width="97%">
								<caption label="${c:l('Action')}"
									style="font-weight:bold" />
								<hlayout spacing="0px">
									<radiogroup id="userAction"
										name="action" />
								</hlayout>
							</groupbox>
						</row>
					</rows>
				</grid>
			</groupbox>
		</south>
		</borderlayout>
	</window>
</zk>