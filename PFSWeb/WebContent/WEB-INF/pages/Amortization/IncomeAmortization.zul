<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_IncomeAmortization"
			apply="${incomeAmortizationCtrl}" border="border:5px" width="100%">
			<timer id="timer" repeats="true" />
			<div sclass="z-toolbar" style="padding:0px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="35%,30%,35%">

					<toolbar align="start" sclass="toolbar-start">
						<button id="btn_Start"
							label="${c:l('label_IncomeAmortization_Start')}"
							autodisable="btn_Start,btnRefresh,btnClose"
							tooltiptext="${c:l('button_IncomeAmortization_Start.tooltiptext')}"
							sclass="z-toolbarbutton" />
						<button id="btnRefresh"
							label="${c:l('label_Refresh')}"
							autodisable="btn_Start,btnRefresh,btnClose"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}"
							sclass="z-toolbarbutton" />
					</toolbar>

					<toolbar align="center" sclass="toolbar-center">
						<label id="label_Status"
							style="color: #ff4500; font-weight: bold;" />
					</toolbar>

					<toolbar align="end" sclass="toolbar-end">
						<button id="btnClose"
							label="${c:l('btnClose.label')}"
							tooltiptext="${c:l('btnClose.tooltiptext')}"
							sclass="z-toolbarbutton"
							autodisable="btn_Start,btnRefresh,btnClose" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_IncomeAmortization">
				<north border="border:5px" />
				<center border="border:5px">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="160px" />
								<column />
								<column width="160px" />
								<column />
							</columns>
							<rows>
								<row height="70px">
									<label
										value="${c:l('label_IncomeAmortization_Date.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="monthEndDate"
											width="150px" />
									</hbox>
								</row>
							</rows>
						</grid>
					</div>
				</center>
			</borderlayout>
		</window>
	</window>
</zk>