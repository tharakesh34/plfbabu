<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_AdditionalFieldsList"  apply="${additionalFieldsListCtrl}"
		border="none" width="100%">
			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="30%,40%,30%">
	
					<!-- COMMON BUTTONS -->
					<label value="" />	
					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-start">
						<button
							id="button_AdditionalFieldsList_AdditionalFieldsSearchDialog" 
							label = "${c:l('label_Filter')}"
							autodisable="button_AdditionalFieldsList_AdditionalFieldsSearchDialog,button_AdditionalFieldsList_PrintList,button_AdditionalFieldsList_NewAdditionalFields,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_AdditionalFieldsList_AdditionalFieldsSearchDialog.tooltiptext')}" />
						<button id="button_AdditionalFieldsList_PrintList"
							 label = "${c:l('label_Print')}"
							autodisable="button_AdditionalFieldsList_AdditionalFieldsSearchDialog,button_AdditionalFieldsList_PrintList,button_AdditionalFieldsList_NewAdditionalFields,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_AdditionalFieldsList_PrintList.tooltiptext')}" />
					</toolbar>
	
					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button id="button_AdditionalFieldsList_NewAdditionalFields"
							 label = "${c:l('label_New')}"
							autodisable="button_AdditionalFieldsList_AdditionalFieldsSearchDialog,button_AdditionalFieldsList_PrintList,button_AdditionalFieldsList_NewAdditionalFields,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_AdditionalFieldsList_NewAdditionalFields.tooltiptext')}" />
						<button id="btnRefresh" 
							label = "${c:l('label_Refresh')}"
							autodisable="button_AdditionalFieldsList_AdditionalFieldsSearchDialog,button_AdditionalFieldsList_PrintList,button_AdditionalFieldsList_NewAdditionalFields,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="btnHelp" 
							label = "${c:l('label_Help')}"
							autodisable="button_AdditionalFieldsList_AdditionalFieldsSearchDialog,button_AdditionalFieldsList_PrintList,button_AdditionalFieldsList_NewAdditionalFields,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_AdditionalFieldsList">
				<north border="none" />
	
				<center border="none">

					<listbox id="listBoxAdditionalFields"  vflex="true" tooltiptext="${c:l('listbox.tooltiptext')}" width="100%" height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_Code"
								label="${c:l('listheader_Code.label')}" sort="auto"
								width="11%" />
							<listheader id="listheader_Description" label="${c:l('listheader_Description.label')}" sort="auto" 
								width="69%" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								width="10%" />
						</listhead>		
			
					</listbox>
				</center>
				
				<south border="none" >
					<paging id="pagingAdditionalFieldsList" height="35px"/>
				</south>
				
			</borderlayout>
	</window>
</zk>