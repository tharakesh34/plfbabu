<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	
	<window>
		<window id="window_DmsDocumentDetailList"  apply="${dmsDocumentDetailListCtrl}" border="none" width="100%" >
			<div sclass="z-toolbar" style="padding:0px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
	
					<!-- COMMON BUTTONS -->
					<label value="" />	
					<!-- SEARCH AREA -->
					<toolbar align="center" style="toolbar-center">
						<button  id="button_DmsDocumentDetailList_DmsDocumentDetailSearch" label="${c:l('label_Filter')}"
							autodisable="button_DmsDocumentDetailList_DmsDocumentDetailSearch,btnRefresh"
							tooltiptext="${c:l('button_DmsDocumentDetailList_DmsDocumentDetailSearch.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button id="btnRefresh" label="${c:l('label_Refresh')}"
							autodisable="button_DmsDocumentDetailList_DmsDocumentDetailSearch,btnRefresh"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_DmsDocumentDetailList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true" >
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
							
								<row></row>
								<row>
									<label id="label_DmsDocumentDetailList_FinReference" value="${c:l('label_DmsDocumentDetailList_FinReference.value')}" />
									<listbox id="sortOperator_FinReference" width="43px" mold="select" rows="1" emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
	   								<textbox id ="finReference"/>
									
									<label id="label_DmsDocumentDetailList_DmsDocumentStatus" value="${c:l('label_DmsDocumentDetailList_DmsDocumentStatus.value')}" />
									<listbox id="sortOperator_DmsDocumentStatus" width="43px" mold="select" rows="1" emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
	   								<combobox id ="dmsDocumentStatus" width="100px"/>
	   							</row>
	   							<row></row>
							</rows>
						</grid>

					<listbox id="listBoxDmsDocumentDetail" emptyMessage="${c:l('listbox.emptyMessage')}" tooltiptext="${c:l('listbox.tooltiptext')}" width="100%" height="100%" multiple="false" sizedByContent="true" span="true">
						<listhead sizable="true">
							<listheader id="listheader_DmsDocFinReference" label="${c:l('listheader_DmsDocFinReference.label')}" sort="auto"  hflex="min"  />
							<listheader id="listheader_DmsDocRef" label="${c:l('listheader_DmsDocRef.label')}" sort="auto"  hflex="min"  />
							<listheader id="listheader_DmsId" label="${c:l('listheader_DmsId.label')}" sort="auto"  hflex="min"  />
							<listheader id="listheader_DmsDocumentStatus" label="${c:l('listheader_DmsDocumentStatus.label')}" sort="auto" hflex="min"  />
						</listhead>		
					</listbox>
				</div>	
			</center>

				<south border="none" >
					<paging id="pagingDocumentDetailList" height="35px"/>
				</south>
	  </borderlayout>
	</window>
	</window>
	
</zk>