<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CommidityLoanDetailDialogList" border="normal"
		apply="${finCommidityLoanDetailListCtrl}" width="100%" height="100%"
		sizable="false">

		<borderlayout id="borderlayoutCommidityLoanDetail"
			style="padding-top:10px">
			<center border="none">
				<groupbox zclass="none;">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="220px" />
							<column />
							<column width="220px" />
							<column />
						</columns>
						<rows>
							<row>
								<label id="label_Commidity_BrokerName" value="${c:l('label_Commidity_BrokerName.value')}" />
								<hbox>
									<space spacing="2px" sclass="mandatory" />
									<textbox id="brokerName" width="150px" visible="false"/>
									<textbox id="lovDescbrokerName" readonly="true" width="180px" />
									<button id="btnSearchbrokerName" image="/images/icons/LOVSearch.png" height="24px" />
								</hbox>
								<label  value="${c:l('label_Commidity_FinAmount')}" />
								<hbox>
									<decimalbox id="finAmount" width="162px" readonly="true"/>
								</hbox>
							</row>
							<row>
								<label id="label_Commidity_SplInstruction" value="${c:l('label_Commidity_SplInstruction.value')}" />
								<hbox>
									<space spacing="2px" />
									<textbox id="splInstruction" maxlength="200" width="250px" rows="2" />
								</hbox>
								<label value="${c:l('label_Commidity_TotalProfit')}" />
								<hbox>
									<decimalbox id="totalProfit" width="162px"  maxlength="25" readonly="true" />
								</hbox>
								
							</row>
						</rows>
					</grid>

					<div sclass="z-toolbar" style="padding:0"
						height="24px">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" height="24px" width="100%"
							style=" padding:1px;">
							<toolbar align="start"
								style="border:none;">
								<label
									value="${c:l('panel_CommidityLoanDetailList.title')}"
									sclass="listboxHeading">
								</label>
							</toolbar>
							<toolbar align="end"
								style="float:right; border-style: none; padding:0px;"
								height="24px">
								<button
									id="button_CommidityLoanDetailList_NewCommidityLoanDetail"
									height="24px" label="${c:l('label_New')}"
									tooltiptext="${c:l('button_CommidityLoanDetailList_NewCommidityLoanDetail.tooltiptext')}" />
							</toolbar>
						</hbox>
					</div>
					<listbox id="listBoxCommidityLoanDetail"
						fixedLayout="true" vflex="true" span="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						 multiple="false" sizedByContent="true">
						<listhead sizable="true">
							<listheader id="listheader_LoanRefNumber"
								label="${c:l('listheader_Commidity_LoanRefNumber.label')}"
								sort="auto" hflex="min" visible="false" />
							<listheader id="listheader_ItemType"
								label="${c:l('listheader_Commidity_ItemType.label')}"
								sort="auto" hflex="min" />
							<listheader id="listheader_Quantity"
								label="${c:l('listheader_Commidity_Quantity.label')}"
								sort="auto" align="right" hflex="min" />
							<listheader id="listheader_UnitBuyPrice"
								label="${c:l('listheader_Commidity_UnitBuyPrice.label')}"
								sort="auto" align="right" hflex="min" />
							<listheader id="listheader_BuyAmount"
								label="${c:l('listheader_Commidity_BuyAmount.label')}"
								sort="auto" align="right" hflex="min" />
							<listheader id="listheader_UnitSellPrice"
								label="${c:l('listheader_Commidity_UnitSellPrice.label')}"
								sort="auto" align="right" hflex="min" />
							<listheader id="listheader_SellAmount"
								label="${c:l('listheader_Commidity_SellAmount.label')}"
								sort="auto" align="right" hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</groupbox>
			</center>
		</borderlayout>
	</window>
</zk>
