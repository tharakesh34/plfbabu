<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window id="window_ReportPromptFilterCtrl" border="normal"
		closable="true" title="Report Filter" width="800px" height="150px"
		sizable="false" apply="${reportGenerationPromptDialogCtrl}">

		<borderlayout id="borderlayout">
			<north size="30px" border="none">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="70%,30%">
					<toolbar align="start" height="22px"
						style=" border-style: none;">
						<hbox align="center">
							<label
								value="${c:l('label_Search_Template.label')}" />
							<space></space>
							<combobox id="cbSelectTemplate"
								width="200px"
								tooltiptext="${c:l('label_Select_Template.label')}" />
							<button id="btnSaveTemplate" height="20"
								label="${c:l('btnSave.label')}"
								tooltiptext="${c:l('label_Add_Template.tooltipText')}" />
							<button id="btnDeleteTemplate" height="20"
								disabled="true" label="${c:l('btnDelete.label')}"
								tooltiptext="${c:l('label_Delete_Template.tooltipText')}" />
						</hbox>
					</toolbar>

				</hbox>
			</north>
			<center border="none" autoscroll="true">
				<grid id="dymanicFieldsGrid" sclass="GridLayoutNoBorder"
					fixedLayout="true">
					<columns>
						<column width="22%" />
						<column width="50px" />
						<column />

					</columns>
					<rows id="dymanicFieldsRows">
						<row height="20px" />
						<row id="rows_formatType" visible="false">
							<label
								id="label_ReportPromptFilterCtrl_ReportFormat"
								value="${c:l('label_ReportPromptFilterCtrl_ReportFormat.value')}" />
							<space spacing="2px" />
							<radiogroup>
								<radio id="pdfFormat"
									label="${c:l('label_ReportPromptFilterCtrl_PDFFormat.value')}"
									selected="true" width="200px" />
								<radio id="excelFormat"
									label="${c:l('label_ReportPromptFilterCtrl_ExcelFormat.value')}" />
							</radiogroup>
						</row>
					</rows>
				</grid>
			</center>
			<south border="none" margins="1,0,0,0" size="30px"
				splittable="false">
				<div id="divSouth" align="left" width="100%">
					<grid>
						<rows>
							<row valign="middle">
								<hbox align="start">
									<button id="btnSearch" height="20"
										label="${c:l('btnSearch.label')}"
										tooltiptext="${c:l('btnSearch.tooltiptext')}" />
									<button id="btnClear" height="20"
										label="${c:l('btnClear.label')}"
										tooltiptext="${c:l('btnClear.tooltiptext')}" />
									<button id="btnClose" height="20"
										label="${c:l('btnClose.label')}"
										tooltiptext="${c:l('btnClose.tooltiptext')}" />
									<label
										id="label_SecurityUserSearchResult" />
								</hbox>
							</row>
						</rows>
					</grid>
				</div>
			</south>
		</borderlayout>
	</window>
</zk>