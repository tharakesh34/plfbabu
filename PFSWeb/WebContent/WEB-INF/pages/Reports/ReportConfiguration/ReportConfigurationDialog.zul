<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_ReportConfigurationDialog"
			title="${c:l('window_ReportConfigurationDialog.title')}"
			border="normal" apply="${reportConfigurationDialogCtrl}" width="100%"
			height="100%" sizable="false">

			<div sclass="z-toolbar" style="padding:0">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%">

					<!-- COMMON BUTTONS -->
					<toolbar align="start"
						style="float:left; border-style: none;">
						<button id="btnNew" visible="false"
							 tooltiptext="${c:l('btnNew.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnEdit" visible="false"
							 tooltiptext="${c:l('btnEdit.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnDelete" visible="false"
							 tooltiptext="${c:l('btnDelete.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnSave" visible="false"
							 tooltiptext="${c:l('btnSave.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnCancel" visible="false"
							 tooltiptext="${c:l('btnCancel.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnNotes" 
							tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false" />
					</toolbar>

					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="float:left; border-style: none;">
							<button id="btnPreviewReport" 
							image="/images/icons/icon-pdf_16x16.png"
							tooltiptext="${c:l('btnPreviewReportView.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end"
						style="float:right; border-style: none;">
						<button id="btnHelp" 
							label = "${c:l('label_Help')}"
							tooltiptext="${c:l('btnHelp.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnClose" 
							tooltiptext="${c:l('btnClose.tooltiptext')}"
							autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderlayoutReportConfiguration">
				<center border="none" autoscroll="true">
					<div>
						<groupbox id="gb_basicDetails">
							<grid sclass="GridLayoutNoBorder"
								fixedLayout="true" style="border:0px">
								<columns>
									<column width="150px" />
									<column />
									<column width="150px" />
									<column />
								</columns>
								<rows>
									<row id="row_Zero" visible="true">
										<label
											id="label_ReportConfigurationDialog_ReportName"
											value="${c:l('label_ReportConfigurationDialog_ReportName.value')}" />
										<hlayout
											id="hlayout_ReportName">
											<space id="space_ReportName"
												spacing="2px" sclass="mandatory" />
											<textbox id="reportName"
												maxlength="100" width="250px" />
										</hlayout>

										<label
											id="label_ReportConfigurationDialog_ReportHeading"
											value="${c:l('label_ReportConfigurationDialog_ReportHeading.value')}" />
										<hlayout
											id="hlayout_ReportHeading">
											<space
												id="space_ReportHeading" spacing="2px" sclass="mandatory" />
											<textbox id="reportHeading"
												maxlength="1000" width="350px" />
										</hlayout>

									</row>
									<row id="row_One" visible="true">
										<label
											id="label_ReportConfigurationDialog_PromptRequired"
											value="${c:l('label_ReportConfigurationDialog_PromptRequired.value')}" />
										<hlayout
											id="hlayout_PromptRequired">
											<space
												id="space_PromptRequired" spacing="2px" />
											<checkbox
												id="promptRequired" checked="true" />
										</hlayout>

										<label
											id="label_ReportConfigurationDialog_ShowTempLibrary"
											value="${c:l('label_ReportConfigurationDialog_ShowTempLibrary.value')}" />
										<hlayout
											id="hlayout_ShowTempLibrary">
											<space
												id="space_ShowTempLibrary" spacing="2px" />
											<checkbox
												id="showTempLibrary" checked="false" />
										</hlayout>

									</row>
									<row id="row_Two" visible="true">

										<label
											id="label_ReportConfigurationDialog_ReportJasperName"
											value="${c:l('label_ReportConfigurationDialog_ReportJasperName.value')}" />
										<hlayout
											id="hlayout_ReportJasperName">
											<space
												id="space_ReportJasperName" spacing="2px"
												sclass="mandatory" />
											<textbox
												id="reportJasperName" maxlength="100" width="250px" />
										</hlayout>

										<label
											id="label_ReportConfigurationDialog_DataSourceName"
											value="${c:l('label_ReportConfigurationDialog_DataSourceName.value')}" />
										<hlayout
											id="hlayout_DataSourceName">
											<space
												id="space_DataSourceName" spacing="2px" sclass="mandatory" />
											<combobox id="dataSourceName"
												width="150px" maxlength="50">
											</combobox>
										</hlayout>
									</row>
									<row id="row_Three"
										visible="true">
										<label
											id="label_ReportConfigurationDialog_MenuItemCode"
											value="${c:l('label_ReportConfigurationDialog_MenuItemCode.value')}" />
										<hlayout
											id="hlayout_MenuItemCode">
											<space
												id="space_MenuItemCode" spacing="2px" sclass="mandatory" />
											<textbox id="menuItemCode"
												maxlength="100" width="350px" />
										</hlayout>
									</row>
								</rows>
							</grid>
						</groupbox>
						<separator />
						<groupbox id="gb_ReportFilterFields" mold="3d">
							<caption label="Report Filter Fields"
								style="font-weight:bold; color:#FF6600" />
							<div sclass="z-toolbar" style="padding:0"
								>
								<hbox pack="stretch"
									sclass="hboxRemoveWhiteStrips"  width="100%"
									style=" padding:0px;">
									<!-- COMMON BUTTONS -->
									<toolbar align="start"
										style="float:left; border-style: none; padding:0px;"
										width="150px" >
										<hbox align="center"
											style="padding: 0px">
											<label
												value=" "
												style="font-weight:bold; font-size: 11px;" />
										</hbox>
									</toolbar>
									<!-- CRUD BUTTONS -->
									<toolbar align="end"
										style="float:right; border-style: none; padding:0px;"
										>
										<button
											id="btnNew_ReportFilterFields" 
											label = "${c:l('label_New')}"
											tooltiptext="${c:l('btnNew_ReportFilterFields.tooltiptext ')}"
											visible="false" />
									</toolbar>
									<space width="2px" />
								</hbox>
							</div>

							<listbox id="listBoxReportFilterFields"
								vflex="true" tooltiptext="${c:l('listbox.tooltiptext')}"
								width="100%" height="200px" multiple="false">
								<listhead sizable="true">
									<listheader
										id="listheader_ReportFilterFields_FieldName" label="${c:l('listheader_FieldName.label')}"
										sort="false" width="20%" />
									<listheader
										id="listheader_ReportFilterFields_FieldType"
										label="${c:l('listheader_FieldType.label')}" sort="false" width="20%" />
									<listheader
										id="listheader_ReportFilterFields_FieldLabel"
										label="${c:l('listheader_FieldLabel.label')}" sort="false" width="15%" />
									<listheader
										id="listheader_ReportFilterFields_FieldDBName"
										label="${c:l('listheader_FieldDBName.label')}" sort="false" width="20%" />
									<listheader
										id="listheader_ReportFilterFields_Manditory"
										label="${c:l('listheader_ReportFilterFields_Manditory.label')}" sort="false"
										width="15%" />
									<listheader
										id="listheader_ReportFilterFields_sequenceOrder"
										label="${c:l('listheader_ReportFilterFields_sequenceOrder.label')}" sort="false"
										width="10%" />
								</listhead>
							</listbox>
							<paging id="pagingReportFilterFieldsList"
								height="22px" visible="false" />
						</groupbox>
					</div>
				</center>

				<south id="south" height="105px" border="none">
					<groupbox id="gb_statusDetails" mold="3d"
						width="100%" visible="false">
						<grid sclass="GridLayoutNoBorder"
							fixedLayout="true" style="border:0px; padding:0px;">
							<columns>
								<column width="150px" />
								<column />
								<column width="150px" />
								<column />
							</columns>
							<rows>
								<row id="statusRow">
									<label
										id="label_ReportConfigurationDialog_RecordStatus"
										value="${c:l('label_ReportConfigurationDialog_RecordStatus.value')}"
										sclass="status" />
									<label id="recordStatus" />
									<label
										id="label_ReportConfigurationDialog_RecordType"
										value="${c:l('label_ReportConfigurationDialog_RecordType.value')}"
										sclass="status" />
									<label id="recordType" />
								</row>
								<row spans="4">
									<groupbox id="groupboxWf"
										width="97%">
										<caption
											label="${c:l('Action')}" />
										<hlayout spacing="0px">
											<radiogroup id="userAction"
												name="action" />
										</hlayout>
									</groupbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>
