<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
		<window id="window_PropertyDetailDialog" border="normal"
			apply="${propertyDetailDialogCtrl}" width="100%" height="100%" sizable="false">
		<div sclass="z-toolbar" style="padding:0">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="35%,30%,35%">
				
				<!-- COMMON BUTTONS -->
				<toolbar align="start" sclass="toolbar-start">

					<button id="btnNew"  tooltiptext="${c:l('btnNew.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
					<button id="btnEdit"  tooltiptext="${c:l('btnEdit.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
					<button id="btnDelete"  tooltiptext="${c:l('btnDelete.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
					<button id="btnSave"  tooltiptext="${c:l('btnSave.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
					<button id="btnCancel"  tooltiptext="${c:l('btnCancel.tooltiptext')}"/>
					<button id="btnNotes"  tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
				</toolbar>
				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<label value="${c:l('window_PropertyDetailDialog.title')}" sclass="label-heading"></label>
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="btnHelp"  label = "${c:l('label_Help')}" tooltiptext="${c:l('btnHelp.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
					<button id="btnClose"  tooltiptext="${c:l('btnClose.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"/>
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderlayoutPropertyDetail">
			<center border="none" autoscroll="true">
			<groupbox id="gb_basicDetails" mold="3d">
				<grid sclass="GridLayoutNoBorder" fixedLayout="true" style="border:0px">
					<columns>
						<column width="150px" />
						<column />
					</columns>
					<rows>
						<row visible="true">
							<label id = "label_PropertyDetailDialog_PropertyDetailDesc" value="${c:l('label_PropertyDetailDialog_PropertyDetailDesc.value')}" />
						<hbox>
						<space spacing="2px" sclass="mandatory"/>

						  <textbox id = "propertyDetailDesc" maxlength="50"
						  
							width="450px" 
							/>
						</hbox>
						</row>
						<row id="statusRow">
							<label id = "label_PropertyDetailDialog_RecordStatus" value="${c:l('label_PropertyDetailDialog_RecordStatus.value')}" />
							<label id = "recordStatus" />
						</row>
						<row spans="2">
							<label value="   " />
						</row>
						<row spans="2">
							<label value="   " />
						</row>
						<row spans="2">
							<groupbox id = "groupboxWf" width="97%">
								<caption label = "${c:l('Action')}" />
								<hbox>
									<radiogroup id = "userAction" name="action" />
								</hbox>
							</groupbox>
						</row>
					</rows>
				</grid>
			</groupbox>
		</center>
		</borderlayout>
	</window>
</zk> 