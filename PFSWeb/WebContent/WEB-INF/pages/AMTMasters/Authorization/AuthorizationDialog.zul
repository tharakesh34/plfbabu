<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_AuthorizationDialog"  border="normal" apply="${authorizationDialogCtrl}" width="100%" height="100%" sizable="false">
			<div sclass="z-toolbar" style="padding:0">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
					<!-- COMMON BUTTONS -->
					<toolbar align="start" style="float:left; border-style: none;">
						<button id="btnNew" visible="false"  tooltiptext="${c:l('btnNew.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnEdit" visible="false"  tooltiptext="${c:l('btnEdit.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnDelete" visible="false"  tooltiptext="${c:l('btnDelete.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnSave" visible="false"  tooltiptext="${c:l('btnSave.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnCancel" visible="false"  tooltiptext="${c:l('btnCancel.tooltiptext')}" />
						<button id="btnNotes" visible="false"  tooltiptext="${c:l('btnNotes.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					</toolbar>
					<!-- SEARCH AREA -->
					<toolbar align="center" style="float:left; border-style: none;">
						<label value="${c:l('window_AuthorizationDialog.title')}"
								sclass="label-heading" />
					</toolbar>
					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="float:right; border-style: none;">
						<button id="btnHelp"   label="${c:l('label_Help')}" tooltiptext="${c:l('btnHelp.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						<button id="btnClose"  tooltiptext="${c:l('btnClose.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderlayoutAuthorization">
				<center border="none" autoscroll="true">
					<groupbox id="gb_basicDetails" mold="3d">
						<grid sclass="GridLayoutNoBorder" fixedLayout="true" style="border:0px">
							<columns>
								<column width="15%" />
								<column width="35%" />
								<column width="15%" />
								<column width="35%" />
							</columns>
							<rows>
								<row id="row0">
									<label id="label_AuthType" value="${c:l('label_AuthorizationDialog_AuthType.value')}" />
									<hlayout id="hlayout_AuthType">
										<space id="space_AuthType" spacing="2px" />
										<combobox id="authType" width="180px" readonly="true"/>
									</hlayout>
									<label id="label_AuthUserId" value="${c:l('label_AuthorizationDialog_AuthUserId.value')}" />
									<hlayout id="hlayout_AuthUserId">
										<space id="space_AuthUserId" spacing="2px" />
										<hlayout spacing="0px">
											<longbox id="authUserId" width="450px" visible="false" />
											<textbox id="authUserIdName" width="200px" readonly="true" />
											<button id="btnSearchauthUserId" image="/images/icons/LOVSearch.png"  />
										</hlayout>
									</hlayout>
								</row>
								<row id="row1">
									<label id="label_AuthName" value="${c:l('label_AuthorizationDialog_AuthName.value')}" />
									<hlayout id="hlayout_AuthName">
										<space id="space_AuthName" spacing="2px" />
										<textbox id="authName" maxlength="50" width="150px" />
									</hlayout>
									<label id="label_AuthDept" value="${c:l('label_AuthorizationDialog_AuthDept.value')}" />
									<hlayout id="hlayout_AuthDept">
										<space id="space_AuthDept" spacing="2px" />
										<hlayout spacing="0px">
											<textbox id="authDept" width="90px" visible="false" />
											<textbox id="authDeptName" width="200px" readonly="true" />
											<button id="btnSearchAuthDept" image="/images/icons/LOVSearch.png"  />
										</hlayout>
									</hlayout>
								</row>
								<row id="row2">
									<label id="label_AuthDesig" value="${c:l('label_AuthorizationDialog_AuthDesig.value')}" />
									<hlayout id="hlayout_AuthDesig">
										<space id="space_AuthDesig" spacing="2px" />
										<hlayout spacing="0px">
											<textbox id="authDesig" width="450px" visible="false" />
											<textbox id="authDesigName" width="200px" readonly="true" />
											<button id="btnSearchAuthDesig" image="/images/icons/LOVSearch.png"  />
										</hlayout>
									</hlayout>
									<label id="label_AuthSignature" value="${c:l('label_AuthorizationDialog_AuthSignature.value')}" />
									<hlayout id="hlayout_AuthSignature">
										<space id="space_AuthSignature" spacing="2px" />
										<textbox id="authSignature" maxlength="50" width="150px" />
									</hlayout>
								</row>
							</rows>
						</grid>
					</groupbox>
				</center>
				<south id="south" height="105px" border="none">
					<groupbox id="gb_statusDetails" mold="3d" width="100%">
						<grid sclass="GridLayoutNoBorder" fixedLayout="true" style="border:0px; padding:0px;">
							<columns>
								<column width="150px" />
								<column />
								<column width="150px" />
								<column />
							</columns>
							<rows>
								<row id="statusRow">
									<label id="label_RecordStatus" value="${c:l('label_RecordStatus')}" sclass="status" />
									<label id="recordStatus" />
									<label id="label_RecordType" value="${c:l('label_RecordType')}" sclass="status" />
									<label id="recordType" />
								</row>
								<row spans="4">
									<groupbox id="groupboxWf" width="97%">
										<caption label="${c:l('Action')}" style="font-weight:bold" />
										<hlayout spacing="0px">
											<radiogroup id="userAction" name="action" />
										</hlayout>
									</groupbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>
