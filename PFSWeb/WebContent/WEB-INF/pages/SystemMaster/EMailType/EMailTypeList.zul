<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_EMailTypeList" apply="${eMailTypeListCtrl}"
			border="none" width="100%">

			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />

					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-center">
						<button
							id="button_EMailTypeList_EMailTypeSearchDialog" 
							label = "${c:l('label_Filter')}"
							autodisable="button_EMailTypeList_EMailTypeSearchDialog,button_EMailTypeList_PrintList,
											  button_EMailTypeList_NewEMailType,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_EMailTypeList_EMailTypeSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="button_EMailTypeList_PrintList"
							 label = "${c:l('label_Print')}"
							autodisable="button_EMailTypeList_EMailTypeSearchDialog,button_EMailTypeList_PrintList,
											  button_EMailTypeList_NewEMailType,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_EMailTypeList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end"  sclass="toolbar-end">
						<button id="button_EMailTypeList_NewEMailType"
							 label = "${c:l('label_New')}"
							autodisable="button_EMailTypeList_EMailTypeSearchDialog,button_EMailTypeList_PrintList,
											  button_EMailTypeList_NewEMailType,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_EMailTypeList_NewEMailType.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="btnRefresh" 
							label = "${c:l('label_Refresh')}"
							autodisable="button_EMailTypeList_EMailTypeSearchDialog,button_EMailTypeList_PrintList,
											  button_EMailTypeList_NewEMailType,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="btnHelp" 
							label = "${c:l('label_Help')}"
							autodisable="button_EMailTypeList_EMailTypeSearchDialog,button_EMailTypeList_PrintList,
											  button_EMailTypeList_NewEMailType,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_EMailTypeList">
				<north border="none" />

				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="130px" />
								<column width="50px" />
								<column />
								<column width="130px" />
								<column width="50px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										id="label_EMailTypeSearch_EmailTypeCode"
										value="${c:l('label_EMailTypeSearch_EmailTypeCode.value')}" />
									<listbox
										id="sortOperator_emailTypeCode" width="43px" mold="select"
										rows="1" />
									<uppercasebox id="emailTypeCode"
										width="72px" maxlength="8" />
									<label
										id="label_EMailTypeSearch_EmailTypeDesc"
										value="${c:l('label_EMailTypeSearch_EmailTypeDesc.value')}" />
									<listbox
										id="sortOperator_emailTypeDesc" width="43px" mold="select"
										rows="1" />
									<textbox id="emailTypeDesc"
										width="300px" maxlength="50" />
								</row>
								<row>
									<label
										id="label_EMailTypeSearch_EmailTypePriority"
										value="${c:l('label_EMailTypeSearch_EmailTypePriority.value')}" />
									<listbox
										id="sortOperator_emailTypePriority" width="43px" mold="select"
										rows="1" />
									<intbox id="emailTypePriority"
										width="100px" maxlength="10" />
									<label
										id="label_EMailTypeSearch_EmailTypeIsActive"
										value="${c:l('label_EMailTypeSearch_EmailTypeIsActive.value')}" />
									<listbox
										id="sortOperator_emailTypeIsActive" width="43px" mold="select"
										rows="1" />
									<checkbox id="emailTypeIsActive"
										checked="false" />
								</row>
								<row id="row_AlwWorkflow">
									<label
										id="label_EMailTypeSearch_RecordStatus"
										value="${c:l('label_EMailTypeSearch_RecordStatus.value')}" />
									<listbox
										id="sortOperator_recordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_EMailTypeSearch_RecordType"
										value="${c:l('label_EMailTypeSearch_RecordType.value')}" />
									<listbox
										id="sortOperator_recordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>
						<listbox id="listBoxEMailType" vflex="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false" span="true">
							<listhead sizable="true">
								<listheader
									id="listheader_EmailTypeCode"
									label="${c:l('listheader_EmailTypeCode.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_EmailTypeDesc"
									label="${c:l('listheader_EmailTypeDesc.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_EmailTypePriority"
									label="${c:l('listheader_EmailTypePriority.label')}"
									sort="auto" hflex="min" />
								<listheader
									id="listheader_EmailTypeIsActive"
									label="${c:l('listheader_EmailTypeIsActive.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingEMailTypeList" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>