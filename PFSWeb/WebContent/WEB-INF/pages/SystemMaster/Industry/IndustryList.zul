<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_IndustryList" apply="${industryListCtrl}"
			border="none" width="100%">

			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />

					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="border-style: none;">
						<button
							id="button_IndustryList_IndustrySearchDialog" 
							label = "${c:l('label_Filter')}"
							autodisable="button_IndustryList_IndustrySearchDialog,button_IndustryList_PrintList,
											   button_IndustryList_NewIndustry,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_IndustryList_IndustrySearchDialog.tooltiptext')}" />
						<button id="button_IndustryList_PrintList"
							 label = "${c:l('label_Print')}"
							autodisable="button_IndustryList_IndustrySearchDialog,button_IndustryList_PrintList,
											   button_IndustryList_NewIndustry,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_IndustryList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button id="button_IndustryList_NewIndustry"
							 label = "${c:l('label_New')}"
							autodisable="button_IndustryList_IndustrySearchDialog,button_IndustryList_PrintList,
											   button_IndustryList_NewIndustry,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_IndustryList_NewIndustry.tooltiptext')}" />
						<button id="btnRefresh" 
							label = "${c:l('label_Refresh')}"
							autodisable="button_IndustryList_IndustrySearchDialog,button_IndustryList_PrintList,
											   button_IndustryList_NewIndustry,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="btnHelp" 
							label = "${c:l('label_Help')}"
							autodisable="button_IndustryList_IndustrySearchDialog,button_IndustryList_PrintList,
											   button_IndustryList_NewIndustry,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_IndustryList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="130px" />
								<column width="50px" />
								<column />
								<column width="130px" />
								<column width="50px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										id="label_IndustrySearch_IndustryCode"
										value="${c:l('label_IndustrySearch_IndustryCode.value')}" />
									<listbox
										id="sortOperator_industryCode" width="43px" mold="select"
										rows="1" />
									<uppercasebox id="industryCode"
										width="100px" maxlength="8" />
									<label
										id="label_IndustrySearch_IndustryDesc"
										value="${c:l('label_IndustrySearch_IndustryDesc.value')}" />
									<listbox
										id="sortOperator_industryDesc" width="43px" mold="select"
										rows="1" />
									<textbox id="industryDesc"
										width="320px" maxlength="50" />
								</row>
								<row>
									<label
										id="label_IndustrySearch_IndustryLimit"
										value="${c:l('label_IndustrySearch_IndustryLimit.value')}" />
									<listbox
										id="sortOperator_industryLimit" width="43px" mold="select"
										rows="1" />
									<decimalbox id="industryLimit"
										width="250px" maxlength="21" />
									<label
										id="label_IndustrySearch_IndustryIsActive"
										value="${c:l('label_IndustrySearch_IndustryIsActive.value')}" />
									<listbox
										id="sortOperator_industryIsActive" width="43px" mold="select"
										rows="1" />
									<checkbox id="industryIsActive"
										checked="false" />
								</row>
								<row id="row_AlwWorkflow">
									<label
										id="label_IndustrySearch_RecordStatus"
										value="${c:l('label_IndustrySearch_RecordStatus.value')}" />
									<listbox
										id="sortOperator_recordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_IndustrySearch_RecordType"
										value="${c:l('label_IndustrySearch_RecordType.value')}" />
									<listbox
										id="sortOperator_recordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>

						<listbox id="listBoxIndustry" vflex="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false" span="true">
							<listhead sizable="true">
								<listheader id="listheader_IndustryCode"
									label="${c:l('listheader_IndustryCode.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_IndustryDesc"
									label="${c:l('listheader_IndustryDesc.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_IndustryLimit"
									label="${c:l('listheader_IndustryLimit.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_IndustryIsActive"
									label="${c:l('listheader_IndustryIsActive.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingIndustryList" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>