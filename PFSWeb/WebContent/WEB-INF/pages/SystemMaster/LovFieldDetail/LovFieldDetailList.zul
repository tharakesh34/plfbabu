<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_LovFieldDetailList"
		apply="${lovFieldDetailListCtrl}" border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" style="border-style: none;">
					<button
						id="button_LovFieldDetailList_LovFieldDetailSearchDialog"
						 label = "${c:l('label_Filter')}"
						autodisable="button_LovFieldDetailList_LovFieldDetailSearchDialog,button_LovFieldDetailList_PrintList,button_LovFieldDetailList_NewLovFieldDetail,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_LovFieldDetailList_LovFieldDetailSearchDialog.tooltiptext')}" />
					<button id="button_LovFieldDetailList_PrintList"
						 label = "${c:l('label_Print')}"
						autodisable="button_LovFieldDetailList_LovFieldDetailSearchDialog,button_LovFieldDetailList_PrintList,button_LovFieldDetailList_NewLovFieldDetail,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_LovFieldDetailList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" style="border-style: none;">
					<button
						id="button_LovFieldDetailList_NewLovFieldDetail" 
						label = "${c:l('label_New')}"
						autodisable="button_LovFieldDetailList_LovFieldDetailSearchDialog,button_LovFieldDetailList_PrintList,button_LovFieldDetailList_NewLovFieldDetail,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_LovFieldDetailList_NewLovFieldDetail.tooltiptext')}" />
					<button id="btnRefresh" 
						label = "${c:l('label_Refresh')}"
						autodisable="button_LovFieldDetailList_LovFieldDetailSearchDialog,button_LovFieldDetailList_PrintList,button_LovFieldDetailList_NewLovFieldDetail,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" 
						label = "${c:l('label_Help')}"
						autodisable="button_LovFieldDetailList_LovFieldDetailSearchDialog,button_LovFieldDetailList_PrintList,button_LovFieldDetailList_NewLovFieldDetail,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_LovFieldDetailList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px; padding-left:5px; padding-right:5px;">
						<columns>
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
						</columns>
						<rows>
							<row>
								<label
									id="label_LovFieldDetailSearch_FieldCodeId"
									value="${c:l('label_LovFieldDetailSearch_FieldCodeId.value')}" />
								<listbox id="sortOperator_fieldCodeId"
									width="43px" mold="select" rows="1" />
								<uppercasebox id="fieldCodeId"
									width="171px" maxlength="19" />
								<label
									id="label_LovFieldDetailSearch_FieldCodeValue"
									value="${c:l('label_LovFieldDetailSearch_FieldCodeValue.value')}" />
								<listbox
									id="sortOperator_fieldCodeValue" width="43px" mold="select"
									rows="1" />
								<textbox id="fieldCodeValue"
									width="300px" maxlength="50" />
							</row>
							<row>
								<label
									id="label_LovFieldDetailSearch_isActive"
									value="${c:l('label_LovFieldDetailSearch_isActive.value')}" />
								<listbox id="sortOperator_isActive"
									width="43px" mold="select" rows="1" />
								<checkbox id="isActive" checked="false" />
							</row>
							<row id="row_AlwWorkflow">
								<label
									id="label_LovFieldDetailSearch_RecordStatus"
									value="${c:l('label_LovFieldDetailSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_recordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />
								<label
									id="label_LovFieldDetailSearch_RecordType"
									value="${c:l('label_LovFieldDetailSearch_RecordType.value')}" />
								<listbox id="sortOperator_recordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>

					<listbox id="listBoxLovFieldDetail" vflex="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false" span="true">
						<listhead sizable="true">
							<listheader id="listheader_FieldCode"
								label="${c:l('listheader_FieldCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_FieldCodeValue"
								label="${c:l('listheader_FieldCodeValue.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_isActive"
								label="${c:l('listheader_isActive.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingLovFieldDetailList" />
			</south>

		</borderlayout>
	</window>
</zk>