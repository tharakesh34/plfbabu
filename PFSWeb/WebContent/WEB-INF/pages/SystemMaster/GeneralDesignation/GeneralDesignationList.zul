<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_GeneralDesignationList"
		apply="${generalDesignationListCtrl}" border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button
						id="button_GeneralDesignationList_GeneralDesignationSearchDialog"
						label="${c:l('label_Filter')}"
						autodisable="button_GeneralDesignationList_GeneralDesignationSearchDialog,print,
											button_GeneralDesignationList_NewGeneralDesignation,btnRefresh,help"
						tooltiptext="${c:l('button_GeneralDesignationList_GeneralDesignationSearchDialog.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="print" label="${c:l('label_Print')}"
						autodisable="button_GeneralDesignationList_GeneralDesignationSearchDialog,print,
											button_GeneralDesignationList_NewGeneralDesignation,btnRefresh,help"
						tooltiptext="${c:l('button_GeneralDesignationList_PrintList.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button
						id="button_GeneralDesignationList_NewGeneralDesignation"
						label="${c:l('label_New')}"
						autodisable="button_GeneralDesignationList_GeneralDesignationSearchDialog,print,
											button_GeneralDesignationList_NewGeneralDesignation,btnRefresh,help"
						tooltiptext="${c:l('button_GeneralDesignationList_NewGeneralDesignation.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="btnRefresh"
						label="${c:l('label_Refresh')}"
						autodisable="button_GeneralDesignationList_GeneralDesignationSearchDialog,print,
											button_GeneralDesignationList_NewGeneralDesignation,btnRefresh,help"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="help" visible="false"
						label="${c:l('label_Help')}"
						autodisable="button_GeneralDesignationList_GeneralDesignationSearchDialog,print,
											button_GeneralDesignationList_NewGeneralDesignation,btnRefresh,help"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_GeneralDesignationList">
			<north border="none" />
			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true"
						style="border:0px; padding-left:5px; padding-right:5px;">
						<columns>
							<column width="130px" />
							<column width="50px" />
							<column />
							<column width="130px" />
							<column width="50px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									id="label_GeneralDesignationSearch_GenDesignation"
									value="${c:l('label_GeneralDesignationSearch_GenDesignation.value')}" />
								<listbox
									id="sortOperator_genDesignation" width="43px" mold="select"
									rows="1" />
								<uppercasebox id="genDesignation"
									width="100px" maxlength="8" />
								<label
									id="label_GeneralDesignationSearch_GenDesgDesc"
									value="${c:l('label_GeneralDesignationSearch_GenDesgDesc.value')}" />
								<listbox id="sortOperator_genDesgDesc"
									width="43px" mold="select" rows="1" />
								<textbox id="genDesgDesc" width="320px"
									maxlength="50" />
							</row>
							<row id="row_AlwWorkflow">
								<label
									id="label_GeneralDesignationSearch_RecordStatus"
									value="${c:l('label_GeneralDesignationSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_RecordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />
								<label
									id="label_GeneralDesignationSearch_RecordType"
									value="${c:l('label_GeneralDesignationSearch_RecordType.value')}" />
								<listbox id="sortOperator_RecordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxGeneralDesignation"
						emptyMessage="${c:l('listbox.emptyMessage')}"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false" sizedByContent="true"
						span="true">
						<listhead sizable="true">
							<listheader id="listheader_GenDesignation"
								label="${c:l('listheader_GenDesignation.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_GenDesgDesc"
								label="${c:l('listheader_GenDesgDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingGeneralDesignationList" />
			</south>
		</borderlayout>
	</window>
</zk>