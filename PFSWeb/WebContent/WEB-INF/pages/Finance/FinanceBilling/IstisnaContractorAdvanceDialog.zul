<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_IstisnaDisbursement" border="normal"
			apply="${istisnaDisbursementDialogCtrl}" width="100%" height="100%"
			sizable="false">

			<borderlayout id="borderlayoutIstisnaDisbursement">
				<north>
					<div sclass="z-toolbar" style="padding:0">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" width="100%"
							widths="35%,30%,35%">

							<!-- COMMON BUTTONS -->
							<toolbar align="start"
								sclass="toolbar-start">
								<button id="btnNew" 
									tooltiptext="${c:l('btnNew.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnEdit" 
									tooltiptext="${c:l('btnEdit.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnDelete" 
									tooltiptext="${c:l('btnDelete.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnSave" 
									tooltiptext="${c:l('btnSave.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnCancel" 
									tooltiptext="${c:l('btnCancel.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnNotes" 
									tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false" />
							</toolbar>

							<!-- SEARCH AREA -->
							<toolbar align="center"
								sclass="toolbar-center">
								<label
									value="${c:l('window_IstisnaContractorAdvanceDialog.title')}"
									sclass="label-heading" />
							</toolbar>

							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" 
									label="${c:l('label_Help')}"
									tooltiptext="${c:l('btnHelp.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDeletebtnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnClose" 
									tooltiptext="${c:l('btnClose.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDeletebtnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							</toolbar>
						</hbox>
						<textbox id="moduleName"
							value="ContractorAdvance" visible="false" />
					</div>
				</north>

				<center border="none" autoscroll="false">

					<groupbox sclass="gb-dialog">
						<grid sclass="GridLayoutNoBorder"
							fixedLayout="true" style="border:0px">
							<columns>
								<column width="160px" />
								<column />
								<column width="230px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										id="label_IstisnaContractorAdvanceDialog_disbDate"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbDate.value')}" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<datebox id="disbDate" 	width="100px" />
									</hbox>
									<label
										id="label_IstisnaContractorAdvanceDialog_disbBenificiary"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbBenificiary.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="lovDescCustCIF"
											width="250px" readonly="true" />
									</hbox>
									<hbox visible="false">
										<space spacing="2px" sclass="mandatory" />
										<longbox id="disbBenificiary" visible="false" width="100px" />
										<button id="btnSearchBenfCIF" image="/images/icons/LOVSearch.png"  />
										<label id="benfShrtName" />
									</hbox>
								</row>
								<row>
									<label
										id="label_IstisnaContractorAdvanceDialog_disbAmount"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbAmount.value')}" />
									<currencyBox id="disbAmount" />
									<label
										id="label_IstisnaContractorAdvanceDialog_disbAccountId"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbAccountId.value')}" />
									<hbox>
										<accountSelectionBox id="disbAccountId"  />
										<longbox id="disbExpType"
											readonly="true" visible="false" />
										<textbox id="lovDescDisbExpType" visible="false" />
										<button
											id="btnSearchDisbExpType" image="/images/icons/LOVSearch.png"
											visible="false"  />
									</hbox>
								</row>
								<row visible="false">
									<label
										id="label_IstisnaContractorAdvanceDialog_disbRetPerc"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbRetPerc.value')}" />
									<hbox>
										<space spacing="2px" />
										<decimalbox id="disbRetPerc"
											disabled="true" width="150px" />
									</hbox>
									<label
										id="label_IstisnaContractorAdvanceDialog_disbRetAmount"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbRetAmount.value')}" />
									<hbox>
										<space spacing="2px" />
										<decimalbox id="disbRetAmount"
											disabled="true" width="150px" />
									</hbox>
								</row>
								<row>
									<label
										id="label_IstisnaContractorAdvanceDialog_disbRemarks"
										value="${c:l('label_IstisnaContractorAdvanceDialog_disbRemarks.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="disbRemarks"
											width="150px" />
									</hbox>
									<label
										id="label_IstisnaContractorAdvanceDialog_autoDisb"
										value="${c:l('label_IstisnaContractorAdvanceDialog_autoDisb.value')}" />
									<hbox>
										<space spacing="2px" />
										<checkbox id="autoDisb"
											checked="false" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</center>
				<south sclass="south-dialog">
					<groupbox id="groupboxWf" width="99%"
						closable="false">
						<caption label="${c:l('Action')}" />
						<hbox width="75%">
							<radiogroup id="userAction" name="action" />
							<label
								id="label_IstisnaDisbursement_RecordStatus"
								value="${c:l('label_IstisnaDisbursement_RecordStatus.value')} :"
								sclass="label-status" />
							<label id="recordStatus" />
						</hbox>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>
