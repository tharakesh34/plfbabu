<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
    xmlns:h="http://www.w3.org/1999/xhtml"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

    <window id="window_AddRmvDeffermentDialog" border="normal"
        apply="${addRmvDeffermentDialogCtrl}" width="500px" height="300px"
        sizable="false" title="${c:l('window_AddDeffermentDialog.title')}"  closable="true">

        <borderlayout id="borderlayoutAddDefferment">
            <center border="none" autoscroll="true">

                <groupbox id="gb_DeffermentDetails" height="210px" style="border:1px solid #F38C60;">
                    <grid sclass="GridLayoutNoBorder" fixedLayout="true"
                        style="border:0px">
                        <columns>
                            <column width="150px" />
                            <column/>
                        </columns>
                        <rows>
                        <row height="20px">
                            </row>
                            <row>
                                <label
                                    id="label_AddDeffermentDialog_FromDate" 
                                    value="${c:l('label_AddDeffermentDialog_FromDate.value')}"/>
                                <hbox>
                                    <space spacing="2px"
                                        sclass="mandatory" id="space_FromDate" />
                                    <combobox id="cbDate"
                                        readonly="true" width="120px" visible="false">
                                    </combobox>
                                </hbox>
                            </row>
                            <row id="recalTypeRow" visible="false">
                                <label
                                    id="label_AddDeffermentDialog_ReCalType"
                                    value="${c:l('label_AddDeffermentDialog_RecalType.value')}" />
                                <hbox>
                                    <space spacing="2px"
                                        sclass="mandatory" id="space_ReCalType" />
                                    <combobox id="cbReCalType"
                                        width="200px" readonly="true">
                                    </combobox>
                                </hbox>
                            </row>
                            <row id="recallFromDateRow" visible="false">
                            	<label
                            		id="label_AddDeffermentDialog_TillDateFrom"
                            		value="${c:l('label_AddDeffermentDialog_TillDateFrom.value')}" />
                            	<hbox>
                            		<space spacing="2px"
                            			sclass="mandatory"
                            			id="space_TillDateFrom" />
                            		<combobox id="cbTillDateFrom"
                            			readonly="true" width="120px">
                            		</combobox>
                            	</hbox>
                            </row>
                            <row id="recallToDateRow" visible="false">
                            	<label
                            		id="label_AddDeffermentDialog_TillDateTo"
                            		value="${c:l('label_AddDeffermentDialog_TillDateTo.value')}" />
                            	<hbox>
                            		<space spacing="2px"
                            			sclass="mandatory" id="space_TillDateTo" />
                            		<combobox id="cbTillDateTo"
                            			readonly="true" width="120px">
                            		</combobox>
                            	</hbox>
                            </row>
                            <row id="pftIntactRow" visible="false">
                                <label
                                    id="label_AddDeffermentDialog_PftIntact"
                                    value="${c:l('label_AddDeffermentDialog_PftIntact.value')}" />
                                <hbox>
                                    <space spacing="2px"
                                        sclass="mandatory" id="space_PftIntact" />
                                    <checkbox id="pftIntact" checked = "false" />
                                </hbox>
                            </row>
                            
                            <row id="excDefDateRow" visible="false">
                            	<label
                            		id="label_AddDeffermentDialog_ExDefDate"
                            		value="${c:l('label_AddDeffermentDialog_ExDefDate.value')}" />
                            	<hbox>
                            		<space spacing="2px"
                            			sclass="mandatory" id="space_ExDefDate" />
                            		<checkbox id="exDefDate"
                            			checked="false">
                            		</checkbox>
                            	</hbox>
                            </row>
                            <row id="addTermRow" visible="false">
                                <label
                                    id="label_AddDeffermentDialog_AddTermAfter"
                                    value="${c:l('label_AddDeffermentDialog_AddTermAfter.value')}" />
                                <hbox>
                                    <space spacing="2px"
                                        sclass="mandatory" id="space_AddTermAfter" />
                                    <combobox id="cbAddTermAfter"
                                        readonly="true" width="120px">
                                    </combobox>
                                </hbox>
                            </row>
                        </rows>
                    </grid>
                </groupbox>
            </center>
            <south border="none" margins="1,0,0,0" size="30px"
                splittable="false">
                <div id="divSouth" align="left" width="500px">
                    <grid>
                        <rows>
                            <row valign="middle">
                                <hbox align="start">
                                    <button id="btnAddDefferment"
                                        height="24px"  />
                                    <button id="btnClose" height="24px"
                                        label="${c:l('btnClose.label')}"
                                        tooltiptext="${c:l('btnClose.tooltiptext')}" />
                                </hbox>
                            </row>
                        </rows>
                    </grid>
                </div>
            </south>
        </borderlayout>
    </window>
</zk>