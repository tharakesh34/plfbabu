<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_FinStepPolicyDialog" border="normal"
			apply="${finStepPolicyDetailDialogCtrl}" width="100%" height="100%"
			sizable="false">

			<borderlayout id="borderlayoutFinStepPolicyDialog">
				<north>
					<div sclass="z-toolbar">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" width="100%"
							widths="35%,30%,35%">
							<!-- COMMON BUTTONS -->
							<toolbar align="start"
								sclass="toolbar-start">
								<button id="btnNew"
									tooltiptext="${c:l('btnNew.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnEdit"
									tooltiptext="${c:l('btnEdit.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnDelete"
									tooltiptext="${c:l('btnDelete.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnSave"
									tooltiptext="${c:l('btnSave.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnCancel"
									tooltiptext="${c:l('btnCancel.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnNotes"
									tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
									sclass="z-toolbarbutton" />
							</toolbar>
							<!-- SEARCH AREA -->
							<toolbar align="center"
								sclass="toolbar-center">
								<label
									value="${c:l('window_FinStepPolicyDialog.title')}"
									sclass="label-heading" />
							</toolbar>
							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" visible="false"
									label="${c:l('label_Help')}"
									tooltiptext="${c:l('btnHelp.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnClose"
									tooltiptext="${c:l('btnClose.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
							</toolbar>
						</hbox>
					</div>
				</north>
				<center border="none" autoscroll="false">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="150px" />
							<column />
							<column width="150px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									id="label_FinStepPolicyDialog_FinAmount"
									value="${c:l('label_FinStepPolicyDialog_FinAmount.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_FinAmount" spacing="2px" />
									<decimalbox id="stepFinAmount" width="150px"/>
								</hbox>
								<label
									id="label_FinStepPolicyDialog_StepNumber"
									value="${c:l('label_FinStepPolicyDialog_StepNumber.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_StepNumber" spacing="2px"
										sclass="mandatory" />
									<intbox id="stepNumber" />
								</hbox>
							</row>
							<row>
								<label
									id="label_FinStepPolicyDialog_InstallMents"
									value="${c:l('label_FinStepPolicyDialog_Installments.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_InstallMents" spacing="2px"
										sclass="mandatory" />
									<intbox id="installments" />
								</hbox>
								<label
									id="label_FinStepPolicyDialog_TenorSplitPerc"
									value="${c:l('label_FinStepPolicyDialog_TenorSplitPerc.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_TenorSplitPerc" spacing="2px"
										sclass="mandatory" />
									<decimalbox id="tenorSplitPerc" />
								</hbox>
							</row>
							<row>
								<label
									id="label_FinStepPolicyDialog_RateMargin"
									value="${c:l('label_FinStepPolicyDialog_RateMargin.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_RateMargin" spacing="2px" />
									<decimalbox id="rateMargin" width="150px" />
								</hbox>
								<label
									id="label_FinStepPolicyDialog_EMIStepPerc"
									value="${c:l('label_FinStepPolicyDialog_EMIStepPerc.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_EMIStepPerc" spacing="2px"
										sclass="mandatory" />
									<decimalbox id="eMIStepPerc" />
								</hbox>
							</row>
							<row visible="false">
								<label
									id="label_FinStepPolicyDialog_SteppedEMI"
									value="${c:l('label_FinStepPolicyDialog_SteppedEMI.value')}" />
								<hbox>
									<space
										id="space_FinStepPolicyDialog_SteppedEMI" spacing="2px" />
									<decimalbox id="steppedEMI"
										disabled="true" width="150px"/>
								</hbox>
							</row>
						</rows>
					</grid>
				</center>
				<south id="south" sclass="south-dialog">
					<groupbox id="groupboxWf" width="99%">
						<caption label="${c:l('Action')}" />
						<hbox width="75%">
							<radiogroup id="userAction" name="action" />
							<label
								id="label_FinStepPolicyDialog_RecordStatus"
								value="${c:l('label_FinStepPolicyDialog_RecordStatus.value')}"
								sclass="label-status" />
							<label id="recordStatus" />
						</hbox>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>