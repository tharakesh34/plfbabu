<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_AgreementDetailDialog" border="none" apply="${agreementDetailDialogCtrl}" width="100%" height="100%" sizable="false">
			<borderlayout id="borderlayoutFinanceMain" width="100%">
				<center border="none">
					<div>
						<grid sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="20%" />
								<column />
								<column width="20%" />
								<column />
							</columns>
							<rows>
								<row>
									<label value="${c:l('label_FinanceMainDialog_FinType.value')}" />
									<label id="agr_finType" style="font-weight:bold;" />
									<label value="${c:l('label_FinanceMainDialog_FinCcy.value')}" />
									<label id="agr_finCcy" style="font-weight:bold;" />
								</row>
								<row>
									<label value="${c:l('label_FinanceMainDialog_ScheduleMethod.value')}" />
									<label id="agr_scheduleMethod" style="font-weight:bold;" />
									<label value="${c:l('label_FinanceMainDialog_ProfitDaysBasis.value')}" />
									<label id="agr_profitDaysBasis" style="font-weight:bold;" />
								</row>
								<row>
									<label value="${c:l('label_FinanceMainDialog_FinReference.value')}" />
									<label id="agr_finReference" style="font-weight:bold;" />
									<label id="labe_agr_grcEndDate" value="${c:l('label_FinanceMainDialog_GracePeriodEndDate.value')}" />
									<label id="agr_grcEndDate" style="font-weight:bold;" />
								</row>
								<row visible="false">
									<label id="label_FinanceMainDialog_Authorization1" value="${c:l('label_FinanceMainDialog_Authorization1.value')}" />
									<hbox>
										<space spacing="2px" />
										<longbox id="authorization1" width="72px" visible="false" />
										<textbox id="lovDescAuthorization1Name" width="250px" readonly="true" />
										<button id="btnSearchAuthorization1" image="/images/icons/LOVSearch.png" tabindex="1" height="24px" />
									</hbox>
									<label id="label_FinanceMainDialog_Authorization2" value="${c:l('label_FinanceMainDialog_Authorization2.value')}" />
									<hbox>
										<space spacing="2px" />
										<longbox id="authorization2" width="72px" visible="false" />
										<textbox id="lovDescAuthorization2Name" width="250px" readonly="true" />
										<button id="btnSearchAuthorization2" image="/images/icons/LOVSearch.png" tabindex="1" height="24px" />
									</hbox>
								</row>
							</rows>
						</grid>
						<separator />
						<listbox id="listBox_Agreements" fixedLayout="true" span="true" emptyMessage="${c:l('listbox.emptyMessage')}" tooltiptext="${c:l('label_Generate_Report.tooltip')}" multiple="true" vflex="true" width="99.8%">
							<listhead sizable="false">
								<listheader id="listheader_AgreementCode" label="${c:l('label_AgreementName.value')}" sort="auto" hflex="min" />
								<listheader id="listheader_AgreementName" sort="auto" label="${c:l('label_ReportName.value')}" hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
			</borderlayout>
		</window>
	</window>
</zk>
