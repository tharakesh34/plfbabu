<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CovenantTypeDialog" border="normal" apply="${covenantTypeDialogCtrl}" width="100%" height="100%"
		sizable="false">

		<borderlayout id="borderlayoutCovenantType">
			<north>
				<div sclass="z-toolbar" style="padding:0">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnNew" tooltiptext="${c:l('btnNew.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnEdit" tooltiptext="${c:l('btnEdit.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnDelete" tooltiptext="${c:l('btnDelete.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnSave" tooltiptext="${c:l('btnSave.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnCancel" tooltiptext="${c:l('btnCancel.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnNotes" tooltiptext="${c:l('btnNotes.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
						</toolbar>
						<!-- SEARCH AREA -->
						<toolbar align="center" sclass="toolbar-center">
							<label value="${c:l('window_CovenantTypeDialog.title')}" sclass="label-heading" />
						</toolbar>
						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp" tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton"
								visible="false" />
							<button id="btnClose" tooltiptext="${c:l('btnClose.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
						</toolbar>
					</hbox>
				</div>
			</north>
			<center border="none" autoscroll="false">
				<div>
					<groupbox id="gb_basicDetails" mold="3d">
						<caption label="Basic Details"></caption>
						<grid sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="35%" />
								<column width="35%" />
								<column width="35%" />
								<column width="35%" />
							</columns>
							<rows>
								<row>
									<label value="${c:l('label_Covenant_Code.value')}" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<uppercasebox id="code" width="180px" />
									</hbox>
									<label value="${c:l('label_CovenantTypeDialog_Category.value')}" />

									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<combobox id="category" width="180px" />
									</hbox>
								</row>
								<row>
									<label value="${c:l('label_CovenantsDialog_CovenantType.value')}" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<combobox id="cmbCovenantType" width="180px" />
									</hbox>
									<label value="${c:l('label_CovenantTypeDialog_DocType.value')}" />
									<extendedcombobox id="docType" />
								</row>
								<row>
									<cell>
										<label value="${c:l('label_Covenant_Description.value')}" />
									</cell>
									<cell colspan="3">
										<hbox width="100%">
											<space spacing="2px" sclass="mandatory" />
											<textbox id="description" width="250px" multiline="true" rows="3" />
										</hbox>
									</cell>
								</row>
								<row>
									<label id="label_Frequency"
										value="${c:l('label_CovenantTypeDialog_Frequency.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="frequency" maxlength="15" visible="false" />
										<combobox id="cbFrequency" width="130px" />
									</hbox>
								</row>
								<row>
									<label value="${c:l('label_CovenantTypeDialog_AllowPostPonement.value')}" />

									<hbox>
										<space id="space_AllowPostPonement" spacing="2px" />
										<checkbox id="allowPostPonement" checked="false" />
									</hbox>
								</row>
								<row>
									<label value="${c:l('label_CovenantTypeDialog_MaxAllowedDays.value')}" />
									<hbox>
										<space spacing="2px" />
										<intbox id="maxAllowedDays" />
									</hbox>
								</row>
								<row>
									<label value="${c:l('label_CovenantTypeDialog_AllowedPaymentModes.value')}" />
									<hbox>
										<space spacing="2px" />
										<uppercasebox id="allowedPaymentModes" width="250px" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
					<groupbox id="gb_alertDetails" sclass="gb-dialog">
						<caption label="Alert Details"></caption>
						<grid sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="35%" />
								<column width="35%" />
								<column width="35%" />
								<column width="35%" />
							</columns>
							<rows>
								<row>
									<label id="label_AlertsRequired"
										value="${c:l('label_CovenantTypeDialog_AlertsRequired.value')}" />
									<hbox>
										<space spacing="2px" />
										<checkbox id="alertsRequired" checked="false" />
									</hbox>
								</row>
								<row id="row5">
									<label id="label_GraceDays"
										value="${c:l('label_CovenantTypeDialog_GraceDays.value')}" />

									<hbox>
										<space id="space_GraceDays" spacing="2px" />
										<intbox id="graceDays" width="90px" maxlength="14" />
									</hbox>
									<label id="label_AlertDays"
										value="${c:l('label_CovenantTypeDialog_AlertDays.value')}" />

									<hbox>
										<space id="space_AlertDays" spacing="2px" />
										<intbox id="alertDays" width="90px" maxlength="14" />
									</hbox>
								</row>
								<row id="row6">
									<label id="label_AlertType"
										value="${c:l('label_CovenantTypeDialog_AlertType.value')}" />
									<hbox>
										<space id="space_AlertToRoles" spacing="2px" />
										<combobox id="alertType" width="90px" />
									</hbox>
									<label id="label_AlertToRoles"
										value="${c:l('label_CovenantTypeDialog_AlertToRoles.value')}" />

									<extendedcombobox id="alertToRoles" />
								</row>
								<row id="row7">
									<label id="label_UserTemplate"
										value="${c:l('label_CovenantTypeDialog_UserTemplate.value')}" />

									<extendedcombobox id="userTemplate" />
									<label id="label_CustomerTemplate"
										value="${c:l('label_CovenantTypeDialog_CustomerTemplate.value')}" />

									<extendedcombobox id="customerTemplate" />
								</row>
							</rows>
						</grid>
					</groupbox>
				</div>
			</center>
			<south sclass="south-dialog">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="95%">
						<radiogroup id="userAction" name="action" />
						<label id="label_RecordStatus" value="${c:l('label_South_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>
		</borderlayout>
	</window>
</zk>
