<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_BatchAdmin" border="normal" width="100%"
		apply="${batchAdminCtrl}">

		<timer id="timer" delay="5000" repeats="true" />

		<div sclass="z-toolbar" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="20%,40%,20%,20%">
				<toolbar align="start" sclass="toolbar-start">
					<button id="btnStartJob" height="24px"
						tooltiptext="${c:l('label_BatchAdminCtrl_Run.tooltiptext')}"
						label="${c:l('label_BatchAdminCtrl_Run.value')}" />
				</toolbar>
				<toolbar align="center" sclass="toolbar-center">
					<label id="lable_current_step"
						style="font-weight: bold;" />
				</toolbar>
				<toolbar align="center" sclass="toolbar-center">
					<hbox>
						<label
							value="${c:l('label_BatchAdminCtrl_Lock.value')}" />
						<space />
						<checkbox id="lock" />
					</hbox>
				</toolbar>
				<toolbar align="end" sclass="toolbar-end">
					<button id="btnStaleJob" height="24px"
						tooltiptext="${c:l('label_BatchAdminCtrl_Terminate.tooltiptext')}"
						label="${c:l('label_BatchAdminCtrl_Terminate.value')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id ="borderLayoutBatchAdmin" height="100%">
			<center border="none" autoscroll="false">
				<groupbox id="gb_basicDetails" mold="3d">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="150px" />
							<column />
							<column width="150px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									value="${c:l('label_BatchAdminCtrl_LastBussDate.value')}" />
								<label id="lable_LastBusiness_Date" />
								<label
									value="${c:l('label_BatchAdminCtrl_ValueDate.value')}" />
								<label id="lable_Value_Date" />
							</row>
							<row>
								<label
									value="${c:l('label_BatchAdminCtrl_NextBussDate.value')}" />
								<label id="lable_NextBusiness_Date" />
								<label
									value="${c:l('label_BatchAdminCtrl_BatchStatus.value')}" />
								<hbox id="BatchStatus" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxStepExecution" width="100%"  height="100%">
						<listhead width="100%" height="100%">
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_StepId')}" width="10%"
								sort="auto" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_StepName')}"
								width="35%" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_ValueDate')}"
								width="15%" sort="auto" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_StartTime')}"
								width="10%" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_EndTime')}" width="10%" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_Duration')}"
								width="10%" />
							<listheader
								label="${c:l('listheader_BatchAdminCtrl_ExitStatus')}"
								width="10%" />
						</listhead>
					</listbox>
				</groupbox>
			</center>
		</borderlayout>
	</window>
</zk>