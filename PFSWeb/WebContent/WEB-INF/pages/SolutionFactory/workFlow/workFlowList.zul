<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_workFlowList" apply="${workFlowListCtrl}"
		border="none" width="100%" height="100%">


		<div sclass="z-toolbar" style="padding:0">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button id="button_workFlowList_workFlowFindDialog"
						label="${c:l('label_Filter')}" sclass="z-toolbarbutton" />
					<button id="print"
						label="${c:l('label_Print')}" sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_workFlowList_NewworkFlow"
						label="${c:l('label_New')}"
						tooltiptext="${c:l('button_workFlowList_NewWorkFlow.tooltiptext')}"
						sclass="z-toolbarbutton" />

					<button id="btnRefresh"
						label="${c:l('label_Refresh')}"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="help" visible="false" label="${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>
		<borderlayout id="borderLayout_workFlowList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true">
						<columns>
							<column width="130px" />
							<column width="50px" />
							<column />
							<column width="130px" />
							<column width="50px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									id="label_WorkFlowSearch_WorkFlowType"
									value="${c:l('label_WorkFlowSearch_WorkFlowType.value')}" />
								<listbox id="sortOperator_workFlowType"
									width="43px" mold="select" rows="1" />
								<uppercasebox id="workFlowType"
									width="170px" />
								<label
									id="label_WorkFlowSearch_WorkFlowSubType"
									value="${c:l('label_WorkFlowSearch_WorkFlowSubType.value')}" />
								<listbox
									id="sortOperator_workFlowSubType" width="43px" mold="select"
									rows="1" />
								<textbox id="workFlowSubType"
									width="170px" />
							</row>
							<row>
								<label
									id="label_WorkFlowSearch_Description"
									value="${c:l('label_WorkFlowSearch_Description.value')}" />
								<listbox id="sortOperator_description"
									width="43px" mold="select" rows="1" />
								<textbox id="workFLowDescription"
									width="170px" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxWorkFlow"
						emptyMessage="${c:l('listbox.emptyMessage')}" fixedLayout="true" span="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_workFlowType"
								label="${c:l('listheader_workFlowType.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_workFlowSubType"
								label="${c:l('listheader_workFlowSubType.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_workFlowDesc"
								label="${c:l('listheader_workFlowDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_workFlowStatus" visible="false"
								label="${c:l('listheader_workFlowStatus.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingWorkFlowList" />
			</south>
		</borderlayout>
	</window>
</zk>