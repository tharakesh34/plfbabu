<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerTypeList" apply="${customerTypeListCtrl}"
		border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button
						id="button_CustomerTypeList_CustomerTypeSearchDialog"
						label="${c:l('label_Filter')}"
						autodisable="button_CustomerTypeList_CustomerTypeSearchDialog,print,
												button_CustomerTypeList_NewCustomerType,btnRefresh,help"
						tooltiptext="${c:l('button_CustomerTypeList_CustomerTypeSearchDialog.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="print" label="${c:l('label_Print')}"
						autodisable="button_CustomerTypeList_CustomerTypeSearchDialog,print,
												button_CustomerTypeList_NewCustomerType,btnRefresh,help"
						tooltiptext="${c:l('button_CustomerTypeList_PrintList.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_CustomerTypeList_NewCustomerType"
						label="${c:l('label_New')}"
						autodisable="button_CustomerTypeList_CustomerTypeSearchDialog,print,
												button_CustomerTypeList_NewCustomerType,btnRefresh,help"
						tooltiptext="${c:l('button_CustomerTypeList_NewCustomerType.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="btnRefresh"
						label="${c:l('label_Refresh')}"
						autodisable="button_CustomerTypeList_CustomerTypeSearchDialog,print,
												button_CustomerTypeList_NewCustomerType,btnRefresh,help"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="help" visible="false"
						label="${c:l('label_Help')}"
						autodisable="button_CustomerTypeList_CustomerTypeSearchDialog,print,
												button_CustomerTypeList_NewCustomerType,btnRefresh,help"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerTypeList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true" style="border:0px">
						<columns>
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
						</columns>
						<rows>
							<row>
								<label
									id="label_CustomerTypeSearch_CustTypeCode"
									value="${c:l('label_CustomerTypeSearch_CustTypeCode.value')}" />
								<listbox id="sortOperator_custTypeCode"
									width="43px" mold="select" rows="1" />
								<uppercasebox id="custTypeCode"
									width="100px" maxlength="8" />
								<label
									id="label_CustomerTypeSearch_CustTypeDesc"
									value="${c:l('label_CustomerTypeSearch_CustTypeDesc.value')}" />
								<listbox id="sortOperator_custTypeDesc"
									width="43px" mold="select" rows="1" />
								<textbox id="custTypeDesc" width="350px"
									maxlength="100" />
							</row>
							<row>
								<label
									id="label_CustomerTypeSearch_CustTypeCtg"
									value="${c:l('label_CustomerTypeSearch_CustTypeCtg.value')}" />
								<listbox id="sortOperator_custTypeCtg"
									width="43px" mold="select" rows="1" />
								<combobox id="custTypeCtg"
									width="150px" />
								<label
									id="label_CustomerTypeSearch_CustTypeIsActive"
									value="${c:l('label_CustomerTypeSearch_CustTypeIsActive.value')}" />
								<listbox
									id="sortOperator_custTypeIsActive" width="43px" mold="select"
									rows="1" />
								<checkbox id="custTypeIsActive"
									checked="false" />
							</row>
							<row>
								<label
									id="label_CustomerTypeSearch_RecordStatus"
									value="${c:l('label_CustomerTypeSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_RecordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />
								<label
									id="label_CustomerTypeSearch_RecordType"
									value="${c:l('label_CustomerTypeSearch_RecordType.value')}" />
								<listbox id="sortOperator_RecordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxCustomerType" fixedLayout="true"
						sizedByContent="true" span="true"
						emptyMessage="${c:l('listbox.emptyMessage')}"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_CustTypeCode"
								label="${c:l('listheader_CustTypesCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustTypeDesc"
								label="${c:l('listheader_CustTypesDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustTypeCtg"
								label="${c:l('listheader_CustTypesCtg.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustTypeIsActive"
								label="${c:l('listheader_CustTypesIsActive.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingCustomerTypeList" />
			</south>

		</borderlayout>
	</window>
</zk>