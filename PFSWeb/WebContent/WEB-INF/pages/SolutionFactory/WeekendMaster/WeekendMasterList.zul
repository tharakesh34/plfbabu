<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_WeekendMasterList"
		apply="${weekendMasterListCtrl}" border="none" width="100%">


		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">

					<button
						id="button_WeekendMasterList_WeekendMasterSearchDialog"
						label="${c:l('label_Filter')}"
						tooltiptext="${c:l('button_WeekendMasterList_WeekendMasterSearchDialog.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="print" label="${c:l('label_Print')}"
						tooltiptext="${c:l('button_WeekendMasterList_PrintList.tooltiptext')}"
						sclass="z-toolbarbutton" />

				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button
						id="button_WeekendMasterList_NewWeekendMaster"
						label="${c:l('label_New')}"
						tooltiptext="${c:l('button_WeekendMasterList_NewWeekendMaster.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="btnRefresh"
						label="${c:l('label_Refresh')}"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="help" visible="false"
						label="${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_WeekendMasterList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true"
						style="border:0px; padding-left:5px; padding-right:5px;">
						<columns>
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
						</columns>
						<rows>
							<row>
								<label
									id="label_WeekendMasterSearch_WeekendCode"
									value="${c:l('label_WeekendMasterSearch_WeekendCode.value')}" />
								<listbox id="sortOperator_weekendCode"
									width="75" mold="select" rows="1" />
								<uppercasebox id="weekendCode"
									width="150px" maxlength="8" />
								<label
									id="label_WeekendMasterSearch_WeekendDesc"
									value="${c:l('label_WeekendMasterSearch_WeekendDesc.value')}" />
								<listbox id="sortOperator_weekendDesc"
									width="43px" mold="select" rows="1" />
								<textbox id="weekendDesc" width="250px"
									maxlength="50" />
							</row>
							<row id="weekendRow">
								<label
									id="label_WeekendMasterSearch_Weekend"
									value="${c:l('label_WeekendMasterSearch_Weekend.value')}" />
								<listbox id="sortOperator_weekend"
									width="43px" mold="select" rows="1" />
								<combobox id="weekend" width="180px" />
								<label value="" />
							</row>

							<row id="row_AlwWorkflow">
								<label
									id="label_WeekendMasterSearch_RecordStatus"
									value="${c:l('label_WeekendMasterSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_RecordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />

								<label
									id="label_WeekendMasterSearch_RecordType"
									value="${c:l('label_WeekendMasterSearch_RecordType.value')}" />
								<listbox id="sortOperator_RecordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxWeekendMaster"
						emptyMessage="${c:l('listbox.emptyMessage')}" fixedLayout="true"
						sizedByContent="true" span="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_WeekendCode"
								label="${c:l('listheader_WeekendCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_WeekendDesc"
								label="${c:l('listheader_WeekendDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_Weekend"
								label="${c:l('listheader_Weekend.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingWeekendMasterList" />
			</south>

		</borderlayout>
	</window>
</zk>