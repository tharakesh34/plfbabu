									<textbox id="holidayDesc2" width="2,147,483,639px" maxlength="2147483647" />
									</row>
									<row>
									<label id="label_HolidayMasterSearch_HolidayDesc3" value="${c:l('label_HolidayMasterSearch_HolidayDesc3.value')}" />
									<listbox id="sortOperator_holidayDesc3" width="43px" mold="select" rows="1" />
									<textbox id="holidayDesc3" width="2,147,483,639px" maxlength="2147483647" />
									</row>
									<row>
									<label id="label_HolidayMasterSearch_RecordStatus" value="${c:l('label_HolidayMasterSearch_RecordStatus.value')}" />
									<listbox id="sortOperator_recordStatus" width="43px" mold="select" rows="1" />
