	<window id="window_HolidayMasterList"
		apply="${holidayMasterListCtrl}" border="none" width="100%">

		

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center"
					style="border-style: none;">
						<button
							id="button_HolidayMasterList_HolidayMasterSearchDialog"
							height="24px" label = "${c:l('label_Filter')}"
							tooltiptext="${c:l('button_HolidayMasterList_HolidayMasterSearchDialog.tooltiptext')}" />
						<button id="button_HolidayMasterList_PrintList"
							height="24px" label = "${c:l('label_Print')}"
							tooltiptext="${c:l('button_HolidayMasterList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end"
					style="border-style: none;">
					<button
						id="button_HolidayMasterList_NewHolidayMaster" height="24px"
						label = "${c:l('label_New')}"
						tooltiptext="${c:l('button_HolidayMasterList_NewHolidayMaster.tooltiptext')}" />

					<button id="btnRefresh" height="24px"
						label = "${c:l('label_Refresh')}"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" height="24px"
						label = "${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

