									width="43px" mold="select" rows="1" />
									<textbox id="holidays"
									width="9,000px" maxlength="1000" />
									</row>
									<row>
									<label id="label_HolidayMasterSearch_HolidayDesc1" value="${c:l('label_HolidayMasterSearch_HolidayDesc1.value')}" />
