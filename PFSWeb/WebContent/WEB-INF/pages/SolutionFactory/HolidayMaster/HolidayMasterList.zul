								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label
										id="label_HolidayMasterSearch_HolidayCode"
										value="${c:l('label_HolidayMasterSearch_HolidayCode.value')}" />
									<listbox
										id="sortOperator_holidayCode" width="43px" mold="select"
										rows="1" />
									<textbox id="holidayCode"
										width="75px" maxlength="3" />
								
									<label
										id="label_HolidayMasterSearch_HolidayYear"
										value="${c:l('label_HolidayMasterSearch_HolidayYear.value')}" />
									<listbox
										id="sortOperator_holidayYear" width="43px" mold="select"
										rows="1" />
									<intbox id="holidayYear"
										width="75px" maxlength="4" />
								</row>
								<row>
									<label
										id="label_HolidayMasterSearch_HolidayType"
										value="${c:l('label_HolidayMasterSearch_HolidayType.value')}" />
									<listbox
										id="sortOperator_holidayType" width="43px" mold="select"
										rows="1" />
									<textbox id="holidayType"
										width="25px" maxlength="1" />
								</row>
