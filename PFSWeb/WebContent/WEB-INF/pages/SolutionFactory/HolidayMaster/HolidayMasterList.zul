									<listbox id="recordType" width="100px" mold="select" />
									</row> -->
							</rows>
			            </grid>
				<listbox id="listBoxHolidayMaster" 
				            emptyMessage="${c:l('listbox.emptyMessage')}"
							fixedLayout="true" vflex="true" span="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false">
					<listhead sizable="true">
						<listheader id="listheader_HolidayCode"
							label="${c:l('listheader_HolidayCode.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_HolidayYear"
							label="${c:l('listheader_HolidayYear.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_HolidayType"
							label="${c:l('listheader_HolidayType.label')}" sort="auto"
							hflex="min" />
						<!-- <listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							width="20%" />
							<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							width="20%" /> -->
					</listhead>
				</listbox>
			  </div>
			</center>
			<south border="none">
				<paging id="pagingHolidayMasterList" />
