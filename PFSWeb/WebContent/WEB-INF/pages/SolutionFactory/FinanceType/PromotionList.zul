<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
<window>
	<window id="window_FinanceTypeList" apply="${financeTypeListCtrl}"
		border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center"  sclass="toolbar-center">
					<button
						id="button_FinanceTypeList_FinanceTypeSearchDialog" 
						label = "${c:l('label_Filter')}"
						autodisable="button_FinanceTypeList_FinanceTypeSearchDialog,button_FinanceTypeList_PrintList,
							button_FinanceTypeList_NewFinanceType,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_FinanceTypeList_FinanceTypeSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="button_FinanceTypeList_PrintList"
						 label = "${c:l('label_Print')}"
						autodisable="button_FinanceTypeList_FinanceTypeSearchDialog,button_FinanceTypeList_PrintList,
							button_FinanceTypeList_NewFinanceType,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_FinanceTypeList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end"  sclass="toolbar-end">
					<button id="button_FinanceTypeList_NewFinanceType"
						 label = "${c:l('label_New')}"
						autodisable="button_FinanceTypeList_FinanceTypeSearchDialog,button_FinanceTypeList_PrintList,
							button_FinanceTypeList_NewFinanceType,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_FinanceTypeList_NewFinanceType.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnRefresh" 
						label = "${c:l('label_Refresh')}"
						autodisable="button_FinanceTypeList_FinanceTypeSearchDialog,button_FinanceTypeList_PrintList,
							button_FinanceTypeList_NewFinanceType,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnHelp" 
						label = "${c:l('label_Help')}"
						autodisable="button_FinanceTypeList_FinanceTypeSearchDialog,button_FinanceTypeList_PrintList,
							button_FinanceTypeList_NewFinanceType,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_FinanceTypeList">
			<north border="none">
				<textbox id="finCategory" maxlength="50" width="450px"
					value="PROMOTION" visible="false" />
			</north>
			<center border="none">
			        <div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
						<row>
							<label id="label_FinanceTypeSearch_FinType"
								value="${c:l('label_FinanceTypeSearch_PromoCode.value')}" />
							<listbox id="sortOperator_finType"
								width="43px" mold="select" rows="1" />
							<textbox id="finType" width="100px"
								maxlength="8" />

							<label
								id="label_FinanceTypeSearch_FinTypeDesc"
								value="${c:l('label_FinanceTypeSearch_PromoDesc.value')}" />
							<listbox id="sortOperator_finTypeDesc"
								width="43px" mold="select" rows="1" />
							<textbox id="finTypeDesc" width="150px"
								maxlength="50" />
						</row>
						<row>
							<label id="label_FinanceTypeSearch_FinCcy"
								value="${c:l('label_FinanceTypeSearch_FinCcy.value')}" />
							<listbox id="sortOperator_finCcy"
								width="43px" mold="select" rows="1" />
							<textbox id="finCcy" width="100px"
								maxlength="3" />
							<label
								id="label_FinanceTypeSearch_FinDaysCalType"
								value="${c:l('label_FinanceTypeSearch_FinDaysCalType.value')}" />
							<listbox id="sortOperator_finDaysCalType"
								width="43px" mold="select" rows="1" />
							<combobox id="finDaysCalType" width="100px"
								 />
						</row>

						<row id="row1">
							<label
								id="label_FinanceTypeSearch_FinSchdMthd"
								value="${c:l('label_FinanceTypeSearch_FinSchdMthd.value')}" />
							<listbox id="sortOperator_finSchdMthd"
								width="43px" mold="select" rows="1" />
							<combobox id="finSchdMthd" width="100px"
								 />

                           <label
								id="label_FinanceTypeDialog_FInIsAlwGrace"
								value="${c:l('label_FinanceTypeDialog_FInIsAlwGrace.value')}" />
							<listbox id="sortOperator_finIsAlwGrace"
								width="43px" mold="select" rows="1" />
							<checkbox id="finIsAlwGrace" checked="false" />
						</row>
						<row>
						  <label
								id="label_FinanceTypeSearch_FinDivision"
								value="${c:l('label_FinanceTypeSearch_FinDivision.value')}" />
							<listbox id="sortOperator_finDivision"
								width="43px" mold="select" rows="1" />
							<textbox id="finDivision" width="100px"
								maxlength="8" />
								
						<label value="" />
						</row>
						<row id="row_AlwWorkflow">
							<label
								id="label_FinanceTypeSearch_RecordStatus"
								value="${c:l('label_FinanceTypeSearch_RecordStatus.value')}" />
							<listbox id="sortOperator_recordStatus"
								width="43px" mold="select" rows="1" />
							<textbox id="recordStatus" width="100px"
								maxlength="50" />

							<label
								id="label_FinanceTypeSearch_RecordType"
								value="${c:l('label_FinanceTypeSearch_RecordType.value')}" />
							<listbox id="sortOperator_recordType"
								width="43px" mold="select" rows="1" />
							<listbox id="recordType" width="100px"
								mold="select" />
						</row>
					</rows>
				</grid>
				<listbox id="listBoxFinanceType" 
				            emptyMessage="${c:l('listbox.emptyMessage')}"
							fixedLayout="true" vflex="true" span="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false">
					<listhead sizable="true">
						<listheader id="listheader_FinType"
							label="${c:l('listheader_PromotionCode.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_FinTypeDesc"
							label="${c:l('listheader_FinTypeDesc.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_FinCcy"
							label="${c:l('listheader_FinCcy.label')}" sort="auto" 
							hflex="min" />
						<listheader id="listheader_FinBasicType"
							label="${c:l('listheader_FinDaysCalType.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_FinAcType"
							label="${c:l('listheader_FinAcType.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_SchdMthd"
							label="${c:l('listheader_SchdMthd.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_AlwGrace"
							label="${c:l('listheader_AlwGrace.label')}" sort="auto"
							hflex="min"/>
						<listheader id="listheader_FinDivision"
							label="${c:l('listheader_FinDivision.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							hflex="min" />
					</listhead>
				</listbox>
			  </div>
			</center>
		</borderlayout>
	</window>
	</window>
</zk>