<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_DeviationParamList"
			apply="${deviationParamListCtrl}" border="none" width="100%"
			title="${c:l('panel_deviationParamList.title')}">
			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="border-style: none;">

						<button
							id="button_DeviationParamList_DeviationParamSearch" height="24px"
							label="${c:l('label_Filter')}"
							autodisable="button_DeviationParamList_DeviationParamSearch,print,button_DeviationParamList_NewDeviationParam,btnRefresh,help"
							tooltiptext="${c:l('button_DeviationParamList_DeviationParamSearch.tooltiptext')}" />
						<button id="print" height="24px"
							label="${c:l('label_Print')}"
							autodisable="button_DeviationParamList_DeviationParamSearch,print,button_DeviationParamList_NewDeviationParam,btnRefresh,help"
							tooltiptext="${c:l('button_DeviationParamList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button
							id="button_DeviationParamList_NewDeviationParam" height="24px"
							label="${c:l('label_New')}" visible="false"
							autodisable="button_DeviationParamList_DeviationParamSearch,print,button_DeviationParamList_NewDeviationParam,btnRefresh,help"
							tooltiptext="${c:l('button_DeviationParamList_NewDeviationParam.tooltiptext')}" />
						<button id="btnRefresh" height="24px"
							label="${c:l('label_Refresh')}"
							autodisable="button_DeviationParamList_DeviationParamSearch,print,button_DeviationParamList_NewDeviationParam,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="help" visible="false" height="24px"
							label="${c:l('label_Help')}"
							autodisable="button_DeviationParamList_DeviationParamSearch,print,button_DeviationParamList_NewDeviationParam,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_DeviationParamList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label
										id="label_DeviationParamList_Code"
										value="${c:l('label_DeviationParamList_Code.value')}" />
									<listbox id="sortOperator_Code"
										width="43px" mold="select" rows="1" />
									<uppercasebox id="code"
										width="180px" maxlength="20" />
									<label
										id="label_DeviationParamList_Description"
										value="${c:l('label_DeviationParamList_Description.value')}" />
									<listbox
										id="sortOperator_Description" width="43px" mold="select"
										rows="1" />
									<textbox id="description"
										width="200px" maxlength="50" />
								</row>
								<row>
									<label
										id="label_DeviationParamList_Type"
										value="${c:l('label_DeviationParamList_Type.value')}" />
									<listbox id="sortOperator_Type"
										width="43px" mold="select" rows="1" />
									<textbox id="type" width="180px"
										maxlength="20" />
								</row>

								<row>
									<label
										id="label_DeviationParamList_RecordStatus"
										value="${c:l('label_DeviationParamList_RecordStatus.value')}" />
									<listbox
										id="sortOperator_RecordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_DeviationParamList_RecordType"
										value="${c:l('label_DeviationParamList_RecordType.value')}" />
									<listbox
										id="sortOperator_RecordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
								<row id="workFlowFrom">
									<label
										value="${c:l('common.fetch.selectfrom')}" />
									<cell colspan="5">
										<radiogroup>
											<radio id="fromApproved"
												selected="true"
												label="${c:l('common.fetch.fromapproved')}">
											</radio>
											<radio id="fromWorkFlow"
												label="${c:l('common.fetch.fromWorkFlow')}">
											</radio>
										</radiogroup>
									</cell>
								</row>
							</rows>
						</grid>

						<listbox id="listBoxDeviationParam"
							fixedLayout="true" span="true"
							emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false">
							<listhead sizable="true">
								<listheader id="listheader_Code"
									label="${c:l('listheader_Code.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Description"
									label="${c:l('listheader_Description.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_DataType"
									label="${c:l('listheader_DataType.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Type"
									label="${c:l('listheader_Type.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>

				<south border="none">
					<paging id="pagingDeviationParamList" height="35px" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>