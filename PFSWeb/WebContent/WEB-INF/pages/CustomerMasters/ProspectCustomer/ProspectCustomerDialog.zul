<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_ProspectCustomerDialog" border="normal"
		apply="${prospectCustomerDialogCtrl}" width="100%" height="100%"
		sizable="false">
		<borderlayout id="borderlayoutProspectCustomer">
			<north>
				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">
						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnNew" 
								tooltiptext="${c:l('btnNew.tooltiptext')}" sclass="z-toolbarbutton" visible="false"/>
							<button id="btnEdit" 
								tooltiptext="${c:l('btnEdit.tooltiptext')}" sclass="z-toolbarbutton" visible="false"/>
							<button id="btnDelete" 
								tooltiptext="${c:l('btnDelete.tooltiptext')}" sclass="z-toolbarbutton" />
							<button id="btnSave" 
								tooltiptext="${c:l('btnSave.tooltiptext')}" sclass="z-toolbarbutton"  />
							<button id="btnCancel" 
								tooltiptext="${c:l('btnCancel.tooltiptext')}" sclass="z-toolbarbutton" />
							<button id="btnNotes" 
								tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false" sclass="z-toolbarbutton" />
						</toolbar>
						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_CustomerDialog.title')}"
								sclass="label-heading" />
						</toolbar>
						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp" visible="false" 
								label="${c:l('label_Help')}"
								tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
							<button id="btnClose" 
								tooltiptext="${c:l('btnClose.tooltiptext')}" sclass="z-toolbarbutton" visible="false"/>
						</toolbar>
					</hbox>
				</div>
			</north>

			<center border="none" autoscroll="false">

				<groupbox id="gb_basicDetails" sclass="gb-dialog">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="190px" />
							<column />
						</columns>
						<rows>
							<row visible="true" id="row_custCIF">
								<label
									id="label_ProspectCustomerDialog_CustID"
									value="${c:l('label_ProspectCustomerDialog_CustID.value')}" />
								<hbox>
								<extendedcombobox id="lovDescCustCIF" />
									<label id="lovDescCustShrtName" />
									<button id="viewCustInfo"
										image="/images/icons/more.png"
										tooltiptext="${c:l('tooltip_Custinfo')}" />
								</hbox>
							</row>
							<row>
								<label
									id="label_ProspectCustomerDialog_CustCoreBank"
									value="${c:l('label_ProspectCustomerDialog_CustCoreBank.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="custCoreBank"
										maxlength="50" width="250px" style="overflow: hidden;" />
								</hbox>

							</row>
						</rows>
					</grid>
				</groupbox>

			</center>

			<south sclass="south-dialog" visible="false">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="75%">
						<radiogroup id="userAction" name="action" />
						<label
							id="label_ProspectCustomerDialog_RecordStatus"
							value="${c:l('label_ProspectCustomerDialog_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>

		</borderlayout>
	</window>
</zk>
