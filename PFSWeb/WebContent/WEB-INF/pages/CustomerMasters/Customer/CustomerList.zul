<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerList" apply="${customerListCtrl}"
		border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="35%,30%,35%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button
						id="button_CustomerList_CustomerSearchDialog" height="24px"
						label="${c:l('label_Filter')}"
						autodisable="button_CustomerList_CustomerSearchDialog,button_CustomerList_PrintList,button_CustomerList_NewCustomer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerList_CustomerSearchDialog.tooltiptext')}" />

					<button id="button_CustomerList_PrintList"
						height="24px" label="${c:l('label_Print')}"
						autodisable="button_CustomerList_CustomerSearchDialog,button_CustomerList_PrintList,button_CustomerList_NewCustomer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_CustomerList_NewCustomer"
						height="24px" label="${c:l('label_New')}"
						autodisable="button_CustomerList_CustomerSearchDialog,button_CustomerList_PrintList,button_CustomerList_NewCustomer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerList_NewCustomer.tooltiptext')}" />
					<button id="btnRefresh" height="24px"
						label="${c:l('label_Refresh')}"
						autodisable="button_CustomerList_CustomerSearchDialog,button_CustomerList_PrintList,button_CustomerList_NewCustomer,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" height="24px"
						label="${c:l('label_Help')}"
						autodisable="button_CustomerList_CustomerSearchDialog,button_CustomerList_PrintList,button_CustomerList_NewCustomer,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true" style="border:0px">
						<columns>
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
						</columns>
						<rows>
							<row>
								<label id="label_CustomerSearch_CustCIF"
									value="${c:l('label_CustomerSearch_CustCIF.value')}" />
								<listbox id="sortOperator_custCIF"
									width="43px" mold="select" rows="1" />
								<textbox id="custCIF" width="108px"
									maxlength="19" />

								<label
									id="label_CustomerSearch_CustCoreBank"
									value="${c:l('label_CustomerSearch_CustCoreBank.value')}" />
								<listbox id="sortOperator_custCoreBank"
									width="43px" mold="select" rows="1" />
								<textbox id="custCoreBank" width="171px"
									maxlength="50" />
							</row>
							<row>
								<label
									id="label_CustomerSearch_CustShrtName"
									value="${c:l('label_CustomerSearch_CustShrtName.value')}" />
								<listbox id="sortOperator_custShrtName"
									width="43px" mold="select" rows="1" />
								<textbox id="custShrtName" width="171px"
									maxlength="50" />

								<label
									id="label_CustomerSearch_CustDftBranch"
									value="${c:l('label_CustomerSearch_CustDftBranch.value')}" />
								<listbox id="sortOperator_custDftBranch"
									width="43px" mold="select" rows="1" />
								<textbox id="custDftBranch"
									width="108px" maxlength="19" />
							</row>
							<row>
								<label
									id="label_CustomerSearch_CustCtgCode"
									value="${c:l('label_CustomerSearch_CustCtgCode.value')}" />
								<listbox id="sortOperator_custCtgCode"
									width="43px" mold="select" rows="1" />
								<combobox id="custCtgCode" width="171px"/>

								<label
									id="label_CustomerSearch_CustTypeCode"
									value="${c:l('label_CustomerSearch_CustTypeCode.value')}" />
								<listbox id="sortOperator_custTypeCode"
									width="43px" mold="select" rows="1" />
								<textbox id="custTypeCode" width="171px"
									maxlength="50" />
							</row>
							<row>
								<label
									id="label_CustomerSearch_RecordStatus"
									value="${c:l('label_CustomerSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_recordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="108px"
									maxlength="19" />

								<label
									id="label_CustomerSearch_RecordType"
									value="${c:l('label_CustomerSearch_RecordType.value')}" />
								<listbox id="sortOperator_recordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="108px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxCustomer" fixedLayout="true"
						vflex="true" span="true"
						emptyMessage="${c:l('listbox.emptyMessage')}"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_CustCIF"
								label="${c:l('listheader_CustCIF.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustCoreBank"
								label="${c:l('listheader_CustCoreBank.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustShrtName"
								label="${c:l('listheader_CustShrtName.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustDftBranch"
								label="${c:l('listheader_CustDftBranch.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustCtgCode"
								label="${c:l('listheader_CustCtgCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustTypeCode"
								label="${c:l('listheader_CustTypeCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>

					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingCustomerList" />
			</south>

		</borderlayout>
	</window>
</zk>