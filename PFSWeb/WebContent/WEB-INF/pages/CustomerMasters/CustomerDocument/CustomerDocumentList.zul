<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerDocumentList"
		apply="${customerDocumentListCtrl}" border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" style=" border-style: none;">
					<button
						id="button_CustomerDocumentList_CustomerDocumentSearchDialog"
						height="24px" label = "${c:l('label_Filter')}"
						autodisable="button_CustomerDocumentList_CustomerDocumentSearchDialog,button_CustomerDocumentList_PrintList,
										button_CustomerDocumentList_NewCustomerDocument,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerDocumentList_CustomerDocumentSearchDialog.tooltiptext')}" />
					<button id="button_CustomerDocumentList_PrintList"
						height="24px" label = "${c:l('label_Print')}"
						autodisable="button_CustomerDocumentList_CustomerDocumentSearchDialog,button_CustomerDocumentList_PrintList,
										button_CustomerDocumentList_NewCustomerDocument,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerDocumentList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" style=" border-style: none;">
					<button
						id="button_CustomerDocumentList_NewCustomerDocument" height="24px"
						label = "${c:l('label_New')}"
						autodisable="button_CustomerDocumentList_CustomerDocumentSearchDialog,button_CustomerDocumentList_PrintList,
										button_CustomerDocumentList_NewCustomerDocument,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_CustomerDocumentList_NewCustomerDocument.tooltiptext')}" />
					<button id="btnRefresh" height="24px"
						label = "${c:l('label_Refresh')}"
						autodisable="button_CustomerDocumentList_CustomerDocumentSearchDialog,button_CustomerDocumentList_PrintList,
										button_CustomerDocumentList_NewCustomerDocument,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" height="24px"
						label = "${c:l('label_Help')}"
						autodisable="button_CustomerDocumentList_CustomerDocumentSearchDialog,button_CustomerDocumentList_PrintList,
										button_CustomerDocumentList_NewCustomerDocument,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerDocumentList">
			<north border="none" />

			<center border="none">

				<listbox id="listBoxCustomerDocument" vflex="true"
					tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
					height="100%" multiple="false">
					<listhead sizable="true">
						<listheader id="listheader_CustDocType"
							label="${c:l('listheader_CustDocType.label')}" sort="auto"
							width="40%" />
						<listheader id="listheader_CustDocTitle"
							label="${c:l('listheader_CustDocTitle.label')}" sort="auto"
							width="20%" />
						<listheader id="listheader_CustDocSysName"
							label="${c:l('listheader_CustDocSysName.label')}" sort="auto"
							width="20%" />
						<listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							width="10%" />
						<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							width="10%" />
					</listhead>
				</listbox>

			</center>
			<south border="none">
				<paging id="pagingCustomerDocumentList" />
			</south>

		</borderlayout>
	</window>
</zk>