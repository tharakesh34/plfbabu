<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerLimitList" apply="${customerLimitListCtrl}"
		border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%">

				<!-- COMMON BUTTONS -->
				<toolbar align="start"
					 width="150px" sclass="toolbar-start">
					<hbox align="center" style="padding: 2px" />
				</toolbar>

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<hbox align="center">
						<button
							id="button_CustomerLimitList_CustomerLimitSearchDialog" 
							label = "${c:l('label_Filter')}"
							tooltiptext="${c:l('button_CustomerLimitList_CustomerLimitSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="button_CustomerLimitList_PrintList"
							 label = "${c:l('label_Print')}"
							tooltiptext="${c:l('button_CustomerLimitList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
					</hbox>
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_CustomerLimitList_NewCustomerLimit"
						 label = "${c:l('label_New')}"
						tooltiptext="${c:l('button_CustomerLimitList_NewCustomerLimit.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnRefresh" 
						label = "${c:l('label_Refresh')}"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnHelp" visible="false" 
						label = "${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerLimitList">
			<north border="none" />

			<center border="none">

				<listbox id="listBoxCustomerLimit" emptyMessage="${c:l('listbox.emptyMessage')}"
					tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
					height="100%" multiple="false" sizedByContent="true" span="true">
					<listhead sizable="true">
						<listheader id="listheader_CustCIF"
							label="${c:l('listheader_CustCIF.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_CustShrtName"
							label="${c:l('listheader_CustShrtName.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_Country"
							label="${c:l('listheader_Country.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_custGroupName"
							label="${c:l('listheader_custGroupName.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_Currency"
							label="${c:l('listheader_Currency.label')}" sort="auto"
							hflex="min" />
					</listhead>

				</listbox>
			</center>
			<south border="none">
				<paging id="pagingCustomerLimitList" />
			</south>

		</borderlayout>
	</window>
</zk>