<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_MandateRegistrationList" apply="${mandateRegistrationListCtrl}" border="none" width="100%">
			<div sclass="z-toolbar" style="padding:0px" >
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center" style="border-style: none;">
						<button id="button_MandateList_MandateSearch" label="${c:l('label_Filter')}" autodisable="button_MandateList_MandateSearch,print,button_MandateList_NewMandate,btnRefresh,help" tooltiptext="${c:l('button_MandateList_MandateSearch.tooltiptext')}" />
						<button id="btnDownload" label="${c:l('label_MandateRegistrationList_btndownload.value')}" />
					</toolbar>
					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button id="btnRefresh" height="24px" label="${c:l('label_Refresh')}" autodisable="button_MandateList_MandateSearch,print,button_MandateList_NewMandate,btnRefresh,help" tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_MandateList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row visible="false">
									<label id="label_MandateList_MandateID" value="${c:l('label_MandateList_MandateID.value')}" />
									<listbox id="sortOperator_MandateID" width="43px" mold="select" rows="1" />
									<longbox id="mandateID" width="171px" maxlength="26" />
									<label id="label_MandateList_MandateRef" value="${c:l('label_MandateList_MandateRef.value')}" />
									<listbox id="sortOperator_MandateRef" width="43px" mold="select" rows="1" />
									<textbox id="mandateRef" width="171px" maxlength="50" />
								</row>
								<row>
									<label id="label_MandateList_MandateType" value="${c:l('label_MandateList_MandateType.value')}" />
									<listbox id="sortOperator_MandateType" width="43px" mold="select" rows="1" />
									<combobox id="mandateType" width="171px" />
									<label id="label_MandateList_CustCIF" value="${c:l('label_MandateList_CustCIF.value')}" />
									<listbox id="sortOperator_CustCIF" width="43px" mold="select" rows="1" />
									<textbox id="custCIF" width="171px" />
								</row>
								<row>
									<label id="label_MandateList_BankName" value="${c:l('label_MandateList_BankName.value')}" />
									<listbox id="sortOperator_BankName" width="43px" mold="select" rows="1" />
									<textbox id="bankName" width="171px" />
									<label id="label_MandateList_AccNumber" value="${c:l('label_MandateList_AccNumber.value')}" />
									<listbox id="sortOperator_AccNumber" width="43px" mold="select" rows="1" />
									<textbox id="accNumber" width="171px" />
								</row>
								<row>
									<label id="label_MandateList_AccType" value="${c:l('label_MandateList_AccType.value')}" />
									<listbox id="sortOperator_AccType" width="43px" mold="select" rows="1" />
									<combobox id="accType" width="171px" />
									<label id="label_MandateList_ExpiryDate" value="${c:l('label_MandateList_ExpiryDate.value')}" />
									<listbox id="sortOperator_ExpiryDate" width="43px" mold="select" rows="1" />
									<datebox id="expiryDate" width="171px" />
								</row>
								
								<row visible="false">
									<label id="label_MandateList_Status" value="${c:l('label_MandateList_Status.value')}" />
									<listbox id="sortOperator_Status" width="43px" mold="select" rows="1" />
									<combobox id="status" width="171px" />
								</row>
								 
								<row visible="false">
									<label id="label_MandateList_JointAccHolderName" value="${c:l('label_MandateList_JointAccHolderName.value')}" />
									<listbox id="sortOperator_JointAccHolderName" width="43px" mold="select" rows="1" />
									<textbox id="jointAccHolderName" width="171px" maxlength="50" />
								</row>
								<row visible="false">
									<label id="label_MandateList_StartDate" value="${c:l('label_MandateList_StartDate.value')}" />
									<listbox id="sortOperator_StartDate" width="43px" mold="select" rows="1" />
									<datebox id="startDate" width="171px" />
								</row>
								<row>
									<label value="${c:l('label_Branches.value')}" />
										<listbox id="sortOperator_btnbranchDetails" width="43px" mold="select" rows="1" />
										<cell colspan="1">
										<uppercasebox id="branchDetails" width = "132px"/>
										<button id="btnbranchDetails" image="/images/icons/LOVSearch.png" />
										</cell>
								</row>
								
						 	<row>
									<label value="${c:l('label_MandateList_FromDate.value')}" />
									<label/>
									<hbox>
										<space spacing="2px" sclass="mandatory" />
									<datebox id="fromDate" width="171px" format="dd/MM/yyyy" />
									</hbox>
									
									<label value="${c:l('label_MandateList_ToDate.value')}" />
									<label value="" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
									<datebox id="toDate" width="171px" format="dd/MM/yyyy"/>
									</hbox>
								</row> 
							</rows> 
						</grid>

						<listbox id="listBoxMandateRegistration"
							fixedLayout="true" span="true" width="100%" height="100%"
							sizedByContent="true" multiple="true">
							<listhead sizable="true">
								<listheader
									id="listHeader_CheckBox_Name" hflex="min" align="center" />
								<listheader id="listheader_MandateType"
									label="${c:l('listheader_MandateType.label')}" hflex="min" />
								<listheader id="listheader_CustCIF"
									label="${c:l('listheader_CustCIF.label')}" hflex="min" />
								<listheader id="listheader_CustName"
									label="${c:l('listheader_CustName.label')}" hflex="min"/>	
								<listheader id="listheader_BankName"
									label="${c:l('listheader_Mandate_BankName.label')}" hflex="min" />
								<listheader id="listheader_AccNumber"
									label="${c:l('listheader_AccNumber.label')}" hflex="min" />
								<listheader id="listheader_AccType"
									label="${c:l('listheader_AccType.label')}" hflex="min" />
								<listheader id="listheader_Amount"
									label="${c:l('listheader_Amount.label')}" hflex="min" />
								<listheader id="listheader_ExpiryDate"
									label="${c:l('listheader_ExpiryDate.label')}" hflex="min" />
								<listheader id="listheader_Status"
									label="${c:l('listheader_Status.label')}" hflex="min" />
								<listheader id="listheader_InputDate"
									label="${c:l('listheader_InputDate.label')}" hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" hflex="min"
									visible="false" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" hflex="min"
									visible="false" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingMandateList"/>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>