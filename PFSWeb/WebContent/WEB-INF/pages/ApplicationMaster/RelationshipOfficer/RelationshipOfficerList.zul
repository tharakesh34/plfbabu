<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_RelationshipOfficerList"
		apply="${relationshipOfficerListCtrl}" border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" style="border-style: none;">
					<button
						id="button_RelationshipOfficerList_RelationshipOfficerSearchDialog"
						height="24px" label = "${c:l('label_Filter')}"
						autodisable="button_RelationshipOfficerList_RelationshipOfficerSearchDialog,button_RelationshipOfficerList_PrintList,button_RelationshipOfficerList_NewRelationshipOfficer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_RelationshipOfficerList_RelationshipOfficerSearchDialog.tooltiptext')}" />
					<button
						id="button_RelationshipOfficerList_PrintList" height="24px"
						label = "${c:l('label_Print')}"
						autodisable="button_RelationshipOfficerList_RelationshipOfficerSearchDialog,button_RelationshipOfficerList_PrintList,button_RelationshipOfficerList_NewRelationshipOfficer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_RelationshipOfficerList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" style="border-style: none;">
					<button
						id="button_RelationshipOfficerList_NewRelationshipOfficer"
						height="24px" label = "${c:l('label_New')}"
						autodisable="button_RelationshipOfficerList_RelationshipOfficerSearchDialog,button_RelationshipOfficerList_PrintList,button_RelationshipOfficerList_NewRelationshipOfficer,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_RelationshipOfficerList_NewRelationshipOfficer.tooltiptext')}" />
					<button id="btnRefresh" height="24px"
						label = "${c:l('label_Refresh')}"
						autodisable="button_RelationshipOfficerList_RelationshipOfficerSearchDialog,button_RelationshipOfficerList_PrintList,button_RelationshipOfficerList_NewRelationshipOfficer,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" height="24px"
						label = "${c:l('label_Help')}"
						autodisable="button_RelationshipOfficerList_RelationshipOfficerSearchDialog,button_RelationshipOfficerList_PrintList,button_RelationshipOfficerList_NewRelationshipOfficer,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_RelationshipOfficerList">
			<north border="none" />

			<center border="none">

				<listbox id="listBoxRelationshipOfficer" vflex="true"
					tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
					height="100%" multiple="false" sizedByContent="true" span="true">
					<listhead sizable="true">
						<listheader id="listheader_ROfficerCode"
							label="${c:l('listheader_ROfficerCode.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_ROfficerDesc"
							label="${c:l('listheader_ROfficerDesc.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_ROfficerDeptCode"
							label="${c:l('listheader_ROfficerDeptCode.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_ROfficerIsActive"
							label="${c:l('listheader_ROfficerIsActive.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							hflex="min" />
					</listhead>
				</listbox>

			</center>
			<south border="none">
				<paging id="pagingRelationshipOfficerList" />
			</south>

		</borderlayout>
	</window>
</zk>