<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_SalesOfficerDialog" border="normal"
		apply="${salesOfficerDialogCtrl}" width="100%" height="100%"
		sizable="false">

		<borderlayout id="borderlayoutSalesOfficer">
			<north>

				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">

						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnNew" height="24px"
								tooltiptext="${c:l('btnNew.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnEdit" height="24px"
								tooltiptext="${c:l('btnEdit.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnDelete" height="24px"
								tooltiptext="${c:l('btnDelete.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnSave" height="24px"
								tooltiptext="${c:l('btnSave.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnCancel" height="24px"
								tooltiptext="${c:l('btnCancel.tooltiptext')}" />
							<button id="btnNotes" height="24px"
								tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>

						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_SalesOfficerDialog.title')}"
								sclass="label-heading">
							</label>
						</toolbar>

						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp" height="24px"
								label="${c:l('label_Help')}"
								tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnClose" height="24px"
								tooltiptext="${c:l('btnClose.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>
					</hbox>
				</div>
			</north>

			<center border="none" autoscroll="false">
				<groupbox id="gb_basicDetails" sclass="gb-dialog">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="150px" />
							<column />
						</columns>
						<rows>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffCode"
									value="${c:l('label_SalesOfficerDialog_SalesOffCode.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<uppercasebox id="salesOffCode"
										maxlength="8" width="72px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffFName"
									value="${c:l('label_SalesOfficerDialog_SalesOffFName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="salesOffFName"
										maxlength="50" width="450px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffMName"
									value="${c:l('label_SalesOfficerDialog_SalesOffMName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="salesOffMName"
										maxlength="50" width="450px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffLName"
									value="${c:l('label_SalesOfficerDialog_SalesOffLName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="salesOffLName"
										maxlength="50" width="450px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffShrtName"
									value="${c:l('label_SalesOfficerDialog_SalesOffShrtName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="salesOffShrtName"
										maxlength="50" width="450px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffDept"
									value="${c:l('label_SalesOfficerDialog_SalesOffDept.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="salesOffDept"
										width="72px" visible="false" />
									<textbox
										id="lovDescSalesOffDeptName" width="200px" readonly="true" />
									<button
										id="btnSearchSalesOffDept"
										image="/images/icons/LOVSearch.png" height="24px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_SalesOfficerDialog_SalesOffIsActive"
									value="${c:l('label_SalesOfficerDialog_SalesOffIsActive.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="salesOffIsActive"
										checked="false" />
								</hbox>
							</row>

						</rows>
					</grid>
				</groupbox>
			</center>

			<south sclass="south-dialog">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="75%">
						<radiogroup id="userAction" name="action" />
						<label
							id="label_SalesOfficerDialog_RecordStatus"
							value="${c:l('label_SalesOfficerDialog_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>

		</borderlayout>
	</window>
</zk>
