<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_ClusterList" apply="${clusterListCtrl}" border="none" width="100%">
			<div sclass="z-toolbar" style="padding:0px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-center">
						<button id="button_ClusterList_ClusterSearch" label="${c:l('label_Filter')}"
							autodisable="button_ClusterList_ClusterSearch,print,button_ClusterList_NewCluster,btnRefresh,help"
							tooltiptext="${c:l('button_ClusterList_ClusterSearch.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="print" label="${c:l('label_Print')}"
							autodisable="button_ClusterList_ClusterSearch,print,button_ClusterList_NewCluster,btnRefresh,help"
							tooltiptext="${c:l('button_ClusterList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button id="button_ClusterList_NewCluster" label="${c:l('label_New')}"
							autodisable="button_ClusterList_ClusterSearch,print,button_ClusterList_NewCluster,btnRefresh,help"
							tooltiptext="${c:l('button_ClusterList_NewCluster.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="btnRefresh" label="${c:l('label_Refresh')}"
							autodisable="button_ClusterList_ClusterSearch,print,button_ClusterList_NewCluster,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="help" label="${c:l('label_Help')}" visible="false"
							autodisable="button_ClusterList_ClusterSearch,print,button_ClusterList_NewCluster,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_ClusterList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label id="label_ClusterList_Entity"
										value="${c:l('label_ClusterList_Entity.value')}" />
									<listbox id="sortOperator_Entity" width="43px" mold="select" rows="1"
										emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
									<textbox id="entity" width="200px" />
									<label id="label_ClusterList_ClusterType"
										value="${c:l('label_ClusterList_ClusterType.value')}" />
									<listbox id="sortOperator_ClusterType" width="43px" mold="select" rows="1"
										emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
									<textbox id="clusterType" width="200px" />
								</row>
								<row>
									<label id="label_ClusterList_Code" value="${c:l('label_ClusterList_Code.value')}" />
									<listbox id="sortOperator_Code" width="43px" mold="select" rows="1"
										emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
									<uppercasebox id="code" width="200px" maxlength="8" />
									<label id="label_ClusterList_Name" value="${c:l('label_ClusterList_Name.value')}" />
									<listbox id="sortOperator_Name" width="43px" mold="select" rows="1"
										emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
									<textbox id="name" width="200px" maxlength="50" />
								</row>
								<row>
									<label id="label_ClusterList_RecordStatus"
										value="${c:l('label_ClusterList_RecordStatus.value')}" />
									<listbox id="sortOperator_RecordStatus" width="43px" mold="select" rows="1" />
									<textbox id="recordStatus" width="200px" maxlength="50" />
									<label id="label_ClusterList_RecordType"
										value="${c:l('label_ClusterList_RecordType.value')}" />
									<listbox id="sortOperator_RecordType" width="43px" mold="select" rows="1" />
									<listbox id="recordType" width="200px" mold="select" />
								</row>
								<row visible="false">
									<label id="label_ClusterList_Parent"
										value="${c:l('label_ClusterList_Parent.value')}" />
									<listbox id="sortOperator_Parent" width="43px" mold="select" rows="1"
										emptyMessage="${c:l('listbox.NoEmptyMessage')}" />
									<intbox id="parent" width="200px" />
								</row>
							</rows>
						</grid>

						<listbox id="listBoxCluster" emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%" height="100%" multiple="false" sizedByContent="true"
							span="true">
							<listhead sizable="true">
								<listheader id="listheader_Entity" label="${c:l('listheader_Entity.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_ClusterType" label="${c:l('listheader_ClusterType.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_Code" label="${c:l('listheader_Code.label')}" sort="auto"
									hflex="min" />	
								<listheader id="listheader_Parent" label="${c:l('listheader_Parent.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus" label="${c:l('label.RecordStatus')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordType" label="${c:l('label.RecordType')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>

				<south border="none">
					<paging id="pagingClusterList" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>