<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_BankDetailList" apply="${bankDetailListCtrl}"
			border="none" width="100%">

			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />

					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="border-style: none;">
						<button
							id="button_BankDetailList_BankDetailSearchDialog"
							label="${c:l('label_Filter')}"
							autodisable="button_BankDetailList_BankDetailSearchDialog,print,
											  button_BankDetailList_NewBankDetail,btnRefresh,help"
							tooltiptext="${c:l('button_BankDetailList_BankDetailSearchDialog.tooltiptext')}" />
						<button id="print" label="${c:l('label_Print')}"
							autodisable="button_BankDetailList_BankDetailSearchDialog,print,
											  button_BankDetailList_NewBankDetail,btnRefresh,help"
							tooltiptext="${c:l('button_BankDetailList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button id="button_BankDetailList_NewBankDetail"
							label="${c:l('label_New')}"
							autodisable="button_BankDetailList_BankDetailSearchDialog,print,
											  button_BankDetailList_NewBankDetail,btnRefresh,help"
							tooltiptext="${c:l('button_BankDetailList_NewBankDetail.tooltiptext')}" />

						<button id="btnRefresh"
							label="${c:l('label_Refresh')}"
							autodisable="button_BankDetailList_BankDetailSearchDialog,print,
											  button_BankDetailList_NewBankDetail,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="help" visible="false"
							label="${c:l('label_Help')}"
							autodisable="button_BankDetailList_BankDetailSearchDialog,print,
											  button_BankDetailList_NewBankDetail,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_BankDetailList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="130px" />
								<column width="50px" />
								<column />
								<column width="130px" />
								<column width="50px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										id="label_BankDetailSearch_BankCode"
										value="${c:l('label_BankDetailSearch_BankCode.value')}" />
									<listbox id="sortOperator_bankCode"
										width="43px" mold="select" rows="1" />
									<uppercasebox id="bankCode"
										width="100px" maxlength="8" />
									<label
										id="label_BankDetailSearch_BankName"
										value="${c:l('label_BankDetailSearch_BankName.value')}" />
									<listbox id="sortOperator_bankName"
										width="43px" mold="select" rows="1" />
									<textbox id="bankName" width="300px"
										maxlength="50" />
								</row>
								<row>
									<label
										id="label_BankDetailSearch_Active"
										value="${c:l('label_BankDetailSearch_Active.value')}" />
									<listbox id="sortOperator_active"
										width="43px" mold="select" rows="1" />
									<checkbox id="active"
										checked="false" />
								</row>
								<row id="row_AlwWorkflow">
									<label
										id="label_BankDetailSearch_RecordStatus"
										value="${c:l('label_BankDetailSearch_RecordStatus.value')}" />
									<listbox
										id="sortOperator_RecordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_BankDetailSearch_RecordType"
										value="${c:l('label_BankDetailSearch_RecordType.value')}" />
									<listbox
										id="sortOperator_RecordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>
						<listbox id="listBoxBankDetail"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false" sizedByContent="true"
							emptyMessage="${c:l('listbox.emptyMessage')}" span="true">
							<listhead sizable="true">
								<listheader id="listheader_BankCode"
									label="${c:l('listheader_BankCode.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_BankName"
									label="${c:l('listheader_BankName.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Active"
									label="${c:l('listheader_Active.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingBankDetailList" />
				</south>
			</borderlayout>
		</window>
	</window>
</zk>