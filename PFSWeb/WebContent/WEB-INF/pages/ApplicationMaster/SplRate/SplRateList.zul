<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_SplRateList" apply="${splRateListCtrl}"
		border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button
						id="button_SplRateList_SplRateSearchDialog" 
						label = "${c:l('label_Filter')}"
						autodisable="button_SplRateList_SplRateSearchDialog,button_SplRateList_PrintList,
									 button_SplRateList_NewSplRate, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_SplRateList_SplRateSearchDialog.tooltiptext')}" />
					<button id="button_SplRateList_PrintList"
						 label = "${c:l('label_Print')}"
						autodisable="button_SplRateList_SplRateSearchDialog,button_SplRateList_PrintList,
									 button_SplRateList_NewSplRate, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_SplRateList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_SplRateList_NewSplRate"
						 label = "${c:l('label_New')}"
						autodisable="button_SplRateList_SplRateSearchDialog,button_SplRateList_PrintList,
									 button_SplRateList_NewSplRate, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_SplRateList_NewSplRate.tooltiptext')}" />

					<button id="btnRefresh" 
						label = "${c:l('label_Refresh')}"
						autodisable="button_SplRateList_SplRateSearchDialog,button_SplRateList_PrintList,
									 button_SplRateList_NewSplRate, btnRefresh, btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" 
						label = "${c:l('label_Help')}"
						autodisable="button_SplRateList_SplRateSearchDialog,button_SplRateList_PrintList,
									 button_SplRateList_NewSplRate, btnRefresh, btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_SplRateList">
			<north border="none" />

			<center border="none">
			  <div>
				<grid id="searchGrid" sclass="GridLayoutNoBorder" fixedLayout="true"
					style="border:0px; padding-left:5px; padding-right:5px;">
					<columns>
									<column width="130px" />
									<column width="50px" />
									<column />
									<column width="130px" />
									<column width="50px" />
									<column />
				   </columns>
					<rows>
						<row>
							<label id="label_SplRateSearch_SRType"
								value="${c:l('label_SplRateSearch_SRType.value')}" />
							<listbox id="sortOperator_sRType"
								width="43px" mold="select" rows="1" />
							<uppercasebox id="sRType" width="100px"
								maxlength="8" />
							<label id="label_SplRateSearch_SREffDate"
								value="${c:l('label_SplRateSearch_SREffDate.value')}" />
							<listbox id="sortOperator_sREffDate"
								width="43px" mold="select" rows="1" />
							<datebox id="sREffDate" width="100px" format="dd/MM/yyyy" />
						</row>
						<row>
							<label id="label_SplRateSearch_SRRate"
								value="${c:l('label_SplRateSearch_SRRate.value')}" />
							<listbox id="sortOperator_sRRate"
								width="43px" mold="select" rows="1" />
							<decimalbox id="sRRate" width="140px"
								maxlength="13" format="##0.00#######"/>
						</row>
						<row id="row_AlwWorkflow">
							<label id="label_SplRateSearch_RecordStatus"
								value="${c:l('label_SplRateSearch_RecordStatus.value')}" />
							<listbox id="sortOperator_recordStatus"
								width="43px" mold="select" rows="1" />
							<textbox id="recordStatus" width="100px"
								maxlength="50" />
							<label id="label_SplRateSearch_RecordType"
								value="${c:l('label_SplRateSearch_RecordType.value')}" />
							<listbox id="sortOperator_recordType"
								width="43px" mold="select" rows="1" />
							<listbox id="recordType" width="100px"
								mold="select" />
						</row>
					</rows>
				</grid>
				<listbox id="listBoxSplRate" vflex="true"
					tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
					height="100%" multiple="false" span="true">
					<listhead sizable="true">
						<listheader id="listheader_SRType"
							label="${c:l('listheader_SRType.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_SREffDate"
							label="${c:l('listheader_SREffDate.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_SRRate"
							label="${c:l('listheader_SRRate.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							hflex="min" />
						<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							hflex="min" />
					</listhead>
				</listbox>
			</div>
			</center>
			<south border="none">
				<paging id="pagingSplRateList" />
			</south>

		</borderlayout>
	</window>
</zk>