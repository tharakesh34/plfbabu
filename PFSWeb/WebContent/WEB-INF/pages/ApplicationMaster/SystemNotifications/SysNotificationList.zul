<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_SysNotificationList"
			apply="${sysNotificationListCtrl}" border="none" width="100%"
			title="${c:l('panel_SysNotificationList.title')}">
			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-center">

						<button
							id="button_SysNotificationList_SysNotificationSearch"
							height="24px" label="${c:l('label_Filter')}"
							autodisable="button_SysNotificationList_SysNotificationSearch,print,button_SysNotificationList_NewSysNotification,btnRefresh,help"
							tooltiptext="${c:l('button_SysNotificationList_SysNotificationSearch.tooltiptext')}" />
						<button id="print" height="24px"
							label="${c:l('label_Print')}"
							autodisable="button_SysNotificationList_SysNotificationSearch,print,button_SysNotificationList_NewSysNotification,btnRefresh,help"
							tooltiptext="${c:l('button_SysNotificationList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button
							id="button_SysNotificationList_NewSysNotification" height="24px"
							label="${c:l('label_New')}"
							autodisable="button_SysNotificationList_SysNotificationSearch,print,button_SysNotificationList_NewSysNotification,btnRefresh,help"
							tooltiptext="${c:l('button_SysNotificationList_NewSysNotification.tooltiptext')}" />
						<button id="btnRefresh" height="24px"
							label="${c:l('label_Refresh')}"
							autodisable="button_SysNotificationList_SysNotificationSearch,print,button_SysNotificationList_NewSysNotification,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="help" visible="false" height="24px"
							label="${c:l('label_Help')}"
							autodisable="button_SysNotificationList_SysNotificationSearch,print,button_SysNotificationList_NewSysNotification,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_SysNotificationList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label
										id="label_SysNotificationList_Code"
										value="${c:l('label_SysNotificationList_Code.value')}" />
									<listbox id="sortOperator_QueryCode"
										width="43px" mold="select" rows="1" />
									<uppercasebox id="queryCode"
										width="125px" />
									<label
										id="label_SysNotificationList_Description"
										value="${c:l('label_SysNotificationList_Description.value')}" />
									<listbox
										id="sortOperator_Description" width="43px" mold="select"
										rows="1" />
									<textbox id="description"
										width="200px" />
								</row>
								<row>
									<label
										id="label_SysNotificationList_Template"
										value="${c:l('label_SysNotificationList_Template.value')}" />
									<listbox id="sortOperator_Template"
										width="43px" mold="select" rows="1" />
									<uppercasebox id="template"
										width="125px"  />
								</row>
								<row visible="false">
									<label
										id="label_SysNotificationList_RecordStatus"
										value="${c:l('label_SysNotificationList_RecordStatus.value')}" />
									<listbox
										id="sortOperator_RecordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_SysNotificationList_RecordType"
										value="${c:l('label_SysNotificationList_RecordType.value')}" />
									<listbox
										id="sortOperator_RecordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>
						<listbox id="listBoxSysNotification"
							fixedLayout="true" span="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false">
							<listhead sizable="true">
								<listheader id="listheader_QueryCode"
									label="${c:l('listheader_QueryCode.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Description"
									label="${c:l('listheader_Description.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Template"
									label="${c:l('listheader_Template.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Active"
									visible="false" label="${c:l('listheader_Active.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordStatus"
									visible="false" label="${c:l('listheader_RecordStatus.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordType"
									visible="false" label="${c:l('listheader_RecordType.label')}"
									sort="auto" hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingSysNotificationList" />
				</south>
			</borderlayout>
		</window>
	</window>
</zk>