<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_AgreementDefinitionDialog" border="normal"
		apply="${agreementDefinitionDialogCtrl}" width="100%" height="100%"
		sizable="false">
		<borderlayout id="borderlayoutAgreementDefinition">
			<north>
				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">

						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">

							<button id="btnNew" height="24px"
								tooltiptext="${c:l('btnNew.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnEdit" height="24px"
								tooltiptext="${c:l('btnEdit.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnDelete" height="24px"
								tooltiptext="${c:l('btnDelete.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnSave" height="24px"
								tooltiptext="${c:l('btnSave.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnCancel" height="24px"
								tooltiptext="${c:l('btnCancel.tooltiptext')}" />
							<button id="btnNotes" height="24px"
								tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>
						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_AgreementDefinitionDialog.title')}"
								sclass="label-heading" />

						</toolbar>

						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp" height="24px"
								label="${c:l('label_Help')}"
								tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnClose" height="24px"
								tooltiptext="${c:l('btnClose.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>
					</hbox>
				</div>
			</north>

			<center border="none">
				<groupbox id="gb_basicDetails" sclass="gb-dialog"
					closable="false">
					<caption label="${c:l('AgreementDetails')}" />
					<grid sclass="GridLayoutNoBorder"
						fixedLayout="true">
						<columns>
							<column width="250px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									id="label_AgreementDefinitionDialog_AggCode"
									value="${c:l('label_AgreementDefinitionDialog_AggCode.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<uppercasebox id="aggCode"
										maxlength="50" width="120px" />
								</hbox>
							</row>
							<row>
								<label
									id="label_AgreementDefinitionDialog_AggName"
									value="${c:l('label_AgreementDefinitionDialog_AggName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="aggName"
										maxlength="100" width="250px" />
								</hbox>
							</row>
							<row>
								<label
									id="label_AgreementDefinitionDialog_AggDesc"
									value="${c:l('label_AgreementDefinitionDialog_AggDesc.value')}" />
								<hbox>
									<space spacing="2px" />
									<textbox id="aggDesc" maxlength="50"
										width="250px" />
								</hbox>
							</row>
							<row>
								<label
									id="label_AgreementDefinitionDialog_AggReportName"
									value="${c:l('label_AgreementDefinitionDialog_AggReportName.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="aggReportName"
										maxlength="100" width="250px" />
								</hbox>
							</row>

							<row>
								<label
									id="label_AgreementDefinitionDialog_AggReqDetails"
									value="${c:l('label_AgreementDefinitionDialog_AggReqDetails.value')}" />
								<hbox>
									<space spacing="2px" />
									<groupbox mold="3d"
										contentStyle="border:5">
										<vlayout height="200px"
											width="300px" style="overflow:auto;">
											<checkbox
												id="AggCheck_SelectAll"
												label="${c:l('label_AgreementDefinitionDialog_AggSelectAll.value')}" />
											<vlayout
												id="AgreementDetails">
											</vlayout>
										</vlayout>
									</groupbox>
								</hbox>
							</row>


							<!-- 	<row>
								<label
								id="label_AgreementDefinitionDialog_AggReportPath"
								value="${c:l('label_AgreementDefinitionDialog_AggReportPath.value')}" />
								<hbox>
								<space
								spacing="2px" sclass="mandatory" />
								<textbox
								id="aggReportPath" maxlength="100" width="250px" />
								<button
								upload="true" label="Browse" id="brwAgreementDoc" />
								</hbox>
								</row> -->
							<row>
								<label
									id="label_AgreementDefinitionDialog_AggIsActive"
									value="${c:l('label_AgreementDefinitionDialog_AggIsActive.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="aggIsActive"
										checked="false" />
								</hbox>
							</row>
						</rows>
					</grid>
				</groupbox>
				<!-- <grid sclass="GridLayoutNoBorder"
					fixedLayout="true" style="padding-top:0px;">
					<columns>
					<column/>
					<column style="border:0px;" />
					</columns>
					<rows>
					<row>
					<div id="orgDetailTabDiv">
					
					</div>
					<vlayout>
					<div id="signCopyPdf">
					<iframe id="agreementDocView"
					width="100%" height="100%" style="border: 2px solid gray"
					tooltiptext="Preview" />
					</div>
					</vlayout>
					</row>
					</rows>
					</grid> -->
			</center>
			<south sclass="south-dialog">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="75%">
						<radiogroup id="userAction" name="action" />
						<label
							id="label_AgreementDefinitionDialog_RecordStatus"
							value="${c:l('label_AgreementDefinitionDialog_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>
		</borderlayout>
	</window>
</zk>
