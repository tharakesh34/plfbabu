<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_SuspenseEnquiryDialog"
			title="${c:l('window_SuspenseEnquiryDialog.title')}" border="normal"
			apply="${suspenseDetailEnquiryDialogCtrl}" width="100%" height="100%"
			sizable="false">

			<div id="div_toolbar" sclass="z-toolbar"
				style="padding:0">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="35%,30%,35%">

					<!-- COMMON BUTTONS -->
					<toolbar align="start"
						sclass="toolbar-start">
					</toolbar>

					<!-- SEARCH AREA -->
					<toolbar align="center"
						sclass="toolbar-center">
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end"
						sclass="toolbar-end">
						<button id="btnHelp" 
							label="${c:l('label_Help')}"
							tooltiptext="${c:l('btnHelp.tooltiptext')}"
							autodisable="btnSave,btnHelp,btnClose" sclass="z-toolbarbutton" />
						<button id="btnClose" 
							image="/images/icons/btn_exitdoor2_16x16.gif"
							tooltiptext="${c:l('btnClose.tooltiptext')}"
							autodisable="btnSave,btnHelp,btnClose" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderlayoutSuspense">
				<center border="none" autoscroll="true">
					<vlayout visible="true">
					<groupbox >
						<grid id="grid_Basicdetails"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px;padding-left:20px;padding-top:0px;">
							<columns>
								<column width="190px" />
								<column />
								<column width="190px" />
								<column />
							</columns>
							<rows>
								<row visible="true">
									<label
										id="label_SuspenseEnquiryDialog_FinIsInSusp"
										value="${c:l('label_SuspenseEnquiryDialog_FinIsInSusp.value')}" />
									<checkbox id="finIsInSusp"
										disabled="true" />
									<label
										id="label_SuspenseEnquiryDialog_ManualSusp"
										value="${c:l('label_SuspenseEnquiryDialog_ManualSusp.value')}" />
									<checkbox id="manualSusp"
										disabled="true" />
								</row>
								<row visible="true">
									<label
										id="label_SuspenseEnquiryDialog_FinSuspDate"
										value="${c:l('label_SuspenseEnquiryDialog_FinSuspDate.value')}" />
									<datebox id="finSuspDate"
										width="110px" disabled="true" format="dd/MM/yyyy" />
									<label
										id="label_SuspenseEnquiryDialog_FinSuspTrfDate"
										value="${c:l('label_SuspenseEnquiryDialog_FinSuspTrfDate.value')}" />
									<datebox id="finSuspTrfDate"
										width="110px" disabled="true" format="dd/MM/yyyy" />
								</row>
								<row visible="true">
									<label
										id="label_SuspenseEnquiryDialog_FinSuspAmt"
										value="${c:l('label_SuspenseEnquiryDialog_FinSuspAmt.value')}" />
									<decimalbox id="finSuspAmt"
										disabled="true" width="162px" maxlength="18" />
									<label
										id="label_SuspenseEnquiryDialog_FinCurSuspAmt"
										value="${c:l('label_SuspenseEnquiryDialog_FinCurSuspAmt.value')}" />
									<decimalbox id="finCurSuspAmt"
										disabled="true" width="162px" maxlength="18" />
								</row>
							</rows>
						</grid>
						</groupbox>
						<tabbox width="auto" height="100%"
							id="tabBoxIndexCenter">
							<tabs id="tabsIndexCenter">
								<tab id="suspDetailsTab"
									label="Finance Suspense Details" />
								<tab id="postingDetailsTab"
									label="Suspense Posting Details" />
							</tabs>
							<tabpanels id="tabpanelsBoxIndexCenter">
								<tabpanel style="overflow:auto">
									<listbox id="listBoxSuspDetails"
										fixedLayout="true" span="true"
										emptyMessage="${c:l('listbox.emptyMessage')}" vflex="true"
										width="100%" multiple="false">
										<listhead sizable="false"
											style="padding:0px;position:relative;">
											<listheader visible="true"
												label="${c:l('listheader_FinTrfDate.label')}" hflex="min" />
											<listheader
												label="${c:l('listheader_FinTrfMvt.label')}" hflex="min" />
											<listheader
												label="${c:l('listheader_FinSeq.label')}" hflex="min" />
											<listheader
												label="${c:l('listheader_FinTrfAmt.label')}" hflex="min" />
											<listheader
												label="${c:l('listheader_FinODDate.label')}" hflex="min" />
											<listheader
												label="${c:l('listheader_FinTrfFromDate.label')}"
												hflex="min" />
										</listhead>
									</listbox>
								</tabpanel>
								<tabpanel style="overflow:auto">
									<listbox id="listBoxSuspPostings"
										fixedLayout="true" span="true"
										emptyMessage="${c:l('listbox.emptyMessage')}" vflex="true"
										width="100%" multiple="false">
										<listhead sizable="true">
											<listheader
												id="listheader_Acc_ValueDate"
												label="${c:l('listheader_Acc_ValueDate.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Acc_DebitOrCredit"
												label="${c:l('listheader_Acc_DebitOrCredit.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Acc_TranCode"
												label="${c:l('listheader_Acc_TranCode.label')}" sort="false"
												hflex="min" />
											<listheader
												id="listheader_Acc_RevTranCode"
												label="${c:l('listheader_Acc_RevTranCode.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Acc_AccountNo"
												label="${c:l('listheader_Acc_AccountNo.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Acc_Amount"
												label="${c:l('listheader_Acc_Amount.label')}" sort="false"
												hflex="min" />
										</listhead>
									</listbox>
								</tabpanel>
							</tabpanels>
						</tabbox>
					</vlayout>
				</center>

			</borderlayout>
		</window>
	</window>
</zk>
