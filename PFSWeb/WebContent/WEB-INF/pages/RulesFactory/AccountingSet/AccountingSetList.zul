<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_AccountingSetList"
		apply="${accountingSetListCtrl}" border="none" width="100%">
		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center" >
					<button
						id="button_AccountingSetList_AccountingSetSearchDialog"
						 label="${c:l('label_Filter')}"
						autodisable="button_AccountingSetList_AccountingSetSearchDialog,button_AccountingSetList_PrintList,button_AccountingSetList_NewAccountingSet,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_AccountingSetList_AccountingSetSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="button_AccountingSetList_PrintList"
						 label="${c:l('label_Print')}"
						autodisable="button_AccountingSetList_AccountingSetSearchDialog,button_AccountingSetList_PrintList,button_AccountingSetList_NewAccountingSet,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_AccountingSetList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>
				
				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end" >
					<button
						id="button_AccountingSetList_NewAccountingSet" 
						label="${c:l('label_New')}"
						autodisable="button_AccountingSetList_AccountingSetSearchDialog,button_AccountingSetList_PrintList,button_AccountingSetList_NewAccountingSet,btnRefresh,btnHelp"
						tooltiptext="${c:l('button_AccountingSetList_NewAccountingSet.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnRefresh" 
						label="${c:l('label_Refresh')}"
						autodisable="button_AccountingSetList_AccountingSetSearchDialog,button_AccountingSetList_PrintList,button_AccountingSetList_NewAccountingSet,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton"/>
					<button id="btnHelp" 
						label="${c:l('label_Help')}"
						autodisable="button_AccountingSetList_AccountingSetSearchDialog,button_AccountingSetList_PrintList,button_AccountingSetList_NewAccountingSet,btnRefresh,btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>
		<borderlayout id="borderLayout_AccountingSetList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true"
						style="border:0px; padding-left:5px; padding-right:5px;">
						<columns>
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
							<column width="15%" />
							<column width="5%" />
							<column width="30%" />
						</columns>
						<rows>
							<row>
								<label
									id="label_AccountingSetSearch_EventCode"
									value="${c:l('label_AccountingSetSearch_EventCode.value')}" />
								<listbox id="sortOperator_eventCode"
									width="43px" mold="select" rows="1" />
								<textbox id="eventCode" width="100px"
									maxlength="8" />
								<label
									id="label_AccountingSetSearch_AccountEventDesc"
									value="${c:l('label_AccountingSetSearch_AccountEventDesc.value')}" />
								<listbox
									id="sortOperator_accountEventDesc" width="43px" mold="select"
									rows="1" />
								<textbox id="accountEventDesc"
									width="200px" maxlength="50" />
							</row>
							<row>
								<label
									id="label_AccountingSetSearch_AccountSetCode"
									value="${c:l('label_AccountingSetSearch_AccountSetCode.value')}" />
								<listbox
									id="sortOperator_accountSetCode" width="43px" mold="select"
									rows="1" />
								<textbox id="accountSetCode"
									width="100px" maxlength="8" />

								<label
									id="label_AccountingSetSearch_AccountSetCodeName"
									value="${c:l('label_AccountingSetSearch_AccountSetCodeName.value')}" />
								<listbox
									id="sortOperator_accountSetCodeName" width="43px" mold="select"
									rows="1" />
								<textbox id="accountSetCodeName"
									width="200px" maxlength="50" />
							</row>
							<row id="row_AlwWorkflow">
								<label
									id="label_AccountingSetSearch_RecordStatus"
									value="${c:l('label_AccountingSetSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_recordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />

								<label
									id="label_AccountingSetSearch_RecordType"
									value="${c:l('label_AccountingSetSearch_RecordType.value')}" />
								<listbox id="sortOperator_recordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxAccountingSet"
						emptyMessage="${c:l('listbox.emptyMessage')}" fixedLayout="true"
						vflex="true" span="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_EventCode"
								label="${c:l('listheader_EventCode.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_EventDesc"
								label="${c:l('listheader_EventDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_AccountSetCode"
								label="${c:l('listheader_AccountSetCode.label')}" sort="auto"
								hflex="min" />
							<listheader
								id="listheader_AccountSetCodeName"
								label="${c:l('listheader_AccountSetCodeName.label')}"
								sort="auto" hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingAccountingSetList" />
			</south>

		</borderlayout>
	</window>
</zk>