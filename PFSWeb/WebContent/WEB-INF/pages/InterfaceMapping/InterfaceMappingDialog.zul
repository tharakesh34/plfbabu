<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_InterfaceMappingDialog" border="normal"
			apply="${interfaceMappingDialogCtrl}" width="100%" height="100%"
			sizable="false">
			<borderlayout id="borderlayoutInterfaceMapping">
				<north>
					<div sclass="z-toolbar">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" width="100%"
							widths="35%,30%,35%">
							<!-- COMMON BUTTONS -->
							<toolbar align="start"
								sclass="toolbar-start">

								<button id="btnNew" visible="false"
									height="24px" tooltiptext="${c:l('btnNew.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnEdit" visible="false"
									height="24px" tooltiptext="${c:l('btnEdit.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnDelete" visible="false"
									height="24px" tooltiptext="${c:l('btnDelete.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnSave" height="24px"
									tooltiptext="${c:l('btnSave.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnCancel" visible="false"
									height="24px" tooltiptext="${c:l('btnCancel.tooltiptext')}" />
								<button id="btnNotes" visible="false"
									height="24px" tooltiptext="${c:l('btnNotes.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							</toolbar>
							<!-- SEARCH AREA -->
							<toolbar align="center"
								sclass="toolbar-center">
								<label
									value="${c:l('window_InterfaceMappingDialog.title')}"
									sclass="label-heading" />
							</toolbar>
							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" visible="false"
									height="24px" label="${c:l('label_Help')}"
									tooltiptext="${c:l('btnHelp.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnClose" height="24px"
									tooltiptext="${c:l('btnClose.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							</toolbar>
						</hbox>
					</div>
				</north>
				<center border="none" autoscroll="true">
					<div>
						<groupbox id="gb_basicDetails" mold="3d">
							<grid sclass="GridLayoutNoBorder"
								fixedLayout="true" style="border:0px">
								<columns>
									<column width="15%" />
									<column width="35%" />
									<column width="15%" />
									<column width="35%" />
								</columns>
								<rows>
									<row>
										<label
											id="label_InterfaceMappingDialog_InterfaceName"
											value="${c:l('label_InterfaceMappingDialog_InterfaceName.value')}"
											sclass="mandatory" />
										<extendedcombobox
											id="interfaceName" />
										<label
											id="label_InterfaceMappingDialog_InterfaceField"
											value="${c:l('label_InterfaceMappingDialog_InterfaceField.value')}"
											sclass="mandatory" />
										<extendedcombobox
											id="interfaceField" />
									</row>
									<row id="row1" visible="false">
										<label
											id="label_InterfaceMappingDialog_MappingTable"
											value="${c:l('label_InterfaceMappingDialog_MappingTable.value')}"
											sclass="mandatory" />
										<extendedcombobox
											id="mappingTable" />
										<label
											id="label_InterfaceMappingDialog_MappingColumn"
											value="${c:l('label_InterfaceMappingDialog_MappingColumn.value')}" />
										<hlayout
											id="hlayout_mappingColumn" spacing="2px">
											<space
												id="space_mappingColumn" spacing="2px" sclass="mandatory" />
											<combobox id="mappingColumn"
												width="190px" />
										</hlayout>
									</row>
									<row id="row2" visible="false">
										<label
											id="label_InterfaceMappingDialog_MappingValue"
											value="${c:l('label_InterfaceMappingDialog_MappingValue.value')}"
											sclass="mandatory" />
										<extendedcombobox
											id="mappingValue" />

									</row>
									<row>
										<label
											id="label_InterfaceMappingDialog_InterfaceIsActive"
											value="${c:l('label_InterfaceMappingDialog_InterfaceIsActive.value')}" />
										<hbox>
											<space spacing="2px" />
											<checkbox
												id="active" checked="false" />
										</hbox>
										<label
											id="label_InterfaceMappingDialog_MappingType"
											value="${c:l('label_InterfaceMappingDialog_MappingType.value')}" visible="false"/>
										<hbox visible="false">
											<space spacing="2px"
												sclass="mandatory" />
											<combobox id="mappingType" width="190px" />
										</hbox>

									</row>

								</rows>
							</grid>
						</groupbox>
						<listbox id="listBoxInterfaceMapping" emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false" sizedByContent="true"
							span="true" visible="false">
							<listhead sizable="true">
								<listheader id="listheader_PLF_Value"
									label="${c:l('listheader_PLF_Value.label')}" sort="auto"
									hflex="min"/>
								<listheader id="listheader_Interface_Value"
									label="${c:l('listheader_Interface_Value.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south sclass="south-dialog">
					<groupbox id="groupboxWf" width="99%"
						height="100%">
						<caption label="${c:l('Action')}" />
						<hbox width="75%">
							<radiogroup id="userAction" name="action" />
							<label
								id="label_InterfaceMappingDialog_RecordStatus"
								value="${c:l('label_InterfaceMappingDialog_RecordStatus')}"
								sclass="label-status" />
							<label id="recordStatus" />
						</hbox>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>
