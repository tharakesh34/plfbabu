<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_JVPostingDialog" border="normal"
			apply="${jVPostingDialogCtrl}" width="100%" height="100%"
			sizable="false">
			<borderlayout id="borderlayoutJVPosting">
				<north>
					<div sclass="z-toolbar" style="padding:0">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" width="100%"
							widths="35%,30%,35%">
							<!-- COMMON BUTTONS -->
							<toolbar align="start"
								sclass="toolbar-start">

								<button id="btnNew" visible="false"
									height="24px" tooltiptext="${c:l('btnNew.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnEdit" visible="false"
									height="24px" tooltiptext="${c:l('btnEdit.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnDelete" visible="false"
									height="24px" tooltiptext="${c:l('btnDelete.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnSave" visible="false"
									height="24px" tooltiptext="${c:l('btnSave.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnCancel" visible="false"
									height="24px" tooltiptext="${c:l('btnCancel.tooltiptext')}" />
								<button id="btnNotes" visible="false"
									height="24px" tooltiptext="${c:l('btnNotes.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnVerify" label="Verify"
									height="24px" 
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
									
							</toolbar>
							<!-- SEARCH AREA -->
							<toolbar align="center"
								sclass="toolbar-center">
								<label sclass="label-heading"
									value="${c:l('window_JVPostingDialog.title')}">
								</label>
							</toolbar>

							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" height="24px"
									label="${c:l('label_Help')}"
									tooltiptext="${c:l('btnHelp.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
								<button id="btnClose" height="24px"
									tooltiptext="${c:l('btnClose.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
							</toolbar>
						</hbox>
					</div>

				</north>
				<center border="none" autoscroll="true">
					<div>
						<groupbox id="gb_basicDetails" mold="3d">
							<grid sclass="GridLayoutNoBorder"
								fixedLayout="true" style="border:0px">
								<columns>
									<column width="20%" />
									<column width="30%" />
									<column width="20%" />
									<column width="30%" />
								</columns>
								<rows>
									<row id="row0">
										<label id="label_BatchReference"
											value="${c:l('label_JVPostingDialog_BatchReference.value')}" />
										<hlayout
											id="hlayout_BatchReference">
											<space
												id="space_BatchReference" spacing="2px" />
											<uppercasebox
												id="batchReference" maxlength="50" width="150px" />
										</hlayout>
										<label id="label_Batch"
											value="${c:l('label_JVPostingDialog_Batch.value')}" />
										<hlayout id="hlayout_Batch">
											<space id="space_Batch"
												spacing="2px" />
											<textbox id="batch"
												maxlength="20" width="150px" />
										</hlayout>
									</row>
									<row id="row2">
										<label id="label_DebitCount"
											value="${c:l('label_JVPostingDialog_DebitCount.value')}" />
										<hlayout
											id="hlayout_DebitCount">
											<space id="space_DebitCount"
												spacing="2px" />
											<intbox id="debitCount"
												width="100px" maxlength="14" />
										</hlayout>
										<label id="label_CreditsCount"
											value="${c:l('label_JVPostingDialog_CreditsCount.value')}" />
										<hlayout
											id="hlayout_CreditsCount">
											<space
												id="space_CreditsCount" spacing="2px" />
											<intbox id="creditsCount"
												width="100px" maxlength="14" />
										</hlayout>
									</row>
									<row id="row3">
										<label
											id="label_TotDebitsByBatchCcy"
											value="${c:l('label_JVPostingDialog_TotDebitsByBatchCcy.value')}" />
										<hlayout
											id="hlayout_TotDebitsByBatchCcy">
											<space
												id="space_TotDebitsByBatchCcy" spacing="2px" />
											<decimalbox
												id="totDebitsByBatchCcy" width="150px" maxlength="25" />
										</hlayout>
										<label
											id="label_TotCreditsByBatchCcy"
											value="${c:l('label_JVPostingDialog_TotCreditsByBatchCcy.value')}" />
										<hlayout
											id="hlayout_TotCreditsByBatchCcy">
											<space
												id="space_TotCreditsByBatchCcy" spacing="2px" />
											<decimalbox
												id="totCreditsByBatchCcy" width="150px" maxlength="25" />
										</hlayout>
									</row>
									<row id="row4" valign="top">
										<label id="label_BatchPurpose"
											value="${c:l('label_JVPostingDialog_BatchPurpose.value')}" />
										<hlayout
											id="hlayout_BatchPurpose">
											<space
												id="space_BatchPurpose" spacing="2px" />
											<textbox id="batchPurpose"
												maxlength="200" multiline="true" rows="4" width="300px" />
										</hlayout>
										<label
											value="${c:l('label_BaseCcy')}">
										</label>
										<hlayout>
											<space spacing="2px" />
											<textbox id="baseCCy"
												readonly="true" width="100px">
											</textbox>
										</hlayout>

									</row>
								</rows>
							</grid>
						</groupbox>
						<groupbox width="100%" mold="3d">
							<div sclass="z-toolbar" style="padding:0px"
								height="28px">
								<hbox pack="stretch"
									sclass="hboxRemoveWhiteStrips" width="100%"
									widths="30%,40%,30%">
									<toolbar align="start" width="300px"
										height="24px">
										<hbox align="center"
											style="padding: 2px 0px 0px 2px">
											<label
												value="${c:l('panel_JVPostingEntryList.title')}"
												style="font-weight:bold; font-size: 12px;" />
										</hbox>
									</toolbar>
									<toolbar align="end"
										style="border-style: none;">
										<button
											id="button_JVPostingEntryList_NewJVPostingEntry"
											height="24px" label="${c:l('label_New')}"
											tooltiptext="${c:l('button_JVPostingEntryList_NewJVPostingEntry.tooltiptext')}" />
									</toolbar>
								</hbox>
							</div>
							<listbox id="listBoxJVPostingEntry"
								fixedLayout="true" vflex="true" span="true"
								tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
								 multiple="false" sizedByContent="true">
								<listhead sizable="true">
									<listheader
										id="listheader_TxnReference"
										label="${c:l('listheader_TxnReference.label')}" sort="auto"
										hflex="min" />
									<listheader id="listheader_Account"
										label="${c:l('listheader_Account.label')}" sort="auto"
										hflex="min" />
									<listheader
										id="listheader_AccountName"
										label="${c:l('listheader_AccountName.label')}" sort="auto"
										hflex="min" />
									<listheader id="listheader_TxnCCy"
										label="${c:l('listheader_TxnCCy.label')}" sort="auto"
										hflex="min" />
									<listheader id="listheader_TxnCode"
										label="${c:l('listheader_TxnCode.label')}" sort="auto"
										hflex="min" />
									<listheader
										id="listheader_TxnAmount"
										label="${c:l('listheader_TxnAmount.label')}" sort="auto"
										hflex="min" />
									<listheader
										label="${c:l('listheader_TxnAmountAccCccy.label')}"
										sort="auto" hflex="min" />
									<listheader
										label="${c:l('listheader_TxnAmountBaseCcy.label')}"
										sort="auto" hflex="min" />
									<listheader
										id="listheader_RecordStatus"
										label="${c:l('listheader_RecordStatus.label')}" sort="auto"
										hflex="min" />
									<listheader
										id="listheader_RecordType"
										label="${c:l('listheader_RecordType.label')}" sort="auto"
										hflex="min" />
								</listhead>
							</listbox>
						</groupbox>
					</div>
				</center>
				<south id="south" height="48px" border="none"
					style="padding:5px;" >
					<groupbox id="groupboxWf" width="97%" closable="false">
						<caption label="${c:l('Action')}"
							style="font-weight:bold" />
						<hlayout spacing="0px" width="75%">
							<radiogroup id="userAction" name="action" />

							<label id="label_RecordStatus"
								value="${c:l('label_RecordStatus')} :" sclass="label-status" />
							<label id="recordStatus" />
						</hlayout>
					</groupbox>


				</south>
			</borderlayout>
		</window>
	</window>
</zk>
