<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_AuthorizationLimitDialog" border="normal"
		apply="${authorizationLimitDialogCtrl}" width="100%" height="100%"
		sizable="false">

		<borderlayout id="borderlayoutAuthorizationLimit">
			<north>
				<div sclass="z-toolbar" style="padding:0">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">
						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnNew"
								tooltiptext="${c:l('btnNew.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
							<button id="btnEdit"
								tooltiptext="${c:l('btnEdit.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
							<button id="btnDelete"
								tooltiptext="${c:l('btnDelete.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
							<button id="btnSave"
								tooltiptext="${c:l('btnSave.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
							<button id="btnCancel"
								tooltiptext="${c:l('btnCancel.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
							<button id="btnNotes"
								tooltiptext="${c:l('btnNotes.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
						</toolbar>
						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_AuthorizationLimitDialog.title')}"
								sclass="label-heading" />
						</toolbar>
						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp"
								tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" visible="false" />
							<button id="btnClose"
								tooltiptext="${c:l('btnClose.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
								sclass="z-toolbarbutton" />
						</toolbar>
					</hbox>
				</div>
			</north>
			<center border="none" autoscroll="false">
				<div width="100%" height="100%"
					style="overflow-y:auto;overflow-x:hidden;">
					<groupbox id="gb_basicDetails" sclass="gb-dialog">
						<grid sclass="GridLayoutNoBorder"
							fixedLayout="true" style="border:0px">
							<columns>
								<column width="15%" />
								<column width="35%" />
								<column width="15%" />
								<column width="35%" />
							</columns>
							<rows>
								<row id="userRow">
									<label id="label_UserId"
										value="${c:l('label_AuthorizationLimitDialog_UserId.value')}" />
									<extendedcombobox id="userId"
										width="150px" />
									<label id="label_UserName"
										value="${c:l('label_AuthorizationLimitDialog_Name.value')}" />
									<textbox id="userName" width="150px"
										readonly="true" />
								</row>
								<row id="roleRow">
									<label id="label_RoleId"
										value="${c:l('label_AuthorizationLimitDialog_RoleId.value')}" />
									<extendedcombobox id="roleId"
										width="150px" />
									<label id="label_RoleName"
										value="${c:l('label_AuthorizationLimitDialog_Name.value')}" />
									<textbox id="roleName" width="150px"
										readonly="true" />
								</row>

								<row id="row2">
									<label id="label_StartDate"
										value="${c:l('label_AuthorizationLimitDialog_StartDate.value')}" />
									<hbox>
										<space id="space_StartDate"
											spacing="2px" sclass="mandatory" />
										<datebox id="startDate"
											width="100px" />
									</hbox>
									<label id="label_ExpiryDate"
										value="${c:l('label_AuthorizationLimitDialog_ExpiryDate.value')}" />
									<hbox>
										<space id="space_ExpiryDate"
											spacing="2px" sclass="mandatory" />
										<datebox id="expiryDate"
											width="100px" />
									</hbox>
								</row>

								<row id="holdRow" visible="false">
									<label id="label_HoldStartDate"
										value="${c:l('label_AuthorizationLimitDialog_HoldStartDate.value')}" />
									<hbox>
										<space id="space_HoldStartDate"
											spacing="2px" sclass="mandatory" />
										<datebox id="holdStartDate"
											width="100px" />
									</hbox>
									<label id="label_HoldExpiryDate"
										value="${c:l('label_AuthorizationLimitDialog_HoldExpiryDate.value')}" />
									<hbox>
										<space id="space_HoldExpiryDate"
											spacing="2px" sclass="mandatory" />
										<datebox id="holdExpiryDate"
											width="100px" />
									</hbox>
								</row>
								<row id="row4">
									<label id="label_Active"
										value="${c:l('label_AuthorizationLimitDialog_Active.value')}" />
									<checkbox id="active"
										checked="false" />
									<label id="label_LimitAmount"
										value="${c:l('label_AuthorizationLimitDialog_LimitAmount.value')}" />
									<currencyBox id="limitAmount"
										width="162px" />
								</row>
							</rows>
						</grid>
					</groupbox>
					<groupbox id="gb_LimtDetails" closable="true" height="60%">
						<caption id ="caption_LimitDetails"
							label="${c:l('label_AuthorizationLimitDialog_Product.value')}" />

						<div sclass="z-toolbar" style="padding:0px">
							<hbox pack="stretch" height="24px"
								width="100%" style=" padding:0px;">
								<button id="btnAddDetails" label="New"
									style="float:right" height="17px" tooltiptext="Add Details" />
							</hbox>
						</div>
						<listbox id="listBoxCodeLimit"
							fixedLayout="true" vflex="true"
							emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							multiple="false" sizedByContent="true" span="true">
							<listhead sizable="true">
								<listheader
									id="listheader_AuthLimitCode"
									label="${c:l('listheader_AuthLimitCode')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_AuthLimitDesc"
									label="${c:l('listheader_AuthLimitDesc')}" hflex="min" />
								<listheader
									id="listheader_AuthLimitAmount"
									label="${c:l('listheader_AuthLimitAmount')}" hflex="min" />
								<listheader
									id="listheader_AuthLimitOperation"
									label="${c:l('listheader_AuthLimitOperation')}" hflex="min" />
								<listheader
									id="listheader_AuthLimitDeletion"
									label="${c:l('label.RecordType')}" hflex="min" />

							</listhead>
						</listbox>
					</groupbox>
				</div>
			</center>
			<south sclass="south-dialog">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="95%">
						<radiogroup id="userAction" name="action" />
						<label id="label_RecordStatus"
							value="${c:l('label_South_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>
		</borderlayout>
	</window>
</zk>
