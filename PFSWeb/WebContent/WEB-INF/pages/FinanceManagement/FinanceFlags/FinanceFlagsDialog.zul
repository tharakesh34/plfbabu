<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	
	<window>
		<window id="window_FinanceFlagsDialog" border="none"
			apply="${financeFlagsDialogCtrl}" width="100%" height="100%"
			sizable="false">

			<borderlayout id="borderlayoutFinanceFlags">
				<north>
					<div sclass="z-toolbar">
						<hbox pack="stretch"
							sclass="hboxRemoveWhiteStrips" width="100%"
							widths="35%,30%,35%">
							<!-- COMMON BUTTONS -->
							<toolbar align="start"
								sclass="toolbar-start">
								<button id="btnNew"
									tooltiptext="${c:l('btnNew.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnEdit"
									tooltiptext="${c:l('btnEdit.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnDelete"
									tooltiptext="${c:l('btnDelete.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnSave"
									tooltiptext="${c:l('btnSave.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnCancel"
									tooltiptext="${c:l('btnCancel.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnNotes"
									tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
									sclass="z-toolbarbutton" />
							</toolbar>

							<!-- SEARCH AREA -->
							<toolbar align="center"
								sclass="toolbar-center">
								<label
									value="${c:l('window_FinanceFlagsDialog.title')}"
									sclass="label-heading" />
							</toolbar>

							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" visible="false"
									label="${c:l('label_Help')}"
									tooltiptext="${c:l('btnHelp.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnClose"
									tooltiptext="${c:l('btnClose.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
							</toolbar>
						</hbox>
					</div>
				</north>
				<center border="none" autoscroll="false">
					<groupbox>
						<grid id="grid_finflags"
							sclass="GridLayoutNoBorder" fixedLayout="true">
							<columns>
								<column width="200px" />
								<column />
								<column width="200px" />
								<column />
							</columns>
							<rows>
								<row height="24px">
									<label
										value="${c:l('label_FinanceFlagsDialog_finReference.value')}" />
									<extendedcombobox id="finReference" />
									<label
										id="label_FinanceFlagsDialog_FinType" />
									<label id="finFlags_finType"
										style="font-weight:bold;" />
								</row>
								<row id="row1" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_FinCcy" />
									<label id="finFlags_finCcy"
										style="font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_ProfitDaysBasis" />
									<label id="finFlags_profitDaysBasis"
										style="font-weight:bold;" />
								</row>
								<row id="row2" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_NoOfTerms" />
									<label id="finFlags_noOfTerms"
										style="font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_GrcEndDate" />
									<label id="finFlags_grcEndDate"
										style="font-weight:bold;" />
								</row>
								<row id="row3" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_StartDate" />
									<label id="finFlags_startDate"
										style="font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_MaturityDate" />
									<label id="finFlags_maturityDate"
										style="font-weight:bold;" />
								</row>
								<row id="row4" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_PurchasePrice" />
									<decimalbox
										id="finFlags_purchasePrice" tabindex="-1" readonly="true"
										width="150px"
										style="border:none; background-color:white ;font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_OthExpenses" />
									<decimalbox id="finFlags_otherExp"
										width="150px" tabindex="-1" readonly="true"
										style="border:none; background-color:white ;font-weight:bold;" />
								</row>
								<row id="row5" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_TotalCost" />
									<decimalbox id="finFlags_totalCost"
										width="150px" tabindex="-1" readonly="true"
										style="border:none; background-color:white ;font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_TotalPft" />
									<decimalbox id="finFlags_totalPft"
										width="150px" tabindex="-1" readonly="true"
										style="border:none; background-color:white ;font-weight:bold;" />
								</row>
								<row id="row6" height="24px"
									visible="false">
									<label
										id="label_FinanceFlagsDialog_ContractPrice" />
									<decimalbox
										id="finFlags_contractPrice" tabindex="-1" readonly="true"
										width="150px"
										style="border:none; background-color:white ;font-weight:bold;" />
									<label
										id="label_FinanceFlagsDialog_EffectiveRateOfReturn" />
									<label id="finFlags_effRate"
										style="font-weight:bold;color:#FF6600;" />
								</row>
							</rows>
						</grid>
						<groupbox>
							<div sclass="z-toolbar" style="padding:0">
								<hbox pack="stretch"
									sclass="hboxRemoveWhiteStrips" width="100%"
									style=" padding:0px;">
									<!-- COMMON BUTTONS -->
									<toolbar align="start"
										sclass="toolbar-start" width="300px">
										<label
											value="${c:l('label_FinFlagsDetail_FinFlagsList.title')}"
											style="font-weight:bold; font-size: 11px;" />
									</toolbar>
									<toolbar align="center"
										sclass="toolbar-center">
									</toolbar>
									<toolbar align="end"
										sclass="toolbar-end">
										<button
											id="btnNew_FinFlagsDetail" label="${c:l('label_New')}"
											tooltiptext="${c:l('button_FinanceFlagsDialogList.tooltiptext')}"
											sclass="z-toolbarbutton" />
									</toolbar>
									<space width="2px" />
								</hbox>
							</div>
							<listbox id="listBoxFinanceFlags"
								fixedLayout="true" sizedByContent="true" span="true"
								emptyMessage="${c:l('listbox.emptyMessage')}"  
								tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
								multiple="false">
								<listhead sizable="false">
									<listheader id="listheader_FlagCode"
										label="${c:l('listheader_FlagCode.label')}" sort="false"
										hflex="min" />
									<listheader id="listheader_FlagDesc"
										label="${c:l('listheader_FlagDesc.label')}" sort="false"
										hflex="min" />
								</listhead>
							</listbox>
							<paging id="pagingFinFlagDetailsList" />
						</groupbox>
					</groupbox>
				</center>
				<south sclass="south-dialog">
					<groupbox id="groupboxWf" width="99%">
						<caption label="${c:l('Action')}" />
						<hbox width="95%">
							<radiogroup id="userAction" name="action" />
							<label
								id="label_FinanceFlagsDialog_RecordStatus"
								value="${c:l('label_South_RecordStatus.value')}" sclass="label-status" />
							<label id="recordStatus" />
						</hbox>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>