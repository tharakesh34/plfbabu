<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<style>
		div.z-column-cnt { padding: 3px; } div.z-column-cnt,
		div.z-row-cnt { color: #000000;
		font-family:Verdana,Tahoma,Arial,Helvetica,sans-serif;
		font-size: 11px; font-weight: bold; }
	</style>

	<window id="window_ReceiptEnquiryDialog" border="normal"
		width="100%" height="100%" sizable="false"
		apply="${receiptEnquiryDialogCtrl}">

		<div sclass="z-toolbar" style="padding:0">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="35%,30%,35%">

				<!-- COMMON BUTTONS -->
				<toolbar align="start" sclass="toolbar-start">
					<button id="btnNew"
						tooltiptext="${c:l('btnNew.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnEdit"
						tooltiptext="${c:l('btnEdit.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnDelete"
						tooltiptext="${c:l('btnDelete.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnSave" visible="false"
						tooltiptext="${c:l('btnSave.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnCancel"
						tooltiptext="${c:l('btnCancel.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnNotes"
						tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
						sclass="z-toolbarbutton" />
				</toolbar>

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<label
						value="${c:l('window_ReceiptDialog.title')}"
						sclass="label-heading" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="btnHelp" visible="false"
						label="${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDeletebtnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
					<button id="btnClose"
						tooltiptext="${c:l('btnClose.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDeletebtnSave,btnCancel,btnNotes,btnHelp,btnClose"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderlayout_Receipt">
			<center border="none">
				<groupbox>
					<groupbox style="border:0px;">
						<grid sclass="GridLayoutNoBorder"
							fixedLayout="true" style="border:0px" width="100%">
							<columns>
								<column width="200px" />
								<column />
								<column width="200px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_FinType.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="finType"
											readonly="true" width="180px" />
									</hbox>
									<label
										value="${c:l('label_ReceiptDialog_FinReference.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="finReference"
											width="180px" readonly="true" />
									</hbox>
								</row>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_FinCcy.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="finCcy"
											readonly="true" width="180px" />
									</hbox>
									<label
										value="${c:l('label_ReceiptDialog_FinBranch.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="finBranch"
											readonly="true" width="180px" />
									</hbox>
								</row>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_CustID.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="custCIF"
											width="180px" readonly="true" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
					<groupbox>
						<caption
							label="${c:l('label_ReceiptDialog_ReceiptDetail')}" />
						<grid fixedLayout="true"
							sclass="GridLayoutNoBorder" style="border:0px;">
							<columns>
								<column width="200px" />
								<column />
								<column width="200px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_ReceiptPurpose.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="receiptPurpose"
											width="180px" readonly="true" />
									</hbox>
									<label
										value="${c:l('label_ReceiptDialog_ExcessAdjustTo.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="excessAdjustTo"
											width="180px" readonly="true" />
									</hbox>
								</row>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_ReceiptMode.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="receiptMode"
											width="180px" readonly="true" />
									</hbox>
									<label
										value="${c:l('label_ReceiptDialog_TotalReceiptAmount.value')}" />
									<currencyBox id="receiptAmount" />
								</row>
								<row>
									<label
										value="${c:l('label_ReceiptDialog_AllocationMethod.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="allocationMethod"
											width="180px" readonly="true" />
									</hbox>
									<label
										value="${c:l('label_ReceiptDialog_EffecScheduleMethod.value')}" />
									<hbox>
										<space spacing="2px"
											sclass="mandatory" />
										<combobox id="effScheduleMethod"
											width="180px" readonly="true" />
									</hbox>
								</row>
								<row id="row_RealizationDate"
									visible="false">
									<label
										id="label_ReceiptDialog_RealizationDate"
										value="${c:l('label_ReceiptDialog_RealizationDate.value')}" />
									<hbox
										id="hbox_ReceiptDialog_RealizationDate">
										<space spacing="2px"
											sclass="mandatory" />
										<datebox id="realizationDate"
											width="100px" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
					<groupbox>
						<caption
							label="${c:l('label_ReceiptDialog_Receipts')}" />
						<listbox id="listBoxReceipts" fixedLayout="true"
							sizedByContent="true" span="true"
							emptyMessage="${c:l('listbox.emptyMessage')}" width="100%"
							height="100%" multiple="false">
							<listhead sizable="false"
								style="padding:0px;position:relative;">
								<listheader
									label="${c:l('listheader_ReceiptDialog_AmountType.label')}"
									sort="false" width="40%" />
								<listheader
									label="${c:l('listheader_ReceiptDialog_PaidAmount.label')}"
									align="right" sort="false" width="20%" />
								<listheader
									label="${c:l('listheader_ReceiptDialog_Status.label')}"
									sort="false" width="20%" />
							</listhead>
						</listbox>
					</groupbox>
					<groupbox id="gb_ReceiptDetails" visible="false">
						<caption id="caption_receiptDetail" />
						<grid fixedLayout="true"
							sclass="GridLayoutNoBorder" style="border:0px;">
							<columns>
								<column width="200px" />
								<column />
								<column width="200px" />
								<column />
							</columns>
							<rows>
								<row id="row_favourNo"
									visible="false">
									<label
										id="label_ReceiptDialog_favourNo"
										value="${c:l('label_ReceiptDialog_favourNo.value')}" />
									<hbox
										id="hbox_ReceiptDialog_favourNo">
										<space spacing="2px"
											sclass="mandatory" />
										<uppercasebox id="favourNo"
											width="180px" />
									</hbox>
									<label
										id="label_ReceiptDialog_ValueDate"
										value="${c:l('label_ReceiptDialog_ValueDate.value')}" />
									<hbox
										id="hbox_ReceiptDialog_ValueDate">
										<space spacing="2px"
											sclass="mandatory" />
										<datebox id="valueDate"
											width="100px" />
									</hbox>
								</row>
								<row id="row_BankCode"
									visible="false">
									<label
										id="label_ReceiptDialog_BankCode"
										value="${c:l('label_ReceiptDialog_BankCode.value')}" />
									<extendedcombobox id="bankCode" />
									<label
										id="label_ReceiptDialog_favourName"
										value="${c:l('label_ReceiptDialog_favourName.value')}" />
									<hbox
										id="hbox_ReceiptDialog_favourName">
										<space spacing="2px"
											sclass="mandatory" />
										<textbox id="favourName"
											width="180px" />
									</hbox>
								</row>
								<row id="row_DepositDate"
									visible="false">
									<label
										id="label_ReceiptDialog_DepositDate"
										value="${c:l('label_ReceiptDialog_DepositDate.value')}" />
									<hbox
										id="hbox_ReceiptDialog_DepositDate">
										<space spacing="2px"
											sclass="mandatory" />
										<datebox id="depositDate"
											width="100px" />
									</hbox>
									<label
										id="label_ReceiptDialog_depositNo"
										value="${c:l('label_ReceiptDialog_depositNo.value')}" />
									<hbox
										id="hbox_ReceiptDialog_depositNo">
										<space spacing="2px"
											sclass="mandatory" />
										<uppercasebox id="depositNo"
											width="180px" />
									</hbox>
								</row>
								<row id="row_PaymentRef"
									visible="false">
									<label
										id="label_ReceiptDialog_paymentReference"
										value="${c:l('label_ReceiptDialog_paymentReference.value')}" />
									<hbox
										id="hbox_ReceiptDialog_paymentReference">
										<space spacing="2px"
											sclass="mandatory" />
										<uppercasebox id="paymentRef"
											width="180px" />
									</hbox>
									<label
										id="label_ReceiptDialog_tranReference"
										value="${c:l('label_ReceiptDialog_tranReference.value')}" />
									<hbox
										id="hbox_ReceiptDialog_tranReference">
										<space spacing="2px"
											sclass="mandatory" />
										<uppercasebox
											id="transactionRef" width="180px" />
									</hbox>
								</row>
								<row id="row_ChequeAcNo"
									visible="false">
									<label
										id="label_ReceiptDialog_ChequeAccountNo"
										value="${c:l('label_ReceiptDialog_ChequeAccountNo.value')}" />
									<accountSelectionBox id="chequeAcNo"
										width="180px" />
								</row>
								<row id="row_fundingAcNo"
									visible="false">
									<label
										id="label_ReceiptDialog_FundingAccount"
										value="${c:l('label_ReceiptDialog_FundingAccount.value')}" />
									<extendedcombobox
										id="fundingAccount" width="180px" />
									<label
										id="label_ReceiptDialog_ReceivedDate"
										value="${c:l('label_ReceiptDialog_ReceivedDate.value')}" />
									<hbox
										id="hbox_ReceiptDialog_ReceivedDate">
										<space spacing="2px"
											sclass="mandatory" />
										<datebox id="receivedDate"
											width="100px" />
									</hbox>
								</row>
								<row id="row_remarks" visible="false">
									<label
										id="label_ReceiptDialog_Remarks"
										value="${c:l('label_ReceiptDialog_Remarks.value')}" />
									<hbox
										id="hbox_ReceiptDialog_Remarks">
										<space spacing="2px" />
										<textbox id="remarks"
											width="180px" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</groupbox>
			</center>
			<south id="south" sclass="south-dialog">
				<groupbox id="groupboxWf" width="98%">
					<caption label="${c:l('Action')}" />
					<hbox width="95%">
						<radiogroup id="userAction" name="action" />
						<label
							id="label_ReceiptDialog_RecordStatus"
							value="${c:l('label_South_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>
		</borderlayout>
	</window>
</zk>
