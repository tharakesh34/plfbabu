<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_SelectReceiptDialog" apply="${selectReceiptDialogCtrl}" width="55%" height="200px" style="align:start;"
			sizable="false" closable="true">

			<borderlayout id="borderLayout_SelectReceiptDialog">
				<north>
					<div sclass="z-toolbar">
						<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
							<toolbar align="start" sclass="toolbar-start">
								<button id="btnValidate" tooltiptext="${c:l('btnReceipt.tooltiptext')}" label="${c:l('label_SelectReceiptDialog_btnValidate.value')}"
									width="88px" sclass="z-toolbarbutton" autodisable="btnClose,btnValidate,btnProceed" />
								<button id="btnProceed" tooltiptext="${c:l('btnReceipt.tooltiptext')}" label="${c:l('label_SelectReceiptDialog_btnProceed.value')}"
									width="88px" sclass="z-toolbarbutton" autodisable="btnClose,btnValidate,btnProceed" />
							</toolbar>
							<!-- SEARCH AREA -->
							<toolbar align="center" sclass="toolbar-center">
								<label id="label_title" value="${c:l('window_ReceiptDialog.title.Deposit')}" sclass="label-heading" />
							</toolbar>
							<!-- <toolbar align="center" sclass="toolbar-center"> <label id="SelectReceipt" sclass="label-heading" /> </toolbar> -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnClose" label="Close" tooltiptext="${c:l('btnClose.tooltiptext')}" sclass="z-toolbarbutton"
									autodisable="btnClose,btnValidate,btnProceed" />
							</toolbar>
						</hbox>
					</div>
				</north>
				<center border="none">
					<groupbox>
						<grid sclass="GridLayoutNoBorder" sizedByContent="true" style="border:0px; padding:0px;">
							<columns>
								<column width="250px" />
								<column />
							</columns>
							<rows>
								<row id="row_DepositBank" visible="false">
									<label id="label_SelectReceiptDialog_FundingAccount" value="${c:l('label_SelectReceiptDialog_FundingAccount.value')}"
										style="padding-left:12px;" />
									<extendedcombobox id="fundingAccount" width="250px" />
								</row>
								<row id="row_ReceiptStatus" visible="false">
									<label id="label_SelectReceiptDialog_ReceiptStatus" value="${c:l('label_SelectReceiptDialog_ReceiptStatus.value')}"
										style="padding-left:12px;" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<combobox id="receiptStatus" width="250px" />
									</hbox>
								</row>
								<row id="row_DepositDate" visible="true">
									<label id="label_DepositDate" value="${c:l('label_SelectReceiptDialog_DepositDate.value')}" style="padding-left:12px;" />
									<hbox>
										<space spacing="2px" sclass="mandatory" />
										<datebox id="depositDate" width="190px" />
									</hbox>
								</row>
								<row id="row_DepositSlipNo" visible="false">
									<label id="label_SelectReceiptDialog_DepositSlipNo" value="${c:l('label_SelectReceiptDialog_DepositSlipNo.value')}"
										style="padding-left:12px;" />
									<hbox>
										<space spacing="2px" />
										<textbox id="depositSlipNo" width="190px" maxlength="50" />
									</hbox>
								</row>
								<row id="row_BounceCode" visible="false">
									<label id="label_SelectReceiptDialog_BounceCode" value="${c:l('label_SelectReceiptDialog_BounceCode.value')}"
										style="padding-left:12px;" />
									<extendedcombobox id="bounceCode" width="190px" />
								</row>
								<row id="row_CancelReason" visible="false">
									<label id="label_SelectReceiptDialog_CancelReason" value="${c:l('label_SelectReceiptDialog_CancelReason.value')}"
										style="padding-left:12px;" />
									<extendedcombobox id="cancelReason" width="190px" />
								</row>
								<row id="row_Remarks" visible="false">
									<label id="label_SelectReceiptDialog_Remarks" value="${c:l('label_SelectReceiptDialog_Remarks.value')}"
										style="padding-left:12px;" />
									<hbox>
										<space spacing="2px" />
										<textbox id="remarks" width="190px" maxlength="500" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</center>
				<south border="none" />
			</borderlayout>
		</window>
	</window>
</zk>