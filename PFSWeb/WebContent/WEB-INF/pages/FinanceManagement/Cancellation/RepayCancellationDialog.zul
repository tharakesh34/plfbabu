<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_RepayCancellationDialog" border="normal"
		apply="${repayCancellationDialogCtrl}" width="100%" height="100%"
		sizable="false">
		<borderlayout id="borderlayoutRepayCancellation">
			<north>
				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">

						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnRepayCancel"
								label="${c:l('label_RepayCancel')}"
								tooltiptext="${c:l('btnRepayCancel.tooltiptext')}"
								autodisable="btnRepayCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnNotes" height="24px"
								label="${c:l('btnNotes.label')}"
								tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
								autodisable="btnRepayCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>

						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_RepayCancellationDialog.title')}"
								sclass="label-heading" />
						</toolbar>

						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp"
								label="${c:l('label_Help')}"
								tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnRepayCancel,btnNotes,btnHelp,btnClose" />
							<button id="btnClose"
								tooltiptext="${c:l('btnClose.tooltiptext')}"
								label="${c:l('label_Close')}"
								autodisable="btnRepayCancel,btnNotes,btnHelp,btnClose" />
						</toolbar>
					</hbox>
				</div>
			</north>

			<center border="none" autoscroll="false">
				<tabbox id="tabBoxIndexCenter" width="99%"
					height="100%">
					<tabs id="tabsIndexCenter">
						<tab id="repaymentDetailsTab"
							label="${c:l('tab_CancelRepayment')}" />
						<tab id="postingDetailsTab"
							label="${c:l('tab_CancelRepayPostings')}" />
					</tabs>
					<tabpanels id="tabpanelsBoxIndexCenter">
						<tabpanel style="overflow:auto">
							<div>
								<groupbox id="gb_basicDetails"
									sclass="gb-dialog">
									<grid id="grid_Basicdetails"
										sclass="GridLayoutNoBorder" fixedLayout="true">
										<columns>
											<column width="200px" />
											<column />
											<column width="200px" />
											<column />
										</columns>
										<rows>
											<row>
												<label
													id="label_RepayCancellationDialog_FinReference"
													value="${c:l('label_RepayCancellationDialog_FinReference.value')}" />
												<label
													id="finReference" />
												<label
													id="label_RepayCancellationDialog_FinType"
													value="${c:l('label_RepayCancellationDialog_FinType.value')}" />
												<label id="finType" />
											</row>
											<row>
												<label
													id="label_RepayCancellationDialog_CustId"
													value="${c:l('label_RepayCancellationDialog_CustId.value')}" />
												<label id="custId" />
												<label
													id="label_RepayCancellationDialog_finBranch"
													value="${c:l('label_RepayCancellationDialog_finBranch.value')}" />
												<label id="finBranch" />
											</row>
											<row>
												<label
													id="label_RepayCancellationDialog_PostDate"
													value="${c:l('label_RepayCancellationDialog_PostDate.value')}" />
												<label id="postDate" />
												<label
													id="label_RepayCancellationDialog_RepayAmount"
													value="${c:l('label_RepayCancellationDialog_RepayAmount.value')}" />
												<label id="rpyAmount" />
											</row>
										</rows>
									</grid>
								</groupbox>

								<groupbox width="100%"
									sclass="gb-dialog">
									<div sclass="z-toolbar"
										height="28px">
										<hbox pack="stretch"
											sclass="hboxRemoveWhiteStrips" width="100%">

											<!-- COMMON BUTTONS -->
											<toolbar align="start"
												sclass="toolbar-start" width="100%">
												<hbox align="center"
													style="padding: 0px">
													<label
														value="${c:l('window_RepayScheduleDetails.title')}"
														style="font-weight:bold; font-size: 11px;" />
												</hbox>
											</toolbar>
										</hbox>
									</div>
									<listbox id="listBoxRepayDetail"
										emptyMessage="${c:l('listbox.emptyMessage')}"
										fixedLayout="true" vflex="true" span="true"
										tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
										height="100%" multiple="false">
										<listhead sizable="true">
											<listheader
												id="listheader_SchDate"
												label="${c:l('listheader_RepayCancel_SchDate.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_SchPriPaid"
												label="${c:l('listheader_RepayCancel_SchPriPaid.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_SchPftPaid"
												label="${c:l('listheader_RepayCancel_SchPftPaid.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_SchTotPaid"
												label="${c:l('listheader_RepayCancel_SchTotPaid.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Fee" visible="false"
												label="${c:l('listheader_RepayCancel_Fee.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Waiver"
												label="${c:l('listheader_RepayCancel_Waiver.label')}"
												sort="false" hflex="min" />
											<listheader
												id="listheader_Refund"
												label="${c:l('listheader_RepayCancel_Refund.label')}"
												sort="false" hflex="min" />
										</listhead>
									</listbox>
								</groupbox>
							</div>
						</tabpanel>
						<tabpanel id="postingsTabPanel">
							<groupbox id="gb_postingDetails"
								width="100%" height="100%">
								<div sclass="z-toolbar"
									style="padding:0">
									<hbox pack="stretch"
										sclass="hboxRemoveWhiteStrips" style=" padding:0px;"
										height="100%" width="100%">
										<toolbar align="start" style="border:none;">
											<label value="${c:l('PostingsDetails')}" sclass="listboxHeading">
											</label>
										</toolbar>
									</hbox>
								</div>
								<listbox id="listBoxCancelRepayPosting"
									span="true" sizedByContent="true" vflex="true"
									fixedLayout="true" tooltiptext="${c:l('listbox.tooltiptext')}"
									emptyMessage="${c:l('listbox.emptyMessage')}"
									multiple="false">
									<listhead sizable="true">
										<listheader
											id="listheader_RepayCancelTransType"
											label="${c:l('listheader_RepayCancelTransType.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelDescription"
											label="${c:l('listheader_RepayCancelDescription.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelTranCode"
											label="${c:l('listheader_RepayCancelTranCode.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelRevTranCode"
											label="${c:l('listheader_RepayCancelRevTranCode.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelAccount"
											label="${c:l('listheader_RepayCancelAccount.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelCurrency" visible="false"
											label="${c:l('listheader_RepayCancelCurrency.label')}"
											sort="false" hflex="min" />
										<listheader
											id="listheader_RepayCancelAmount"
											label="${c:l('listheader_RepayCancelAmount.label')}"
											sort="false" hflex="min" />
									</listhead>
								</listbox>
							</groupbox>
						</tabpanel>
					</tabpanels>
				</tabbox>
			</center>
			<south id="south" height="48px" border="none"
				style="padding:5px;">
				<groupbox id="groupboxWf" width="98%">
					<caption label="${c:l('Action')}" />
					<hbox width="95%">
						<radiogroup id="userAction" name="action" />
						<label
							id="label_RepayCancellationDialog_RecordStatus"
							value="${c:l('label_RepayCancellationDialog_RecordStatus.value')} :"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>
		</borderlayout>
	</window>
</zk>
