<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>
<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_BounceDetails" apply="${bounceDetailsDialogCtrl}" width="80%">

		<borderlayout id="borderLayout_BounceDetails">
			<north>
				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnSave" label="Save" tooltiptext="${c:l('btnSave.tooltiptext')}" sclass="z-toolbarbutton"
								visible="false" />

						</toolbar>
						<toolbar align="center" sclass="toolbar-center">
							<label value="${c:l('window_BounceDetails.title')}" sclass="label-heading" />
						</toolbar>
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnClose" label="Close" tooltiptext="${c:l('btnClose.tooltiptext')}" sclass="z-toolbarbutton" />
						</toolbar>
					</hbox>
				</div>
			</north>
			<center border="none">
				<listbox id="listDetails" emptyMessage="${c:l('listbox.emptyMessage')}" tooltiptext="${c:l('listbox.tooltiptext')}"
					width="100%" height="100%" multiple="false" sizedByContent="true" span="true">
					<listhead sizable="true">
						<listheader id="listheader_Code" sort="none" hflex="min" />
						<listheader id="listheader_ReceivableAmount" label="${c:l('listheader_ReceivableAmount.label')}" sort="none"
							hflex="min" style="text-align:left;" />
						<listheader id="listheader_ReceiptInProgress" label="${c:l('listheader_ReceiptInProgress.label')}"
							sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_GSTReceivable" label="${c:l('listheader_BounceDetails_GSTReceivable.label')}"
							sort="none" hflex="min" style="text-align:left;" />
						<listheader label="${c:l('listheader_ReceiptDialog_TDS.label')}"
						    sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_CurrentReceivable" label="${c:l('listheader_CurrentReceivable.label')}"
							sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_PaidAmount" label="${c:l('listheader_PaidAmount.label')}" sort="none" hflex="min"
							style="text-align:left;" />
						<listheader label="${c:l('listheader_ReceiptDialog_NetPaid.label')}" 
							sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_PaidGST" label="${c:l('listheader_BounceDetails_PaidGST.label')}" sort="none"
							hflex="min" style="text-align:left;" />
							<listheader label="${c:l('listheader_ReceiptDialog_PaidTDS.label')}" 
   									sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_WaivedAmount" label="${c:l('listheader_BounceDetails_WaivedAmount.label')}"
							sort="none" hflex="min" style="text-align:left;" />
						<listheader id="listheader_BalanceDueAmount" label="${c:l('listheader_BalanceDueAmount.label')}" sort="none"
							hflex="min" style="text-align:left;" />
					</listhead>
				</listbox>
			</center>
			<south border="none" />
		</borderlayout>
	</window>
</zk>