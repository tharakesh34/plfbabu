<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_LegalApplicantDetailDialog" border="normal" apply="${legalApplicantDetailDialogCtrl}" width="80%"
			height="70%" sizable="false">

			<borderlayout id="borderlayoutLegalApplicantDetail">
				<north>
					<div sclass="z-toolbar" style="padding:0">
						<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%" widths="35%,30%,35%">
							<!-- COMMON BUTTONS -->
							<toolbar align="start" sclass="toolbar-start">
								<button id="btnNew" tooltiptext="${c:l('btnNew.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnEdit" tooltiptext="${c:l('btnEdit.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnDelete" tooltiptext="${c:l('btnDelete.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnSave" tooltiptext="${c:l('btnSave.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnCancel" tooltiptext="${c:l('btnCancel.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
								<button id="btnNotes" visible="false" tooltiptext="${c:l('btnNotes.tooltiptext')}"
									autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							</toolbar>
							<!-- SEARCH AREA -->
							<toolbar align="center" sclass="toolbar-center">
								<label value="${c:l('window_LegalApplicantDetailDialog.title')}" sclass="label-heading" />
							</toolbar>
							<!-- CRUD BUTTONS -->
							<toolbar align="end" sclass="toolbar-end">
								<button id="btnHelp" tooltiptext="${c:l('btnHelp.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" visible="false" />
								<button id="btnClose" tooltiptext="${c:l('btnClose.tooltiptext')}" autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose"
									sclass="z-toolbarbutton" />
							</toolbar>
						</hbox>
					</div>
				</north>
				<center border="none" autoscroll="false">
					<groupbox id="gb_basicDetails" sclass="gb-dialog">
						<grid sclass="GridLayoutNoBorder" fixedLayout="true" style="border:0px">
							<columns>
								<column width="15%" />
								<column width="35%" />
								<column width="15%" />
								<column width="35%" />
							</columns>
							<rows>
								<row id="row0">
									<label id="label_Title" value="${c:l('label_LegalApplicantDetailDialog_Title.value')}" />
									<extendedcombobox id="title" />
									<label id="label_PropertyOwnersName" value="${c:l('label_LegalApplicantDetailDialog_PropertyOwnersName.value')}" />
									<hbox>
										<space id="space_PropertyOwnersName" spacing="2px" />
										<textbox id="propertyOwnersName" maxlength="20" width="180px" />
									</hbox>
								</row>
								<row id="row1">
									<label id="label_Age" value="${c:l('label_LegalApplicantDetailDialog_Age.value')}" />
									<hbox>
										<space spacing="2px" />
										<intbox id="age" width="110px" maxlength="14" />
										<space spacing="3px" />
										<label id="label_dob" style="font-weight:bold;" />
									</hbox>
									<label id="label_RelationshipType" value="${c:l('label_LegalApplicantDetailDialog_RelationshipType.value')}" />
									<hbox>
										<space id="space_RelationshipType" spacing="2px" />
										<textbox id="relationshipType" maxlength="20" width="180px" />
									</hbox>
								</row>
								<row id="row2">
									<label id="label_IDType" value="${c:l('label_LegalApplicantDetailDialog_IDType.value')}" />
									<extendedcombobox id="iDType" />
									<label id="label_IDNo" value="${c:l('label_LegalApplicantDetailDialog_IDNo.value')}" />

									<hbox>
										<space id="space_IDNo" spacing="2px" />
										<textbox id="iDNo" maxlength="50" width="180px" />
									</hbox>
								</row>
								<row spans="1,3">
									<label value="${c:l('label_LegalApplicantDetailDialog_Remarks.value')}" />
									<hbox>
										<space spacing="2px" />
										<textbox id="remarks" maxlength="3000" multiline="true" rows="4" width="750px" />
									</hbox>
								</row>
							</rows>
						</grid>
					</groupbox>
				</center>
				<south sclass="south-dialog">
					<groupbox id="groupboxWf" width="99%">
						<caption label="${c:l('Action')}" />
						<hbox width="95%">
							<radiogroup id="userAction" name="action" />
							<label id="label_RecordStatus" value="${c:l('label_South_RecordStatus.value')}" sclass="label-status" />
							<label id="recordStatus" />
						</hbox>
					</groupbox>
				</south>
			</borderlayout>
		</window>
	</window>
</zk>
