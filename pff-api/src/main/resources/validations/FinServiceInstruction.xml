		<field name="validateAddRateChange">
			<constraint annotation="org.hibernate.validator.constraints.ScriptAssert">
				<message>Either actualRate / baseRate are mandatory</message>
				<groups>
					<value>com.pennant.validation.AddRateChangeGroup</value>
					<value>com.pennant.validation.ReSchedulingGroup</value>
				</groups>
				<element name="lang">javascript</element>
				<element name="script">
					if(_this.actualRate > 0){
					if((_this.baseRate != null) &amp;&amp; (_this.baseRate != "")){
					false;
					}else{
					true;
					}
					}else{
					if((_this.baseRate != null) &amp;&amp; (_this.baseRate != "")){
					true;
					}else{
					false;
					}
					}
				</element>
			</constraint>
			<constraint annotation="org.hibernate.validator.constraints.ScriptAssert">
				<message>splRate is mandatory for baseRate </message>
				<groups>
					<value>com.pennant.validation.AddRateChangeGroup</value>
					<value>com.pennant.validation.ReSchedulingGroup</value>
				</groups>
				<element name="lang">javascript</element>
				<element name="script">
					if ((_this.splrate != null) &amp;&amp; (_this.splrate !="")) {
					if ((_this.baseRate != null) &amp;&amp; (_this.baseRate
					!= "")) {
					true;
					} else {
					false;
					}
					} else {
					true;
					}
				</element>
			</constraint>

			<constraint annotation="org.hibernate.validator.constraints.ScriptAssert">
				<message>margin is mandatory for baseRate  </message>
				<groups>
					<value>com.pennant.validation.AddRateChangeGroup</value>
					<value>com.pennant.validation.ReSchedulingGroup</value>
				</groups>
				<element name="lang">javascript</element>
				<element name="script">
					if (_this.margin > 0) {
					if ((_this.baseRate != null) &amp;&amp; (_this.baseRate != "")) {
					true;
					} else {
					false;
					}
					}else{
					true;
					}
				</element>
			</constraint>
