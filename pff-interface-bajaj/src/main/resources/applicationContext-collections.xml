<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/util
		http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<!-- Data source -->
	<bean id="dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
	  	<property name="resourceRef" value="true" />
		<property name="jndiName" value="jdbc/PFF" />
		<property name="lookupOnStartup" value="true" />
	</bean>
	
	<!-- Collection Process -->
	 <bean id="collectionProcess" class="com.pennanttech.bajaj.process.collections.CollectionProcess" scope="prototype">
	 	<property name="dataSource" ref="dataSource" />
	 	<property name="CollectionDAO" ref="CollectionDAO" />
	 </bean> 
	
	<!-- Collection DAO Implementation -->
	 <bean id="CollectionDAO" class="com.pennanttech.bajaj.process.collections.model.CollectionDAOImpl" scope="prototype">
	 	<property name="dataSource" ref="dataSource" />
	 </bean> 
</beans>