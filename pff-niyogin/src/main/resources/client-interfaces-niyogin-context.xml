<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="niyoginService" class="com.pennanttech.pff.external.service.NiyoginService"
		abstract="true">
		<property name="dataSource" ref="pfsDatasource" />
		<property name="interfaceLoggingDAO" ref="interfaceLoggingDAO" />
	</bean>
	
	<bean id="jsonClient" class="com.pennanttech.niyogin.clients.JSONClient"/>
	
	<bean id="niyoginDAOImpl" class="com.pennanttech.pff.external.dao.NiyoginDAOImpl">
	<property name="dataSource" ref="pfsDatasource" />
	</bean>

	<!-- Dedup Fields -->
	<bean id="externalDedup"
		class="com.pennanttech.niyogin.dedup.service.ExperianDedupService" parent="niyoginService">
		<property name="niyoginDAOImpl" ref="niyoginDAOImpl" />
		<property name="serviceUrl" value="${exp.internal.dedup.url}" />
		<property name="client" ref="jsonClient" />
	</bean>
	<bean id="blacklistCheck"
		class="com.pennanttech.niyogin.hunter.service.BlacklistCheckService" parent="niyoginService">
		<property name="serviceUrl" value="${experian.hunter.url}" />
		<property name="client" ref="jsonClient" />
	</bean>
 	<bean id="mailService"
		class="com.pennanttech.niyogin.communication.service.MailServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${soa.email.url}" />
	</bean>
 	<bean id="sMSService"
		class="com.pennanttech.niyogin.communication.service.SMSServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${soa.sms.url}" />
	</bean> 
	<!-- ExperianBureauConsumerService -->
	<bean id="experianconsumerService"
		class="com.pennanttech.niyogin.experian.consumer.service.ExperianConsumerServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${exp.bureau.consumer.url}" />
		<property name="client" ref="jsonClient" />
	</bean> 
	<!-- ExperianBureauCommercialService -->
	<bean id="experianCommercialService"
		class="com.pennanttech.niyogin.experian.commercial.service.ExperianCommercialServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${exp.bureau.commercial.url}" />
		<property name="client" ref="jsonClient" />
	</bean>
	<!-- CRIFBureauCommercialService -->
	<bean id="crifConsumerService"
		class="com.pennanttech.niyogin.crif.cosumer.service.CrifConsumerServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${crif.bureau.consumer.url}" />
		<property name="niyoginDAOImpl" ref="niyoginDAOImpl" />
		<property name="client" ref="jsonClient" />
	</bean>	
	
</beans>