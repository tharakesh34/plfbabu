<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="niyoginService" class="com.pennanttech.pff.external.service.NiyoginService"
		abstract="true">
		<property name="niyoginDAOImpl" ref="niyoginDAOImpl" />
		<property name="interfaceLoggingDAO" ref="interfaceLoggingDAO" />
		<property name="client" ref="jsonClient" />
	</bean>
	
	<bean id="jsonClient" class="com.pennanttech.niyogin.clients.JSONClient"/>
	
	<bean id="niyoginDAOImpl" class="com.pennanttech.pff.external.dao.NiyoginDAOImpl">
	<property name="dataSource" ref="pfsDatasource" />
	</bean>

	<!-- Dedup Fields -->
	<bean id="externalDedup"
		class="com.pennanttech.niyogin.dedup.service.ExperianDedupService" parent="niyoginService">
		<property name="serviceUrl" value="${exp.internal.dedup.url}" />
	</bean>
	<bean id="blacklistCheck"
		class="com.pennanttech.niyogin.hunter.service.BlacklistCheckService" parent="niyoginService">
		<property name="serviceUrl" value="${experian.hunter.url}" />
	</bean>
 	<bean id="mailService"
		class="com.pennanttech.niyogin.communication.service.MailServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${soa.email.url}" />
		<property name="client" ref="jsonClient" />
	</bean>
 	<bean id="sMSService"
		class="com.pennanttech.niyogin.communication.service.SMSServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${soa.sms.url}" />
		<property name="client" ref="jsonClient" />
	</bean> 
	<!-- ExperianBureauService -->
	<bean id="experianBureauService"
		class="com.pennanttech.niyogin.experian.service.ExperianBureauServiceImpl" parent="niyoginService">
		<property name="consumerUrl" value="${exp.bureau.consumer.url}" />
		<property name="commercialUrl" value="${exp.bureau.commercial.url}" />
	</bean> 
	<!-- CRIFBureauCommercialService -->
	<bean id="criffBureauService"
		class="com.pennanttech.niyogin.criff.service.CrifBureauServiceImpl" parent="niyoginService">
		<property name="consumerUrl" value="${crif.bureau.consumer.url}" />
		<property name="commercialUrl" value="${crif.bureau.commercial.url}" />
		<property name="client" ref="jsonClient" />
	</bean>	
	<!-- CRIFBureauCommercialService -->
	<bean id="cibilConsumerService"
		class="com.pennanttech.niyogin.cibil.consumer.service.CibilConsumerServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${cibil.consumer.url}" />
		<property name="client" ref="jsonClient" />
	</bean>	
	
	<!-- DMS Service -->
	<bean id="documentManagementService"
		class="com.pennanttech.niyogin.dms.service.DocumentManagerServiceImpl" parent="niyoginService">
		<property name="serviceUrl" value="${niyogin.dms.service.url}" />
		<property name="client" ref="jsonClient" />
	</bean>	
	
</beans>