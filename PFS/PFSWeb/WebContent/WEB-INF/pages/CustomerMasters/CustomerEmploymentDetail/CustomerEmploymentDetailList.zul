<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerEmploymentDetailList"
		apply="${customerEmploymentDetailListCtrl}" border="none"
		width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" style=" border-style: none;">
					<button
						id="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog"
						height="24px" label = "${c:l('label_Filter')}"
						autodisable="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog,button_CustomerEmploymentDetailList_PrintList,
											button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog.tooltiptext')}" />
					<button
						id="button_CustomerEmploymentDetailList_PrintList" height="24px"
						label = "${c:l('label_Print')}"
						autodisable="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog,button_CustomerEmploymentDetailList_PrintList,
											button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_CustomerEmploymentDetailList_PrintList.tooltiptext')}" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" style=" border-style: none;">
					<button
						id="button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail"
						height="24px" label = "${c:l('label_New')}"
						autodisable="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog,button_CustomerEmploymentDetailList_PrintList,
											button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail, btnRefresh, btnHelp"
						tooltiptext="${c:l('button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail.tooltiptext')}" />

					<button id="btnRefresh" height="24px"
						label = "${c:l('label_Refresh')}"
						autodisable="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog,button_CustomerEmploymentDetailList_PrintList,
											button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail, btnRefresh, btnHelp"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
					<button id="btnHelp" height="24px"
						label = "${c:l('label_Help')}"
						autodisable="button_CustomerEmploymentDetailList_CustomerEmploymentDetailSearchDialog,button_CustomerEmploymentDetailList_PrintList,
											button_CustomerEmploymentDetailList_NewCustomerEmploymentDetail, btnRefresh, btnHelp"
						tooltiptext="${c:l('btnHelp.tooltiptext')}" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerEmploymentDetailList">
			<north border="none" />
			<center border="none">

				<listbox id="listBoxCustomerEmploymentDetail"
					vflex="true" tooltiptext="${c:l('listbox.tooltiptext')}"
					width="100%" height="100%" multiple="false">
					<listhead sizable="true">
						<listheader id="listheader_CustEmpCIF"
							label="${c:l('listheader_CustEmpCIF.label')}" sort="auto"
							width="10%" />
						<listheader id="listheader_CustEmpName"
							label="${c:l('listheader_CustEmpName.label')}" sort="auto"
							width="23%" />
						<listheader id="listheader_CustEmpDesg"
							label="${c:l('listheader_CustEmpDesg.label')}" sort="auto"
							width="16%" />
						<listheader id="listheader_CustEmpDept"
							label="${c:l('listheader_CustEmpDept.label')}" sort="auto"
							width="16%" />
						<listheader id="listheader_CustEmpID"
							label="${c:l('listheader_CustEmpID.label')}" sort="auto"
							width="15%" />
						<listheader id="listheader_RecordStatus"
							label="${c:l('listheader_RecordStatus.label')}" sort="auto"
							width="10%" />
						<listheader id="listheader_RecordType"
							label="${c:l('listheader_RecordType.label')}" sort="auto"
							width="10%" />
					</listhead>
				</listbox>

			</center>
			<south border="none">
				<paging id="pagingCustomerEmploymentDetailList" />
			</south>

		</borderlayout>
	</window>
</zk>