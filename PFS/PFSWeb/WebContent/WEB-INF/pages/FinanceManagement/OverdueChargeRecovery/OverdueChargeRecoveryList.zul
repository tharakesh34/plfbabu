<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_OverdueChargeRecoveryList"
			apply="${overdueChargeRecoveryListCtrl}" border="none"
			width="100%">
			
			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />

					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="border-style: none;">
						<button
							id="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog"
							height="24px" label = "${c:l('label_Filter')}"
							autodisable="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog,button_OverdueChargeRecoveryList_PrintList,button_OverdueChargeRecoveryList_NewOverdueChargeRecovery,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog.tooltiptext')}" />
						<button
							id="button_OverdueChargeRecoveryList_PrintList" height="24px"
							label = "${c:l('label_Print')}"
							autodisable="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog,button_OverdueChargeRecoveryList_PrintList,button_OverdueChargeRecoveryList_NewOverdueChargeRecovery,btnRefresh,btnHelp"
							tooltiptext="${c:l('button_OverdueChargeRecoveryList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button id="btnRefresh" height="24px" visible="false"
							label = "${c:l('label_Refresh')}"
							autodisable="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog,button_OverdueChargeRecoveryList_PrintList,button_OverdueChargeRecoveryList_NewOverdueChargeRecovery,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="btnHelp" height="24px"
							label = "${c:l('label_Help')}"
							autodisable="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog,button_OverdueChargeRecoveryList_PrintList,button_OverdueChargeRecoveryList_NewOverdueChargeRecovery,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
						<button id="btnClose" height="24px"
							image="/images/icons/btn_exitdoor2_16x16.gif"
							autodisable="button_OverdueChargeRecoveryList_OverdueChargeRecoverySearchDialog,button_OverdueChargeRecoveryList_PrintList,button_OverdueChargeRecoveryList_NewOverdueChargeRecovery,btnRefresh,btnHelp"
							tooltiptext="${c:l('btnClose.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_OverdueChargeRecoveryList">
				<north border="none">
					<textbox id="recoveryCode" value="N"
						visible="false" />
				</north>
				<center border="none">

					<listbox id="listBoxOverdueChargeRecovery"
						vflex="true" tooltiptext="${c:l('listbox.tooltiptext')}"
						width="100%" height="100%" multiple="false">
						<listhead sizable="true">
							<listheader id="listheader_FinSchdDate"
								label="${c:l('listheader_FinSchdDate.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODDate"
								label="${c:l('listheader_FinODDate.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODPri"
								label="${c:l('listheader_FinODPri.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODPft"
								label="${c:l('listheader_FinODPft.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODTot"
								label="${c:l('listheader_FinODTot.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODCPenalty"
								label="${c:l('listheader_FinODCPenalty.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODCWaived"
								label="${c:l('listheader_FinODCWaived.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODCPLPenalty"
								label="${c:l('listheader_FinODCPLPenalty.label')}" sort="auto"
								width="10%" />
							<listheader id="listheader_FinODCCPenalty"
								label="${c:l('listheader_FinODCCPenalty.label')}" sort="auto"
								width="10%" />
							<listheader
								id="listheader_FinODCRecoverySts"
								label="${c:l('listheader_FinODCRecoverySts.label')}" sort="auto"
								width="10%" />
						</listhead>

					</listbox>
				</center>
				<south border="none">
					<paging id="pagingOverdueChargeRecoveryList" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>