<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window id="window_AdditionalFieldsDialog"
		title="${c:l('window_AdditionalFieldsDialog.title')}" border="normal"
		apply="${additionalFieldsDialogCtrl}" width="100%" height="100%"
		sizable="false">
		<div sclass="z-toolbar" style="padding:0">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%">

				<!-- COMMON BUTTONS -->
				<toolbar align="start"
					style="float:left; border-style: none;">

					<button id="btnNew" height="24px"
						tooltiptext="${c:l('btnNew.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					<button id="btnEdit" height="24px"
						tooltiptext="${c:l('btnEdit.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					<button id="btnDelete" height="24px"
						tooltiptext="${c:l('btnDelete.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					<button id="btnSave" height="24px"
						tooltiptext="${c:l('btnSave.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					<button id="btnCancel" height="24px"
						tooltiptext="${c:l('btnCancel.tooltiptext')}" />
					<button id="btnNotes" height="24px"
						tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
				</toolbar>
				<!-- SEARCH AREA -->
				<toolbar align="center"
					style="float:left; border-style: none;">
					<hbox align="center" style="padding: 2px"></hbox>
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end"
					style="float:right; border-style: none;">
					<button id="btnHelp" height="24px"
						label = "${c:l('label_Help')}"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
					<button id="btnClose" height="24px"
						tooltiptext="${c:l('btnClose.tooltiptext')}"
						autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderlayoutAdditionalFields">
			<center border="none" autoscroll="true">
				<tabbox>
					<tabs>
						<tab label="Basic Details" id="basicDetailsTab" />
						<tab label="Additional Details"
							id="additionalDetailsTab" />
					</tabs>
					<tabpanels>
						<tabpanel style="overflow:auto">
							<groupbox id="gb_basicDetails" mold="3d">
								<grid sclass="GridLayoutNoBorder"
									fixedLayout="true" style="border:0px">
									<columns>
										<column width="150px" />
										<column />
									</columns>
									<rows>
										<row visible="true">
											<label
												id="label_AdditionalFieldsDialog_Code"
												value="${c:l('label_AdditionalFieldsDialog_Code.value')}" />
											<hbox>
												<space spacing="2px"
													sclass="mandatory" />

												<textbox id="code"
													maxlength="8" width="72px" />
											</hbox>
										</row>
										<row visible="true">
											<label
												id="label_AdditionalFieldsDialog_Description"
												value="${c:l('label_AdditionalFieldsDialog_Description.value')}" />
											<hbox>
												<space spacing="2px"
													sclass="mandatory" />

												<textbox
													id="description" maxlength="50" width="450px" />
											</hbox>
										</row>
										<row id="statusRow">
											<label
												id="label_AdditionalFieldsDialog_RecordStatus"
												value="${c:l('label_AdditionalFieldsDialog_RecordStatus.value')}" />
											<label id="recordStatus" />
										</row>
										<row spans="2">
											<label value="   " />
										</row>
										<row spans="2">
											<label value="   " />
										</row>
										<row spans="2">
											<groupbox id="groupboxWf"
												width="97%">
												<caption
													label="${c:l('Action')}" />
												<hbox>
													<radiogroup
														id="userAction" name="action" />
												</hbox>
											</groupbox>
										</row>
									</rows>
								</grid>
							</groupbox>
						</tabpanel>
						<tabpanel style="overflow:auto">
							<groupbox id="gb_AdditionalDetail" >
								<caption
									label="${c:l('AdditionalDetails')}" />
								<grid sclass="GridLayoutNoBorder"
									fixedLayout="true" style="border:0px">
									<columns>
										<column width="150px" />
										<column />
									</columns>
									<rows id="addtionaldetails"></rows>
								</grid>
							</groupbox>
						</tabpanel>
					</tabpanels>
				</tabbox>
			</center>

		</borderlayout>
	</window>
</zk>
