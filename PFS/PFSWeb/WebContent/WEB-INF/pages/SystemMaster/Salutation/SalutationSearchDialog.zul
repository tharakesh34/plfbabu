<?xml version="1.0" encoding="UTF-8" ?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_SalutationSearch"
		title="${c:l('window_SalutationSearch.title')}" border="none"
		apply="${salutationSearchCtrl}" closable="true" width="580px"
		height="284px" sizable="true">

		<borderlayout>
			<north></north>
			<center flex="true">

				<grid sclass="GridLayoutNoBorder" fixedLayout="true"
					style="border:0px; padding-left:5px; padding-right:5px;">
					<columns>
						<column width="130px" />
						<column width="50px" />
						<column width="100%" />
					</columns>
					<rows>
						<row>
							<label
								id="label_SalutationSearch_SalutationCode"
								value="${c:l('label_SalutationSearch_SalutationCode.value')}" />
							<listbox id="sortOperator_salutationCode"
								width="43px" mold="select" rows="1" />
							<uppercasebox id="salutationCode"
								width="96px" maxlength="8" />
						</row>
						<row>
							<label
								id="label_SalutationSearch_SaluationDesc"
								value="${c:l('label_SalutationSearch_SaluationDesc.value')}" />
							<listbox id="sortOperator_saluationDesc"
								width="43px" mold="select" rows="1" />
							<textbox id="saluationDesc" width="350px"
								maxlength="50" />
						</row>
						<row>
							<label
								id="label_SalutationSearch_SalutationIsActive"
								value="${c:l('label_SalutationSearch_SalutationIsActive.value')}" />
							<listbox
								id="sortOperator_salutationIsActive" width="43px" mold="select"
								rows="1" />
							<checkbox id="salutationIsActive"
								checked="false" />
						</row>
						<row>
							<label
								id="label_SalutationSearch_RecordStatus"
								value="${c:l('label_SalutationSearch_RecordStatus.value')}" />
							<listbox id="sortOperator_recordStatus"
								width="43px" mold="select" rows="1" />
							<textbox id="recordStatus" width="100px"
								maxlength="50" />
						</row>
						<row>
							<label
								id="label_SalutationSearch_RecordType"
								value="${c:l('label_SalutationSearch_RecordType.value')}" />
							<listbox id="sortOperator_recordType"
								width="43px" mold="select" rows="1" />
							<listbox id="recordType" width="100px"
								mold="select" />
						</row>
					</rows>
				</grid>

			</center>
			<south border="none" margins="1,0,0,0" size="30px"
				splittable="false">
				<div id="divSouthSalutation" align="left"
					width="100%">
					<grid>
						<rows>
							<row valign="middle">
								<hbox align="start">
									<button id="btnSearch" height="20"
										label="${c:l('btnSearch.label')}"
										tooltiptext="${c:l('btnSearch.tooltiptext')}" />
									<button id="btnClose" height="20"
										label="${c:l('btnClose.label')}"
										tooltiptext="${c:l('btnClose.tooltiptext')}" />
									<label
										id="label_SalutationSearchResult" />
								</hbox>
							</row>
						</rows>
					</grid>
				</div>
			</south>

		</borderlayout>
	</window>
</zk>