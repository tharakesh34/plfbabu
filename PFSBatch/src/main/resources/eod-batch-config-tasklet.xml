	<!-- beforeEOD -->

	<bean id="beforeEODTaskLet" class="com.pennant.backend.endofday.tasklet.BeforeEOD">
		<property name="dateService" ref="dateService" />
	</bean>

	<!-- prepareCustomerQueue -->

