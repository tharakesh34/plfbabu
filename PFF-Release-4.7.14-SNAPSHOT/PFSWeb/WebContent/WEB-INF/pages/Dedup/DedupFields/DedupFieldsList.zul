<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_DedupFieldsList"  apply="${dedupFieldsListCtrl}"
		border="none" width="100%">

		<panel id="panel_DedupFieldsList"
			title="${c:l('panel_DedupFieldsList.title')}" border="none" />

			<div sclass="z-toolbar" style="padding:0" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips" width="100%">
	
					<!-- COMMON BUTTONS -->
					<toolbar align="start"
						sclass="toolbar-start" width="150px">
						<hbox align="center" style="padding: 2px">
						</hbox>
					</toolbar>
	
					<!-- SEARCH AREA -->
					<toolbar align="center"
						sclass="toolbar-center">
						<hbox align="center" style="padding: 2px">
							<button
								id="button_DedupFieldsList_DedupFieldsSearchDialog" 
								label = "${c:l('label_Filter')}"
								tooltiptext="${c:l('button_DedupFieldsList_DedupFieldsSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
							<button id="button_DedupFieldsList_PrintList"
								 label = "${c:l('label_Print')}"
								tooltiptext="${c:l('button_DedupFieldsList_PrintList.tooltiptext')}" sclass="z-toolbarbutton" />
						</hbox>
					</toolbar>
	
					<!-- CRUD BUTTONS -->
					<toolbar align="end"
						sclass="toolbar-end">
						<button id="button_DedupFieldsList_NewDedupFields"
							 label = "${c:l('label_New')}"
							tooltiptext="${c:l('button_DedupFieldsList_NewDedupFields.tooltiptext')}" sclass="z-toolbarbutton" />

						<button id="btnRefresh" 
							label = "${c:l('label_Refresh')}"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" sclass="z-toolbarbutton" />
						<button id="btnHelp" visible="false" 
							label = "${c:l('label_Help')}"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" sclass="z-toolbarbutton" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_DedupFieldsList">
				<north border="none" />
	
				<center border="none">

					<listbox id="listBoxDedupFields"   emptyMessage="${c:l('listbox.emptyMessage')}"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false" sizedByContent="true"
						span="true">
						<listhead sizable="true">
							<listheader id="listheader_FieldName"
								label="${c:l('listheader_FieldName.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_FieldControl"
								label="${c:l('listheader_FieldControl.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>

					</listbox>
				</center>
				<south border="none" >
					<paging id="pagingDedupFieldsList" />
				</south>
				
			</borderlayout>
	</window>
</zk>