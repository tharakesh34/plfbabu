<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">
	<window>
		<window id="window_LegalExpensesList"
			apply="${legalExpensesListCtrl}" border="none" width="100%"
			title="${c:l('panel_legalExpensesList.title')}">
			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />
					<!-- SEARCH AREA -->
					<toolbar align="center"
						style="border-style: none;">
						<button
							id="button_LegalExpensesList_NewLegalExpenses" height="24px"
							label="${c:l('label_New')}" visible="false"
							autodisable="button_LegalExpensesList_LegalExpensesSearch,print,button_LegalExpensesList_NewLegalExpenses,btnRefresh,help"
							tooltiptext="${c:l('button_LegalExpensesList_NewLegalExpenses.tooltiptext')}" />
						<button
							id="button_LegalExpensesList_LegalExpensesSearch" height="24px"
							label="${c:l('label_Filter')}"
							autodisable="button_LegalExpensesList_LegalExpensesSearch,print,button_LegalExpensesList_NewLegalExpenses,btnRefresh,help"
							tooltiptext="${c:l('button_LegalExpensesList_LegalExpensesSearch.tooltiptext')}" />
						<button id="print" height="24px"
							image="/images/icons/print.png" visible="false"
							autodisable="button_LegalExpensesList_LegalExpensesSearch,print,button_LegalExpensesList_NewLegalExpenses,btnRefresh,help"
							tooltiptext="${c:l('button_LegalExpensesList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" style="border-style: none;">
						<button id="btnRefresh" height="24px"
							label="${c:l('label_Refresh')}"
							autodisable="button_LegalExpensesList_LegalExpensesSearch,print,button_LegalExpensesList_NewLegalExpenses,btnRefresh,help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="help" visible="false" height="24px"
							label="${c:l('label_Help')}"
							autodisable="button_LegalExpensesList_LegalExpensesSearch,print,button_LegalExpensesList_NewLegalExpenses,btnRefresh,help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>
			<borderlayout id="borderLayout_LegalExpensesList">
				<north border="none" />
				<center border="none">
					<div>
						<grid id="searchGrid"
							sclass="GridLayoutNoBorder" fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
								<column width="15%" />
								<column width="5%" />
								<column width="30%" />
							</columns>
							<rows>
								<row>
									<label
										id="label_LegalExpensesList_FinReference"
										value="${c:l('label_LegalExpensesList_FinReference.value')}" />
									<listbox
										id="sortOperator_FinReference" width="43px" mold="select"
										rows="1" />
									<textbox id="finReference"
										width="180px" maxlength="20" />

									<label
										id="label_LegalExpensesList_CustomerId"
										value="${c:l('label_LegalExpensesList_CustomerId.value')}" />
									<listbox
										id="sortOperator_CustomerId" width="43px" mold="select"
										rows="1" />
									<longbox id="customerId"
										width="171px" maxlength="26" />
								</row>
								<row>
									<label
										id="label_LegalExpensesList_TransactionType"
										value="${c:l('label_LegalExpensesList_TransactionType.value')}" />
									<listbox
										id="sortOperator_TransactionType" width="43px" mold="select"
										rows="1" />
									<combobox id="transactionType"
										width="200px" />

									<label
										id="label_LegalExpensesList_ExpReference"
										value="${c:l('label_LegalExpensesList_ExpReference.value')}" />
									<listbox
										id="sortOperator_ExpReference" width="43px" mold="select"
										rows="1" />
									<textbox id="expReference"
										width="171px" maxlength="20" />
								</row>

								<row>
									<label
										id="label_LegalExpensesList_RecordStatus"
										value="${c:l('label_LegalExpensesList_RecordStatus.value')}" />
									<listbox
										id="sortOperator_RecordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_LegalExpensesList_RecordType"
										value="${c:l('label_LegalExpensesList_RecordType.value')}" />
									<listbox
										id="sortOperator_RecordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>

						<listbox id="listBoxLegalExpenses"
							fixedLayout="true" span="true"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false">
							<listhead sizable="true">
								<listheader id="listheader_Expreference"
									label="${c:l('listheader_ExpReference.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_FinReference"
									label="${c:l('listheader_LegExp_FinReference.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_CustomerId"
									label="${c:l('listheader_CustomerId.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_Amount"
									label="${c:l('listheader_Amount.label')}" sort="auto"
									align="right" hflex="min" />
								<listheader
									id="listheader_TransactionType"
									label="${c:l('listheader_TransactionType.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>

				<south border="none">
					<paging id="pagingLegalExpensesList" height="35px" />
				</south>

			</borderlayout>
		</window>
	</window>
</zk>