<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CourseList" apply="${courseListCtrl}"
		border="none" width="100%">
		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />
				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button id="button_CourseList_CourseSearchDialog"
						label="${c:l('label_Filter')}"
						autodisable="button_CourseList_CourseSearchDialog,print,button_CourseList_NewCourse,btnRefresh,help"
						tooltiptext="${c:l('button_CourseList_CourseSearchDialog.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="print" label="${c:l('label_Print')}"
						autodisable="button_CourseList_CourseSearchDialog,print,button_CourseList_NewCourse,btnRefresh,help"
						tooltiptext="${c:l('button_CourseList_PrintList.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button id="button_CourseList_NewCourse"
						label="${c:l('label_New')}"
						autodisable="button_CourseList_CourseSearchDialog,print,button_CourseList_NewCourse,btnRefresh,help"
						tooltiptext="${c:l('button_CourseList_NewCourse.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="btnRefresh"
						label="${c:l('label_Refresh')}"
						autodisable="button_CourseList_CourseSearchDialog,print,button_CourseList_NewCourse,btnRefresh,help"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"
						sclass="z-toolbarbutton" />
					<button id="help" visible="false"
						label="${c:l('label_Help')}"
						autodisable="button_CourseList_CourseSearchDialog,print,button_CourseList_NewCourse,btnRefresh,help"
						tooltiptext="${c:l('btnHelp.tooltiptext')}"
						sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CourseList">
			<north border="none" />

			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true">
						<columns>
							<column width="130px" />
							<column width="50px" />
							<column />
							<column width="130px" />
							<column width="50px" />
							<column />
						</columns>
						<rows>
							<row>
								<label
									id="label_CourseSearch_CourseName"
									value="${c:l('label_CourseSearch_CourseName.value')}" />
								<listbox id="sortOperator_courseName"
									width="43px" mold="select" rows="1" />
								<uppercasebox id="courseName"
									width="130px" maxlength="10" />
								<label
									id="label_CourseSearch_CourseDesc"
									value="${c:l('label_CourseSearch_CourseDesc.value')}" />
								<listbox id="sortOperator_courseDesc"
									width="43px" mold="select" rows="1" />
								<textbox id="courseDesc" width="330px"
									maxlength="50" />
							</row>
							<row id="row_AlwWorkflow">
								<label
									id="label_CourseSearch_RecordStatus"
									value="${c:l('label_CourseSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_RecordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="100px"
									maxlength="50" />
								<label
									id="label_CourseSearch_RecordType"
									value="${c:l('label_CourseSearch_RecordType.value')}" />
								<listbox id="sortOperator_RecordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="100px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxCourse"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						sizedByContent="true" height="100%" multiple="false" span="true"
						emptyMessage="${c:l('listbox.emptyMessage')}">
						<listhead sizable="true">
							<listheader id="listheader_CourseName"
								label="${c:l('listheader_CourseName.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CourseDesc"
								label="${c:l('listheader_CourseDesc.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>

					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingCourseList" />
			</south>

		</borderlayout>
	</window>
</zk>