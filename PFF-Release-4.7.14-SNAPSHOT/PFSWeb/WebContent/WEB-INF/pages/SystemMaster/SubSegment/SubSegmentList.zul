<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window>
		<window id="window_SubSegmentList" apply="${subSegmentListCtrl}"
			border="none" width="100%">

			<div sclass="z-toolbar" style="padding:0px" height="28px">
				<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
					width="100%" widths="30%,40%,30%">

					<!-- COMMON BUTTONS -->
					<label value="" />

					<!-- SEARCH AREA -->
					<toolbar align="center" sclass="toolbar-center">
						<button
							id="button_SubSegmentList_SubSegmentSearchDialog"
							label="${c:l('label_Filter')}"
							autodisable="button_SubSegmentList_SubSegmentSearchDialog,print,
											 button_SubSegmentList_NewSubSegment, btnRefresh, help"
							tooltiptext="${c:l('button_SubSegmentList_SubSegmentSearchDialog.tooltiptext')}" />
						<button id="print" label="${c:l('label_Print')}"
							autodisable="button_SubSegmentList_SubSegmentSearchDialog,print,
											 button_SubSegmentList_NewSubSegment, btnRefresh, help"
							tooltiptext="${c:l('button_SubSegmentList_PrintList.tooltiptext')}" />
					</toolbar>

					<!-- CRUD BUTTONS -->
					<toolbar align="end" sclass="toolbar-end">
						<button id="button_SubSegmentList_NewSubSegment"
							label="${c:l('label_New')}"
							autodisable="button_SubSegmentList_SubSegmentSearchDialog,print,
										 button_SubSegmentList_NewSubSegment, btnRefresh, help"
							tooltiptext="${c:l('button_SubSegmentList_NewSubSegment.tooltiptext')}" />
						<button id="btnRefresh"
							label="${c:l('label_Refresh')}"
							autodisable="button_SubSegmentList_SubSegmentSearchDialog,print,
										 button_SubSegmentList_NewSubSegment, btnRefresh, help"
							tooltiptext="${c:l('btnRefresh.tooltiptext')}" />
						<button id="help" visible="false"
							label="${c:l('label_Help')}"
							autodisable="button_SubSegmentList_SubSegmentSearchDialog,print,
										 button_SubSegmentList_NewSubSegment, btnRefresh, help"
							tooltiptext="${c:l('btnHelp.tooltiptext')}" />
					</toolbar>
				</hbox>
			</div>

			<borderlayout id="borderLayout_SubSegmentList">
				<north border="none" />
				<center border="none">
					<div>
						<grid sclass="GridLayoutNoBorder"
							fixedLayout="true"
							style="border:0px; padding-left:5px; padding-right:5px;">
							<columns>
								<column width="130px" />
								<column width="50px" />
								<column />
								<column width="130px" />
								<column width="50px" />
								<column />
							</columns>
							<rows>
								<row>
									<label
										id="label_SubSegmentSearch_SegmentCode"
										value="${c:l('label_SubSegmentSearch_SegmentCode.value')}" />
									<listbox
										id="sortOperator_segmentCode" width="43px" mold="select"
										rows="1" />
									<uppercasebox id="segmentCode"
										width="96px" maxlength="8" />
									<label
										id="label_SubSegmentSearch_SubSegmentCode"
										value="${c:l('label_SubSegmentSearch_SubSegmentCode.value')}" />
									<listbox
										id="sortOperator_subSegmentCode" width="43px" mold="select"
										rows="1" />
									<uppercasebox id="subSegmentCode"
										width="96px" maxlength="8" />
								</row>
								<row>
									<label
										id="label_SubSegmentSearch_SubSegmentDesc"
										value="${c:l('label_SubSegmentSearch_SubSegmentDesc.value')}" />
									<listbox
										id="sortOperator_subSegmentDesc" width="43px" mold="select"
										rows="1" />
									<textbox id="subSegmentDesc"
										width="200px" maxlength="50" />
									<label
										id="label_SubSegmentSearch_SubSegmentIsActive"
										value="${c:l('label_SubSegmentSearch_SubSegmentIsActive.value')}" />
									<listbox
										id="sortOperator_subSegmentIsActive" width="43px"
										mold="select" rows="1" />
									<checkbox id="subSegmentIsActive"
										checked="false" />
								</row>
								<row id="row_AlwWorkflow">
									<label
										id="label_SubSegmentSearch_RecordStatus"
										value="${c:l('label_SubSegmentSearch_RecordStatus.value')}" />
									<listbox
										id="sortOperator_RecordStatus" width="43px" mold="select"
										rows="1" />
									<textbox id="recordStatus"
										width="100px" maxlength="50" />
									<label
										id="label_SubSegmentSearch_RecordType"
										value="${c:l('label_SubSegmentSearch_RecordType.value')}" />
									<listbox
										id="sortOperator_RecordType" width="43px" mold="select"
										rows="1" />
									<listbox id="recordType"
										width="100px" mold="select" />
								</row>
							</rows>
						</grid>
						<listbox id="listBoxSubSegment"
							emptyMessage="${c:l('listbox.emptyMessage')}"
							tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
							height="100%" multiple="false" sizedByContent="true"
							span="true">
							<listhead sizable="true">
								<listheader id="listheader_SegmentCode"
									label="${c:l('listheader_SegmentCode.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_SubSegmentCode"
									label="${c:l('listheader_SubSegmentCode.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_SubSegmentDesc"
									label="${c:l('listheader_SubSegmentDesc.label')}" sort="auto"
									hflex="min" />
								<listheader
									id="listheader_SubSegmentIsActive"
									label="${c:l('listheader_SubSegmentIsActive.label')}"
									sort="auto" hflex="min" />
								<listheader id="listheader_RecordStatus"
									label="${c:l('listheader_RecordStatus.label')}" sort="auto"
									hflex="min" />
								<listheader id="listheader_RecordType"
									label="${c:l('listheader_RecordType.label')}" sort="auto"
									hflex="min" />
							</listhead>
						</listbox>
					</div>
				</center>
				<south border="none">
					<paging id="pagingSubSegmentList" />
				</south>
			</borderlayout>
		</window>
	</window>
</zk>