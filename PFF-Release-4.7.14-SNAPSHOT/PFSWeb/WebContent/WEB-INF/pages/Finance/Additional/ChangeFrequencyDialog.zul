<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_ChangeFrequencyDialog" border="normal"
		apply="${changeFrequencyDialogCtrl}" width="650px" height="250px"
		sizable="false" title="${c:l('window_ChangeFrequencyDialog.title')}"  closable="true">

		<borderlayout id="borderlayoutFrequency">
			<center border="none" autoscroll="true">

				<groupbox id="gb_FrequencyDetails" height="170px" style="border:1px solid #F38C60;">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true" style="border:0px">
						<columns>
							<column width="220px" />
                            <column />
						</columns>
						<rows>
							<row>
								<label
									id="label_ChangeFrequencyDialog_RepayFrq"
									value="${c:l('label_ChangeFrequencyDialog_RepayFrq.value')}" />
								<frequencybox id="repayFrq" />
							</row>
							<row>
								<label
									id="label_ChangeFrequencyDialog_FromDate"
									value="${c:l('label_ChangeFrequencyDialog_FromDate.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<combobox id="cbFrqFromDate"
										readonly="true" width="144px">
									</combobox>
								</hbox>
							</row>
							<row id="row_GrcPeriodEndDate" visible="false">
								<label
									id="label_ChangeFrequencyDialog_GrcPeriodEndDate"
									value="${c:l('label_ChangeFrequencyDialog_GrcPeriodEndDate.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<datebox id="grcPeriodEndDate"
										width="120px" />
								</hbox>
							</row>
							<row id="row_grcNextRepayDate" visible="false">
								<label
									id="label_ChangeFrequencyDialog_NextGrcRepayDate"
									value="${c:l('label_ChangeFrequencyDialog_NextGrcRepayDate.value')}" />
								<hbox>
									<space spacing="2px" />
									<datebox id="nextGrcRepayDate"
										width="120px" />
								</hbox>
							</row>
							<row visible="false">
								<label
									id="label_ChangeFrequencyDialog_NextRepayDate"
									value="${c:l('label_ChangeFrequencyDialog_NextRepayDate.value')}" />
								<hbox>
									<space spacing="2px" />
									<datebox id="nextRepayDate"
										width="120px" />
								</hbox>
							</row>
							<row visible="false">
								<label
									id="label_ChangeFrequencyDialog_ProfitIntact"
									value="${c:l('label_ChangeFrequencyDialog_ProfitIntact.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="pftIntact" />
								</hbox>
							</row>
							<row>
								<label
									id="label_ChangeFrequencyDialog_ServiceReqNo"
									value="${c:l('label_ChangeFrequencyDialog_ServiceReqNo.value')}" />
								<hbox>
									<space spacing="2px"
										id="space_serviceReqNo" />
									<uppercasebox id="serviceReqNo"
										width="170px" visible="true" />
								</hbox>
							</row>
							<row>
								<label
									id="label_ChangeFrequencyDialog_Remarks"
									value="${c:l('label_ChangeFrequencyDialog_Remarks.value')}" />
								<hbox>
									<space spacing="2px" />
									<textbox id="remarks"
										maxlength="200" width="250px" rows="2" />
								</hbox>
							</row>
						</rows>
					</grid>
				</groupbox>
			</center>
			<south border="none" margins="1,0,0,0" size="30px"
				splittable="false">
				<div id="divSouth" align="left" width="100%">
					<grid>
						<rows>
							<row valign="middle">
								<hbox align="start">
									<button id="btnChangeFrq"
										 label="${c:l('btnChangeFrq.label')}"
										tooltiptext="${c:l('btnChangeFrq.tooltiptext')}" />
									<button id="btnClose" 
										label="${c:l('btnClose.label')}"
										tooltiptext="${c:l('btnClose.tooltiptext')}" />
								</hbox>
							</row>
						</rows>
					</grid>
				</div>
			</south>
		</borderlayout>
	</window>
</zk>