<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CustomerIncomeList"
		apply="${customerIncomeListCtrl}" border="none" width="100%">

		<div sclass="z-toolbar" style="padding:0px" height="28px">
			<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
				width="100%" widths="30%,40%,30%">

				<!-- COMMON BUTTONS -->
				<label value="" />

				<!-- SEARCH AREA -->
				<toolbar align="center" sclass="toolbar-center">
					<button
						id="button_CustomerIncomeList_CustomerIncomeSearchDialog"
						 label="${c:l('label_Filter')}"
						autodisable="button_CustomerIncomeList_CustomerIncomeSearchDialog,print,
									button_CustomerIncomeList_NewCustomerIncome,btnRefresh,help"
						tooltiptext="${c:l('button_CustomerIncomeList_CustomerIncomeSearchDialog.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="print"
						 label="${c:l('label_Print')}"
						autodisable="button_CustomerIncomeList_CustomerIncomeSearchDialog,print,
									button_CustomerIncomeList_NewCustomerIncome,btnRefresh,help"
						tooltiptext="${c:l('print.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>

				<!-- CRUD BUTTONS -->
				<toolbar align="end" sclass="toolbar-end">
					<button
						id="button_CustomerIncomeList_NewCustomerIncome" 
						label="${c:l('label_New')}"
						autodisable="button_CustomerIncomeList_CustomerIncomeSearchDialog,print,
									button_CustomerIncomeList_NewCustomerIncome,btnRefresh,help"
						tooltiptext="${c:l('button_CustomerIncomeList_NewCustomerIncome.tooltiptext')}" sclass="z-toolbarbutton" />
					<button id="btnRefresh" 
						label="${c:l('label_Refresh')}"
						autodisable="button_CustomerIncomeList_CustomerIncomeSearchDialog,print,
									button_CustomerIncomeList_NewCustomerIncome,btnRefresh,help"
						tooltiptext="${c:l('btnRefresh.tooltiptext')}"  sclass="z-toolbarbutton" />
					<button id="help" visible="false" 
						label="${c:l('label_Help')}"
						autodisable="button_CustomerIncomeList_CustomerIncomeSearchDialog,print,
									button_CustomerIncomeList_NewCustomerIncome,btnRefresh,help"
						tooltiptext="${c:l('help.tooltiptext')}" sclass="z-toolbarbutton" />
				</toolbar>
			</hbox>
		</div>

		<borderlayout id="borderLayout_CustomerIncomeList">
			<north border="none" />
			<center border="none">
				<div>
					<grid id="searchGrid" sclass="GridLayoutNoBorder"
						fixedLayout="true"
						style="border:0px; padding-left:5px; padding-right:5px;">
						<columns>
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
							<column width="17%" />
							<column width="5%" />
							<column width="28%" />
						</columns>
						<rows>
							<row>
								<label
									id="label_CustomerIncomeSearch_CustCIF"
									value="${c:l('label_CustomerIncomeSearch_CustCIF.value')}" />
								<listbox id="sortOperator_custCIF"
									width="43px" mold="select" rows="1" />
								<textbox id="custCIF" width="150px"
									maxlength="19" />
								<label
									id="label_CustomerIncomeSearch_CustIncomeType"
									value="${c:l('label_CustomerIncomeSearch_CustIncomeType.value')}" />
								<listbox
									id="sortOperator_custIncomeType" width="43px" mold="select"
									rows="1" />
								<textbox id="custIncomeType"
									width="150px" maxlength="8" />
							</row>
							<row>
								<label
									id="label_CustomerIncomeSearch_CustIncome"
									value="${c:l('label_CustomerIncomeSearch_CustIncome.value')}" />
								<listbox id="sortOperator_custIncome"
									width="43px" mold="select" rows="1" />
								<decimalbox id="custIncome"
									width="150px" maxlength="18" />
								<label
									id="label_CustomerIncomeSearch_CustIncomeCountry"
									value="${c:l('label_CustomerIncomeSearch_CustIncomeCountry.value')}" />
								<listbox
									id="sortOperator_custIncomeCountry" width="43px" mold="select"
									rows="1" />
								<textbox id="custIncomeCountry"
									width="150px" maxlength="2" />
							</row>
							<row>
								<label
									id="label_CustomerIncomeSearch_JointCust"
									value="${c:l('label_JointCust')}" />
								<listbox id="sortOperator_jointCust" width="43px" mold="select" rows="1" />
								<checkbox id="jointCust" />
							</row>
							<row id="row_AlwWorkflow">
								<label
									id="label_CustomerIncomeSearch_RecordStatus"
									value="${c:l('label_CustomerIncomeSearch_RecordStatus.value')}" />
								<listbox id="sortOperator_RecordStatus"
									width="43px" mold="select" rows="1" />
								<textbox id="recordStatus" width="150px"
									maxlength="50" />
								<label
									id="label_CustomerIncomeSearch_RecordType"
									value="${c:l('label_CustomerIncomeSearch_RecordType.value')}" />
								<listbox id="sortOperator_RecordType"
									width="43px" mold="select" rows="1" />
								<listbox id="recordType" width="150px"
									mold="select" />
							</row>
						</rows>
					</grid>
					<listbox id="listBoxCustomerIncome"
						fixedLayout="true"   style="white-space:nowrap;"
						sizedByContent="true" span="true"
						tooltiptext="${c:l('listbox.tooltiptext')}" width="100%"
						height="100%" multiple="false"
						emptyMessage="${c:l('listbox.emptyMessage')}">
						<listhead sizable="true">
							<listheader id="listheader_CustCIF"
								label="${c:l('listheader_CustCIF.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustIncomeType"
								label="${c:l('listheader_CustIncomeType.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_JointCust"
								label="${c:l('listheader_JointCust.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_CustIncome" 
								label="${c:l('listheader_CustIncome.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordStatus"
								label="${c:l('listheader_RecordStatus.label')}" sort="auto"
								hflex="min" />
							<listheader id="listheader_RecordType"
								label="${c:l('listheader_RecordType.label')}" sort="auto"
								hflex="min" />
						</listhead>
					</listbox>
				</div>
			</center>
			<south border="none">
				<paging id="pagingCustomerIncomeList" />
			</south>

		</borderlayout>
	</window>
</zk>