<?xml version="1.0" encoding="UTF-8"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>
<?variable-resolver class="org.zkoss.zkplus.spring.DelegatingVariableResolver"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<window id="window_CurrencyDialog" border="normal"
		apply="${currencyDialogCtrl}" width="100%" height="100%"
		sizable="false">


		<borderlayout id="borderlayoutCurrency">
			<north>

				<div sclass="z-toolbar">
					<hbox pack="stretch" sclass="hboxRemoveWhiteStrips"
						width="100%" widths="35%,30%,35%">

						<!-- COMMON BUTTONS -->
						<toolbar align="start" sclass="toolbar-start">
							<button id="btnNew" 
								tooltiptext="${c:l('btnNew.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnEdit" 
								tooltiptext="${c:l('btnEdit.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnDelete" 
								tooltiptext="${c:l('btnDelete.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnSave" 
								tooltiptext="${c:l('btnSave.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnCancel" 
								tooltiptext="${c:l('btnCancel.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnNotes" 
								tooltiptext="${c:l('btnNotes.tooltiptext')}" visible="false" sclass="z-toolbarbutton" />
						</toolbar>

						<!-- SEARCH AREA -->
						<toolbar align="center"
							sclass="toolbar-center">
							<label
								value="${c:l('window_CurrencyDialog.title')}"
								sclass="label-heading" />
						</toolbar>

						<!-- CRUD BUTTONS -->
						<toolbar align="end" sclass="toolbar-end">
							<button id="btnHelp" visible="false" 
								label="${c:l('label_Help')}"
								tooltiptext="${c:l('btnHelp.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
							<button id="btnClose" 
								tooltiptext="${c:l('btnClose.tooltiptext')}"
								autodisable="btnNew,btnEdit,btnDelete,btnSave,btnCancel,btnNotes,btnHelp,btnClose" sclass="z-toolbarbutton" />
						</toolbar>
					</hbox>
				</div>
			</north>

			<center border="none" autoscroll="false">

				<groupbox id="gb_basicDetails" sclass="gb-dialog">
					<grid sclass="GridLayoutNoBorder" fixedLayout="true"
						style="border:0px">
						<columns>
							<column width="200px" />
							<column />
							<column width="200px" />
							<column />
						</columns>
						<rows>
							<row visible="true">
								<label id="label_CurrencyDialog_CcyCode"
									value="${c:l('label_CurrencyDialog_CcyCode.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<uppercasebox id="ccyCode"
										maxlength="3" width="60px" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyNumber"
									value="${c:l('label_CurrencyDialog_CcyNumber.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="ccyNumber"
										maxlength="3" width="60px" />
								</hbox>
							</row>
							<row visible="true">
								<label id="label_CurrencyDialog_CcyDesc"
									value="${c:l('label_CurrencyDialog_CcyDesc.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="ccyDesc" maxlength="50"
										width="250px" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcySwiftCode"
									value="${c:l('label_CurrencyDialog_CcySwiftCode.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<uppercasebox id="ccySwiftCode"
										maxlength="3" width="60px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyEditField"
									value="${c:l('label_CurrencyDialog_CcyEditField.value')}" />
								<hbox>
									<space spacing="2px" />
									<intbox id="ccyEditField"
										width="60px" maxlength="1" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyMinorCcyUnits"
									value="${c:l('label_CurrencyDialog_CcyMinorCcyUnits.value')}" />
								<hbox>
									<space spacing="2px" />
									<decimalbox id="ccyMinorCcyUnits"
										width="60px" maxlength="7" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcySymbol"
									value="${c:l('label_CurrencyDialog_CcySymbol.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<uppercasebox id="ccySymbol"
										maxlength="3" width="60px" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyMinorCcyDesc"
									value="${c:l('label_CurrencyDialog_CcyMinorCcyDesc.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<textbox id="ccyMinorCcyDesc"
										maxlength="50" width="250px" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyDrRateBasisCode"
									value="${c:l('label_CurrencyDialog_CcyDrRateBasisCode.value')}" />
										<extendedcombobox id = "ccyDrRateBasisCode" />
								<label
									id="label_CurrencyDialog_CcyCrRateBasisCode"
									value="${c:l('label_CurrencyDialog_CcyCrRateBasisCode.value')}" />
								<extendedcombobox id = "ccyCrRateBasisCode" />
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcySpotRate"
									value="${c:l('label_CurrencyDialog_CcySpotRate.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<decimalbox id="ccySpotRate"
										width="250px" maxlength="18" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyIsReceprocal"
									value="${c:l('label_CurrencyDialog_CcyIsReceprocal.value')}" />
								<hbox>
								<space spacing="2px" />
									<checkbox id="ccyIsReceprocal"
										checked="false" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyUserRateBuy"
									value="${c:l('label_CurrencyDialog_CcyUserRateBuy.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<decimalbox id="ccyUserRateBuy"
										width="250px" maxlength="18" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyUserRateSell"
									value="${c:l('label_CurrencyDialog_CcyUserRateSell.value')}" />
								<hbox>
									<space spacing="2px"
										sclass="mandatory" />
									<decimalbox id="ccyUserRateSell"
										width="250px" maxlength="18" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyIsIntRounding"
									value="${c:l('label_CurrencyDialog_CcyIsIntRounding.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsIntRounding"
										checked="false" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyIsMember"
									value="${c:l('label_CurrencyDialog_CcyIsMember.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsMember"
										checked="false" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyIsGroup"
									value="${c:l('label_CurrencyDialog_CcyIsGroup.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsGroup"
										checked="false" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyIsAlwForLoans"
									value="${c:l('label_CurrencyDialog_CcyIsAlwForLoans.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsAlwForLoans"
										checked="false" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyIsAlwForDepo"
									value="${c:l('label_CurrencyDialog_CcyIsAlwForDepo.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsAlwForDepo"
										checked="false" />
								</hbox>
								<label
									id="label_CurrencyDialog_CcyIsAlwForAc"
									value="${c:l('label_CurrencyDialog_CcyIsAlwForAc.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsAlwForAc"
										checked="false" />
								</hbox>
							</row>
							<row visible="true">
								<label
									id="label_CurrencyDialog_CcyIsActive"
									value="${c:l('label_CurrencyDialog_CcyIsActive.value')}" />
								<hbox>
									<space spacing="2px" />
									<checkbox id="ccyIsActive"
										checked="false" />
								</hbox>
							</row>
						</rows>
					</grid>
				</groupbox>
			</center>

			<south sclass="south-dialog">
				<groupbox id="groupboxWf" width="99%">
					<caption label="${c:l('Action')}" />
					<hbox width="75%">
						<radiogroup id="userAction" name="action" />
						<label id="label_CurrencyDialog_RecordStatus"
							value="${c:l('label_South_RecordStatus.value')}"
							sclass="label-status" />
						<label id="recordStatus" />
					</hbox>
				</groupbox>
			</south>

		</borderlayout>
	</window>
</zk>
