<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop" xmlns:tx="http://www.springframework.org/schema/tx"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/aop
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd
		http://www.springframework.org/schema/tx
		http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
		http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<bean id="interfaceLoggingDAO" class="com.pennanttech.pff.logging.dao.impl.InterfaceLoggingDAOImpl" parent="basicDao" />
	<bean id="creditInterfaceDAOImpl" class="com.pennanttech.pff.dao.impl.CreditInterfaceDAOImpl" parent="basicDao">
		<property name="transactionManager" ref="transactionManager" />
	</bean>

	<bean id="abstractInterface" class="com.pennanttech.pff.external.AbstractInterface" abstract="true">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="defaultMandateProcess" class="com.pennanttech.pff.external.mandate.DefaultMandateProcess" parent="abstractInterface" />
	<bean id="defaultPresentmentRequest" class="com.pennanttech.pff.external.presentment.DefaultPresentmentRequest"
		parent="abstractInterface" />
	<bean id="defaultDisbursementRequest" class="com.pennanttech.pff.external.disbursment.DefaultDisbursementRequest"
		parent="abstractInterface" />
	<bean id="defaultDisbursementResponse" class="com.pennanttech.pff.external.disbursment.DefaultDisbursementResponse"
		parent="abstractInterface" />

	<!-- The below bean configurations should be in implementation layer only if required. -->
	<bean id="creditInformation" class="com.pennanttech.pff.external.creditInformation.AbstractCibilEnquiryProcess"
		parent="abstractInterface" />
	<bean id="abstractDMSIntegration" class="com.pennanttech.pff.external.creditInformation.AbstractDMSIntegrationService"
		abstract="true" parent="abstractInterface" />
	<bean id="dmsIdentificationDAO" class="com.pennant.backend.dao.dms.impl.DMSIdentificationDAOImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="dmsAddDocJob" class="com.pennanttech.pff.schedule.jobs.DMSAddDocJob" />
	<bean id="dmsAddDocJobProcess" class="com.pennanttech.pff.process.DMSAddDocJobProcess">
		<property name="retryCount" value="${dms.document.retrycount}" />
		<property name="threadCount" value="${dms.thread.count}" />
		<property name="threadAwaitPeroid" value="${dms.thread.seconds.timeout}" />
	</bean>

	<bean id="collectionDataDownloadProcess" class="com.pennanttech.pff.process.collection.CollectionDataDownloadProcess">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- <bean id="idbInterfaceLoggingDao" class="com.pennanttech.kotak.dao.impl.IDBInterfaceLoggingDaoImpl" parent="sequenceDao" 
		> </bean> -->

	<bean id="extendedFieldMappingUtil" class="com.pennanttech.extendedfield.ExtendedFieldMappingUtil">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="vocherDownloadService" class="com.pennanttech.pff.external.gl.VocherDownloadServiceImpl">
		<property name="dataSource" ref="dataSource" />
	</bean>
		
    <!--  PAN Validation Service-->
    <bean id="primaryAccountService" class="com.pennanttech.pff.external.pan.service.PrimaryAccountServiceImpl" />
	
	<bean name="externalServiceStatus" class="com.pennanttech.external.services.sExternalServiceStatus">
		<property name="dataSource" ref="dataSource" />
	</bean>
</beans>